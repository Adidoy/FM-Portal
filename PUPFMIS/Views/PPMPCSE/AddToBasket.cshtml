@model PUPFMIS.Models.BasketItem

@{
    ViewBag.Title = "Common Supplies";
    ViewBag.Description = "Add to Basket";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Procurement Plans", "dashboard", "PPMP")</li>
        <li class="breadcrumb-item">Common Supplies Basket</li>
    </ol>
} </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-bookmark"></i> @Model.ItemName.ToString().ToUpper() @( (String.IsNullOrEmpty(Model.ItemShortSpecifications)) ? "" : Model.ItemShortSpecifications ) <span><small>(@Model.ItemCode)</small></span></h3>
}

@using (Html.BeginForm("add-to-basket", "PPMPCSE", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-12">
            @Html.HiddenFor(m => m.ItemID)
            @Html.HiddenFor(m => m.ItemCode)
            @Html.HiddenFor(m => m.ItemName)
            @Html.HiddenFor(m => m.ItemShortSpecifications)
            @Html.HiddenFor(m => m.ItemSpecifications)
            @Html.HiddenFor(m => m.ItemImage)
            @Html.HiddenFor(m => m.ProcurementSource)
            @Html.HiddenFor(m => m.IndividualUOMReference)
            @Html.HiddenFor(m => m.MinimumIssuanceQty)
            @Html.HiddenFor(m => m.ItemCategory)
            @Html.HiddenFor(m => m.TotalConsumption)
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group-sm">
                        <div class="mt-3" style="text-align:center; vertical-align: middle;" id="itemImageHolder">
                            @if (Model.ItemImage != null)
                            {
                                var base64 = Convert.ToBase64String(Model.ItemImage);
                                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                                <img src='@imgsrc' style="max-width:175px; max-height:175px;" />
                            }
                            else
                            {
                                <img src="@Url.Content("~/Content/imgs/PUPLogo.png")" style="max-width:175px; max-height:175px;" />
                            }
                        </div>
                    </div>
                </div>
                <div class="col-sm-9">
                    <div class="row">
                        <div class="col-sm-12">
                            <h4>@Model.ItemName.ToString().ToUpper() @( (String.IsNullOrEmpty(Model.ItemShortSpecifications)) ? "" : Model.ItemShortSpecifications ) <span><small><b>(@Model.ItemCode)</b></small></span></h4>
                            <hr />
                            <h6>ITEM SPECIFICATIONS:</h6>
                            <p style="text-align:justify;">@Model.ItemSpecifications</p>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <div class="row">
                <div class="col-sm-12">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger", style = "font-size: 12pt;" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(d => d.ProcurementSource)
                        </div>
                        <div class="col-sm-1">
                            :
                        </div>
                        <div class="col-sm-5">
                            @( Model.ProcurementSource == PUPFMIS.Models.ProcurementSources.PS_DBM ? "DBM Procurement Store" : "Private Suppliers" )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(d => d.IndividualUOMReference)
                        </div>
                        <div class="col-sm-1">
                            :
                        </div>
                        <div class="col-sm-5">
                            @Model.IndividualUOMReference
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(d => d.ItemCategory)
                        </div>
                        <div class="col-sm-1">
                            :
                        </div>
                        <div class="col-sm-5">
                            @Model.ItemCategory
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(d => d.MinimumIssuanceQty)
                        </div>
                        <div class="col-sm-1">
                            :
                        </div>
                        <div class="col-sm-5">
                            @Model.MinimumIssuanceQty
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(d => d.TotalConsumption)
                        </div>
                        <div class="col-sm-1">
                            :
                        </div>
                        <div class="col-sm-5">
                            @Model.TotalConsumption
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card card-info card-outline">
                                <div class="card-header">
                                    <h3 class="card-title">QUANTITY INFORMATION:</h3>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group-sm">
                                                <div class="input-group input-group-sm mb-3">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text"><b>Q1</b></span>
                                                    </div>
                                                    @Html.EditorFor(m => m.Qtr1Qty, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%;", type = "number" } })
                                                </div>
                                                @Html.ValidationMessageFor(model => model.Qtr1Qty, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group-sm">
                                                <div class="input-group input-group-sm mb-3">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text"><b>Q2</b></span>
                                                    </div>
                                                    @Html.EditorFor(m => m.Qtr2Qty, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%;", type = "number" } })
                                                </div>
                                                @Html.ValidationMessageFor(model => model.Qtr2Qty, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group-sm">
                                                <div class="input-group input-group-sm mb-3">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text"><b>Q3</b></span>
                                                    </div>
                                                    @Html.EditorFor(m => m.Qtr3Qty, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%;", type = "number" } })
                                                </div>
                                                @Html.ValidationMessageFor(model => model.Qtr3Qty, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group-sm">
                                                <div class="input-group input-group-sm mb-3">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text"><b>Q4</b></span>
                                                    </div>
                                                    @Html.EditorFor(m => m.Qtr4Qty, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%;", type = "number" } })
                                                </div>
                                                @Html.ValidationMessageFor(model => model.Qtr4Qty, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @if (ViewBag.NeedsJustification == true)
            {
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholde = "Enter the justification here..." } })
                            @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            }
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div style="text-align: right;">
                <button type="submit" class="btn btn-md btn-success"> <i class="fa fa-plus"></i> Add to Basket</button>
                
                <button type="button" class="btn btn-md btn-danger" onclick='window.location = "@Url.Action("catalogue", "PPMPCSE")"'> <i class="fa fa-arrow-circle-left"></i> Back to Catalogue</button>
            </div>
        </div>
    </div>
}