@model PUPFMIS.Models.Basket

@{
    ViewBag.Title = "Common Supplies";
    ViewBag.Description = "Basket";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Procurement Plans", "dashboard", "PPMP")</li>
        <li class="breadcrumb-item">Common Supplies Basket</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Basket Items</h3>
}

@using (Html.BeginForm("save", "PPMPCSE", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-12">
            <h5>Project Details</h5>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="row">
                <div class="col-sm-4">
                    @Html.LabelFor(model => model.BasketHeader.ProjectName) :
                </div>
                <div class="col-sm-8">
                    @Html.HiddenFor(model => model.BasketHeader.ProjectName)
                    @Html.DisplayFor(model => model.BasketHeader.ProjectName)
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="row">
                <div class="col-sm-4">
                    @Html.LabelFor(model => model.BasketHeader.FiscalYear) :
                </div>
                <div class="col-sm-8">
                    @Html.HiddenFor(model => model.BasketHeader.FiscalYear)
                    @Html.DisplayFor(model => model.BasketHeader.FiscalYear)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="row">
                <div class="col-sm-4">
                    @Html.LabelFor(model => model.BasketHeader.Description) :
                </div>
                <div class="col-sm-8">
                    @Html.HiddenFor(model => model.BasketHeader.Description)
                    @Html.DisplayFor(model => model.BasketHeader.Description)
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="row">
                <div class="col-sm-4">
                    @Html.LabelFor(model => model.BasketHeader.ProjectMonthStart) :
                </div>
                <div class="col-sm-8">
                    @Html.HiddenFor(model => model.BasketHeader.ProjectMonthStart)
                    @Html.DisplayFor(model => model.BasketHeader.ProjectMonthStart)
                </div>
            </div>
        </div>
    </div>
    <br /><br />
    <div class="row">
        <div class="col-sm-12">
            <h5>Line Items</h5>
            <hr />
        </div>
    </div>
    <br /><br />
    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-body table-responsive p-sm-0">
                        <table class="table table-striped table-hover" id="basket">
                            <thead>
                                <tr>
                                    <th rowspan="2" style="text-align:center; vertical-align: middle;" width="50%">
                                        Item Specifications
                                    </th>
                                    <th colspan="5" style="text-align:center; vertical-align: middle;">
                                        Quantity Requirement
                                    </th>
                                    <th rowspan="2" style="text-align:center; vertical-align: middle;" width="15%">
                                        Action
                                    </th>
                                </tr>
                                <tr>
                                    <th style="text-align:center; vertical-align: middle;" width="7%">Qtr 1</th>
                                    <th style="text-align:center; vertical-align: middle;" width="7%">Qtr 2</th>
                                    <th style="text-align:center; vertical-align: middle;" width="7%">Qtr 3</th>
                                    <th style="text-align:center; vertical-align: middle;" width="7%">Qtr 4</th>
                                    <th style="text-align:center; vertical-align: middle;" width="7%">Total<br />Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.BasketItems != null)
                                {
                                    var basketItems = Model.BasketItems;
                                    for (var item = 0; item < basketItems.Count; item++)
                                    {
                                        <tr>
                                            <td style="vertical-align: middle;">
                                                <b>@basketItems[item].ItemName</b>
                                                @Html.HiddenFor(m => basketItems[item].ItemID)
                                                @Html.HiddenFor(m => basketItems[item].ItemCode)
                                                @Html.HiddenFor(m => basketItems[item].ItemName)
                                                @Html.HiddenFor(m => basketItems[item].ItemShortSpecifications)
                                                @Html.HiddenFor(m => basketItems[item].ItemSpecifications)
                                                @Html.HiddenFor(m => basketItems[item].ItemImage)
                                                @Html.HiddenFor(m => basketItems[item].ProcurementSource)
                                                @Html.HiddenFor(m => basketItems[item].IndividualUOMReference)
                                                @Html.HiddenFor(m => basketItems[item].MinimumIssuanceQty)
                                                @Html.HiddenFor(m => basketItems[item].ItemCategory)
                                                @Html.HiddenFor(m => basketItems[item].Remarks)
                                                @( (String.IsNullOrEmpty(basketItems[item].ItemShortSpecifications)) ? "" : basketItems[item].ItemShortSpecifications ) <small>(@basketItems[item].ItemCode)</small>
                                                @if (basketItems[item].Remarks != "Acceptable")
                                                {
                                                    <br />
                                                    <small style="color:red; font-size:8pt;">
                                                        <i>***@Html.DisplayFor(m => basketItems[item].Remarks)</i>
                                                    </small>
                                                }
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Html.HiddenFor(m => basketItems[item].Qtr1Qty)
                                                @basketItems[item].Qtr1Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Html.HiddenFor(m => basketItems[item].Qtr2Qty)
                                                @basketItems[item].Qtr2Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Html.HiddenFor(m => basketItems[item].Qtr3Qty)
                                                @basketItems[item].Qtr3Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Html.HiddenFor(m => basketItems[item].Qtr4Qty)
                                                @basketItems[item].Qtr4Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Html.HiddenFor(m => basketItems[item].TotalQty)
                                                @basketItems[item].TotalQty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                <button type="button" class="btn btn-sm btn-danger" id="remove-btn" onclick="window.location.href = '@Url.Action("remove-from-basket", "PPMPCSE", new { ItemCode = basketItems[item].ItemCode })'"><i class="fa fa-times"></i></button>
                                                <button type="button" class="btn btn-sm btn-warning" onclick="window.location = '@Url.Action("update-basket-item", "PPMPCSE", new { ItemCode = basketItems[item].ItemCode })'"><i class="fa fa-edit"></i></button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" align="center">
                                            <h5>*** No items ***</h5>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br /><br />
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group float-right">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save Common Supplies Plan</button>
                <button type="button" class="btn btn-danger" onclick='window.location = "@Url.Action("catalogue", "PPMPCSE")"'><i class="fa fa-arrow-circle-left"></i> Back to Catalogue</button>
            </div>
        </div>
    </div>
}

<script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $('#basket').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
</script>
