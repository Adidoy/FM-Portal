@model IEnumerable<PUPFMIS.Models.PullOutVM>

@{
    ViewBag.Title = "Warehouse Management";
    ViewBag.Description = "Items Dispatch";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Item Dispatch", "index")</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-right">
        <h3 class="card-title"><i class="fa fa-list-ul"></i> Item Dispatch</h3>
    </div>
}

<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <button style="text-align:left;" class="btn btn-info btn-md" onclick='window.location = "@Url.Action("create", "ItemPullOuts")"'><i class="fa fa-share-alt"></i> Request Inventory Pull-out</button>
        </div>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th>
                            Queue No.
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TrxDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RequestingStaff)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Purpose)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="vertical-align:middle; text-align:center;"><h4>01</h4></td>
                        <td style="vertical-align:middle;">@DateTime.Now.ToString("dd MMMM yyyy hh:mm tt")</td>
                        <td style="vertical-align:middle;">PSMO Issuing Officer</td>
                        <td style="vertical-align:middle;">Items Issuance - Supplies</td>
                        <td style="vertical-align:middle; text-align:center;">
                            <button class="btn btn-primary" type="button" style="font-size:100%;" onclick="window.location = '@Url.Action("details", "ItemPullouts", new { id = 0 })'"><i class="fa fa-hands-helping"></i> Assemble Items</button>
                        </td>
                    </tr>
                    <tr>
                        <td style="vertical-align:middle; text-align:center;"><h4>02</h4></td>
                        <td style="vertical-align:middle;">@DateTime.Now.ToString("dd MMMM yyyy hh:mm tt")</td>
                        <td style="vertical-align:middle;">PSMO Issuing Officer</td>
                        <td style="vertical-align:middle;">Items Issuance - Supplies</td>
                        <td style="vertical-align:middle; text-align:center;">
                            <button class="btn btn-primary" type="button" style="font-size:100%;" onclick="window.location = '@Url.Action("details", "ItemPullouts", new { id = 0 })'"><i class="fa fa-hands-helping"></i> Assemble Items</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
