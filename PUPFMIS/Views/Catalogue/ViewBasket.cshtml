@model IEnumerable<PUPFMIS.Models.Basket>

@{
    ViewBag.Title = ViewBag.PageTitle;
    ViewBag.Description = "Items Basket";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@ViewBag.PageTitle</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Basket Items</h3>
}

@Html.BeginForm("create", "PPMP", FormMethod.Post)
    <div class="row">
        <div class="col-sm-12">
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-body table-responsive p-sm-0">
                        <table class="table table-striped table-hover" id="basket">
                            <thead>
                                <tr>
                                    <th rowspan="2" style="text-align:center; vertical-align: middle;" width="23%">
                                        Item Specifications
                                    </th>
                                    <th colspan="5" style="text-align:center; vertical-align: middle;">
                                        Quantity Requirement
                                    </th>
                                    <th rowspan="2" style="text-align:center; vertical-align: middle;" width="7%">Total<br />Consumption</th>
                                    <th rowspan="2" style="text-align:center; vertical-align: middle;" width="20%">Remarks/<br />Justifications</th>
                                    <th rowspan="2" style="text-align:center; vertical-align: middle;" width="15%">
                                        Action
                                    </th>
                                </tr>
                                <tr>
                                    <th style="text-align:center; vertical-align: middle;" width="7%">Qtr 1</th>
                                    <th style="text-align:center; vertical-align: middle;" width="7%">Qtr 2</th>
                                    <th style="text-align:center; vertical-align: middle;" width="7%">Qtr 3</th>
                                    <th style="text-align:center; vertical-align: middle;" width="7%">Qtr 4</th>
                                    <th style="text-align:center; vertical-align: middle;" width="7%">Total<br />Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    var basketItems = Model.ToList();
                                    for (int i = 0; i < basketItems.Count; i++)
                                    {
                                        if (basketItems[i].TotalQty > basketItems[i].TotalConsumption && !String.IsNullOrEmpty(basketItems[i].TotalConsumption.ToString()))
                                        {
                                            <tr style="background-color:lightpink; color:red;">
                                                <td style="vertical-align: middle;">
                                                    <b>@basketItems[i].ItemName</b>
                                                    @Html.HiddenFor(m => basketItems[i].ItemID)
                                                    @Html.HiddenFor(m => basketItems[i].ItemCode)
                                                    @Html.HiddenFor(m => basketItems[i].ItemName)
                                                    @Html.HiddenFor(m => basketItems[i].ItemShortSpecifications)
                                                    @Html.HiddenFor(m => basketItems[i].ItemSpecifications)
                                                    @Html.HiddenFor(m => basketItems[i].ItemImage)
                                                    @Html.HiddenFor(m => basketItems[i].ProcurementSource)
                                                    @Html.HiddenFor(m => basketItems[i].IndividualUOMReference)
                                                    @Html.HiddenFor(m => basketItems[i].MinimumIssuanceQty)
                                                    @Html.HiddenFor(m => basketItems[i].ItemCategory)
                                                    @Html.HiddenFor(m => basketItems[i].TotalConsumption)
                                                    @Html.HiddenFor(m => basketItems[i].Qtr1Qty)
                                                    @Html.HiddenFor(m => basketItems[i].Qtr2Qty)
                                                    @Html.HiddenFor(m => basketItems[i].Qtr3Qty)
                                                    @Html.HiddenFor(m => basketItems[i].Qtr4Qty)
                                                    @Html.HiddenFor(m => basketItems[i].TotalQty)

                                                    @( (String.IsNullOrEmpty(basketItems[i].ItemShortSpecifications)) ? "" : basketItems[i].ItemShortSpecifications ) <small>(@basketItems[i].ItemCode)</small>
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @basketItems[i].Qtr1Qty
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @basketItems[i].Qtr2Qty
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @basketItems[i].Qtr3Qty
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @basketItems[i].Qtr4Qty
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @basketItems[i].TotalQty
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @basketItems[i].TotalConsumption
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @Html.EditorFor(model => basketItems[i].Remarks, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%;" } })
                                                    @Html.ValidationMessageFor(model => basketItems[i].Remarks, "", new { @class = "text-danger" })
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @using (Html.BeginForm("remove-from-basket", "Catalogue", new { ItemCode = basketItems[i].ItemCode }, FormMethod.Post))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button>
                                                        <button type="button" class="btn btn-sm btn-warning" onclick="window.location = '@Url.Action("update-basket", "Catalogue", new { ItemCode = basketItems[i].ItemCode })'"><i class="fa fa-edit"></i></button>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <tr>
                                                <td style="vertical-align: middle;"><b>@basketItems[i].ItemName</b> 
                                                    @Html.HiddenFor(m => basketItems[i].ItemID)
                                                    @Html.HiddenFor(m => basketItems[i].ItemCode)
                                                    @Html.HiddenFor(m => basketItems[i].ItemName)
                                                    @Html.HiddenFor(m => basketItems[i].ItemShortSpecifications)
                                                    @Html.HiddenFor(m => basketItems[i].ItemSpecifications)
                                                    @Html.HiddenFor(m => basketItems[i].ItemImage)
                                                    @Html.HiddenFor(m => basketItems[i].ProcurementSource)
                                                    @Html.HiddenFor(m => basketItems[i].IndividualUOMReference)
                                                    @Html.HiddenFor(m => basketItems[i].MinimumIssuanceQty)
                                                    @Html.HiddenFor(m => basketItems[i].ItemCategory)
                                                    @Html.HiddenFor(m => basketItems[i].TotalConsumption)
                                                    @Html.HiddenFor(m => basketItems[i].Qtr1Qty)
                                                    @Html.HiddenFor(m => basketItems[i].Qtr2Qty)
                                                    @Html.HiddenFor(m => basketItems[i].Qtr3Qty)
                                                    @Html.HiddenFor(m => basketItems[i].Qtr4Qty)
                                                    @Html.HiddenFor(m => basketItems[i].TotalQty)
                                                
                                                    @( (String.IsNullOrEmpty(basketItems[i].ItemShortSpecifications)) ? "" : basketItems[i].ItemShortSpecifications ) <small>(@basketItems[i].ItemCode)</small>
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @basketItems[i].Qtr1Qty
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @basketItems[i].Qtr2Qty
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @basketItems[i].Qtr3Qty
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @basketItems[i].Qtr4Qty
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @basketItems[i].TotalQty
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @basketItems[i].TotalConsumption
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @Html.HiddenFor(m => basketItems[i].Remarks, htmlAttributes: new { Value = "Accepted" })
                                                    @Html.EditorFor(model => basketItems[i].Remarks, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled", style = "font-size: 100%;", Value = "Accepted" } })
                                                </td>
                                                <td style="text-align: center; vertical-align: middle;">
                                                    @using (Html.BeginForm("remove-from-basket", "Catalogue", new { ItemCode = basketItems[i].ItemCode }, FormMethod.Post))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button>
                                                        <button type="button" class="btn btn-sm btn-warning" onclick="window.location = '@Url.Action("update-basket", "Catalogue", new { ItemCode = basketItems[i].ItemCode })'"><i class="fa fa-edit"></i></button>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" align="center">
                                            <h5>*** No items ***</h5>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group float-right">
                <button type="submit" class="btn btn-success"><i class="fa fa-plus"></i> Add Items to PPMP</button>
                <button type="button" class="btn btn-primary" onclick="window.location = '@Url.Action("common-use-supplies", "Catalogue")'"><i class="fa fa-arrow-circle-left"></i> Back to Catalogue</button>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $('#basket').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
</script>