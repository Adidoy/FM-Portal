@model IEnumerable<PUPFMIS.Models.Basket>

@{
    ViewBag.Title = ViewBag.PageTitle;
    ViewBag.Description = "Items Basket";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@ViewBag.PageTitle</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Basket Items</h3>
}

@using (Html.BeginForm("create", "PPMP", FormMethod.Post))
{
    <div class="row">
        <div class="col-sm-12">
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-body table-responsive p-sm-0">
                        <table class="table table-striped table-hover" id="basket">
                            <thead>
                                <tr>
                                    <th rowspan="2" style="text-align:center; vertical-align: middle;" width="50%">
                                        Item Specifications
                                    </th>
                                    <th colspan="5" style="text-align:center; vertical-align: middle;">
                                        Quantity Requirement
                                    </th>
                                    <th rowspan="2" style="text-align:center; vertical-align: middle;" width="15%">
                                        Action
                                    </th>
                                </tr>
                                <tr>
                                    <th style="text-align:center; vertical-align: middle;" width="7%">Qtr 1</th>
                                    <th style="text-align:center; vertical-align: middle;" width="7%">Qtr 2</th>
                                    <th style="text-align:center; vertical-align: middle;" width="7%">Qtr 3</th>
                                    <th style="text-align:center; vertical-align: middle;" width="7%">Qtr 4</th>
                                    <th style="text-align:center; vertical-align: middle;" width="7%">Total<br />Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    var basketItems = Model.ToList();
                                    for (var item = 0; item < basketItems.Count; item++)
                                    {
                                        <tr>
                                            <td style="vertical-align: middle;">
                                                <b>@basketItems[item].ItemName</b>
                                                @Html.HiddenFor(m => basketItems[item].ItemID)
                                                @Html.HiddenFor(m => basketItems[item].ItemCode)
                                                @Html.HiddenFor(m => basketItems[item].ItemName)
                                                @Html.HiddenFor(m => basketItems[item].ItemShortSpecifications)
                                                @Html.HiddenFor(m => basketItems[item].ItemSpecifications)
                                                @Html.HiddenFor(m => basketItems[item].ItemImage)
                                                @Html.HiddenFor(m => basketItems[item].ProcurementSource)
                                                @Html.HiddenFor(m => basketItems[item].IndividualUOMReference)
                                                @Html.HiddenFor(m => basketItems[item].MinimumIssuanceQty)
                                                @Html.HiddenFor(m => basketItems[item].ItemCategory)
                                                @Html.HiddenFor(m => basketItems[item].Remarks)
                                                @( (String.IsNullOrEmpty(basketItems[item].ItemShortSpecifications)) ? "" : basketItems[item].ItemShortSpecifications ) <small>(@basketItems[item].ItemCode)</small>
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Html.HiddenFor(m => basketItems[item].Qtr1Qty)
                                                @basketItems[item].Qtr1Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Html.HiddenFor(m => basketItems[item].Qtr2Qty)
                                                @basketItems[item].Qtr2Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Html.HiddenFor(m => basketItems[item].Qtr3Qty)
                                                @basketItems[item].Qtr3Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Html.HiddenFor(m => basketItems[item].Qtr4Qty)
                                                @basketItems[item].Qtr4Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Html.HiddenFor(m => basketItems[item].TotalQty)
                                                @basketItems[item].TotalQty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                <button type="button" class="btn btn-sm btn-danger" id="remove-btn" onclick="window.location.href = '@Url.Action("remove-from-basket", "Catalogue", new { ItemCode = basketItems[item].ItemCode })'"><i class="fa fa-times"></i></button>
                                                <button type="button" class="btn btn-sm btn-warning" onclick="window.location = '@Url.Action("update-basket-item", "Catalogue", new { ItemCode = basketItems[item].ItemCode })'"><i class="fa fa-edit"></i></button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" align="center">
                                            <h5>*** No items ***</h5>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group float-right">
                <button type="submit" class="btn btn-success"><i class="fa fa-plus"></i> Add Items to PPMP</button>
                <button type="button" class="btn btn-primary" onclick="window.location = '@Url.Action("common-use-supplies", "Catalogue")'"><i class="fa fa-arrow-circle-left"></i> Back to Catalogue</button>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $('#basket').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
</script>