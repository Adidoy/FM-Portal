@model IEnumerable<PUPFMIS.Models.APPHeader>

@{
    ViewBag.Title = "Annual Procurement Plan";
    ViewBag.Description = "Home";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Annual Procurement Plan", "index")</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Annual Procurement Plans</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <button style="text-align:left;" class="btn btn-info btn-md" onclick='window.location = "@Url.Action("create", "APP")"'><i class="fa fa-plus"></i> Create New APP</button>
            <button style="text-align:left;" class="btn btn-secondary btn-md"><i class="fa fa-filter"></i> Filter</button>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped" id="example2">
                <thead>
                    <tr>
                        <th style="vertical-align: middle; text-align:center;">
                            @Html.DisplayNameFor(m => m.ReferenceNo)
                        </th>
                        <th style="vertical-align: middle; text-align:center;">
                            @Html.DisplayNameFor(m => m.FiscalYear)
                        </th>
                        <th style="vertical-align: middle; text-align:center;">
                            @Html.DisplayNameFor(m => m.Action)
                        </th>
                        <th style="vertical-align: middle; text-align:center;">
                            @Html.DisplayNameFor(m => m.PercentImplemented)
                        </th>
                        <th style="vertical-align: middle; text-align:center;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="vertical-align: middle; text-align:center;">
                            2020-IND-001
                        </td>
                        <td style="vertical-align: middle; text-align:center;">
                            FY 2020
                        </td>
                        <td style="vertical-align:middle; text-align:left;">
                            <span class="badge bg-primary" style="font-size:100%;">INDICATIVE APP</span>
                            <br />
                            <i style="font-size:80%;">@DateTime.Now.ToString("dd MMMM yyyy hh:mmtt")</i>
                        </td>
                        <td  style="vertical-align: middle; text-align:center;">
                            Not Applicable
                        </td>
                        <td  style="vertical-align: middle; text-align:center;">
                            <button type="button" class="btn btn-sm btn-primary" style="width:175px; margin-top:2.5px; margin-bottom: 2.5px;" onclick="window.location = '@Url.Action("details","APP", new { id = 0 })'"><i class="fa fa-eye"></i> View Details</button>
                        </td>
                    </tr>
                    <tr>
                        <td style="vertical-align: middle; text-align:center;">
                            2019-ORG-001
                        </td>
                        <td style="vertical-align: middle; text-align:center;">
                            FY 2019
                        </td>
                        <td style="vertical-align:middle; text-align:left;">
                            <span class="badge bg-success" style="font-size:100%;">ORIGINAL APP</span>
                            <br />
                            <i style="font-size:80%;">@DateTime.Now.ToString("dd MMMM yyyy hh:mmtt")</i>
                        </td>
                        <td style="vertical-align: middle; text-align:center;">
                            87% Completed
                        </td>
                        <td style="vertical-align: middle; text-align:center;">
                            <button type="button" class="btn btn-sm btn-primary" style="width:175px; margin-top:2.5px; margin-bottom: 2.5px;" onclick="window.location = '@Url.Action("details","APP", new { id = 0 })'"><i class="fa fa-eye"></i> View Details</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>