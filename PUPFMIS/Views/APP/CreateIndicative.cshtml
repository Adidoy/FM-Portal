@model PUPFMIS.Models.APPHeader

@{
    ViewBag.Title = "Annual Procurement Plan";
    ViewBag.Description = "Create";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
    IEnumerable<PUPFMIS.Models.ExpenditureObjects> _expenses = ViewData["MOOE"] as IEnumerable<PUPFMIS.Models.ExpenditureObjects>;
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Annual Procurement Plan", "index")</li>
        <li class="breadcrumb-item">Create</li>
    </ol>
}

@section Header {
    <div class="row">
        <div class="col-md-12">
            <h3 class="card-title">INDICATIVE ANNUAL PROCUREMENT PLAN</h3>
        </div>
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12">
            <div class="card card-info card-outline">
                <div class="card-header">
                    <h3 class="card-title">Indicative APP Details</h3>
                </div>
                <div class="card-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ReferenceNo, htmlAttributes: new { @class = "control-label" })
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-id-badge"></i></span>
                                        </div>
                                        @Html.EditorFor(model => model.ReferenceNo, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", placeholder = "New Indicative APP" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ReferenceNo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FiscalYear, htmlAttributes: new { @class = "control-label" })
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-calendar-day"></i></span>
                                        </div>
                                        @Html.EditorFor(model => model.FiscalYear, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.FiscalYear, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CreatedAt, htmlAttributes: new { @class = "control-label" })
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-calendar-alt"></i></span>
                                        </div>
                                        @Html.EditorFor(model => model.CreatedAt, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", Value = DateTime.Now.ToString("dd MMMM yyyy hh:mmtt") } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.CreatedAt, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card card-info card-outline">
                                    <div class="card-header d-flex p-0">
                                        <ul class="nav nav-pills p-2">
                                            <li class="nav-item"><a class="nav-link active" href="#mooe" data-toggle="tab"><i class="fa fa-list"></i>&nbsp; Maintenance and Other Operating Expenses</a></li>
                                            <li class="nav-item"><a class="nav-link" href="#co" data-toggle="tab"><i class="fa fa-briefcase"></i>&nbsp; Capital Outlays</a></li>
                                        </ul>
                                    </div>
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="mooe">
                                            <table class="table table-bordered table-hover">
                                                <thead>
                                                    <tr>
                                                        <th colspan="2">Object Name</th>
                                                        <th>Amount</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in _expenses)
                                                    {
                                                        <tr>
                                                            <td>@Html.DisplayFor(modelItem => item.UACS)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.ObjectName)</td>
                                                            <td>
                                                                <div class="input-group mb-3">
                                                                    <div class="input-group-prepend">
                                                                        <span class="input-group-text"><i class="fa fa-money-bill"></i></span>
                                                                    </div>
                                                                    @Html.Editor("Amount", new { htmlAttributes = new { @class = "form-control text-right", placeholder = "Amount" } })
                                                                </div>
                                                                @Html.ValidationMessageFor(model => model.ReferenceNo, "", new { @class = "text-danger" })
                                                            </td>
                                                        </tr>
                                                    }
                                                    <tr>
                                                        <td colspan="2" align="right"><h5>Total MOOE:</h5></td>
                                                        <td align="right"><h5>0.00</h5></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="tab-pane" id="co">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    @section FormFooter {
        <div class="form-group float-right">
            <button class="btn btn-primary" onclick="window.location = '@Url.Action("index","APP")'"> Save Changes</button>
            <button type="button" class="btn btn-danger" onclick="window.location = '@Url.Action("index","APP")'">Back</button>
        </div>
    }
                                            }
