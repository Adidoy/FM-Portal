@model PUPFMIS.Models.ProcurementPipeline

<table class="table display table-hover">
    <thead>
        <tr>
            <th width="5%"></th>
            <th style="vertical-align:middle; text-align:left;" width="25%">Code<br />Procurement Program/Project<br />End-User</th>
            <th style="vertical-align:middle; text-align:center;" width="5%">Source of Fund</th>
            <th style="vertical-align:middle; text-align:center;" width="10%">Estimated Budget</th>
            <th style="vertical-align:middle; text-align:center;" width="25%">Mode of Procurement</th>
            <th style="vertical-align:middle; text-align:center;" width="25%">Remarks</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td style="vertical-align:middle; text-align:center;">
                @Html.CheckBox("ItemSelected")
            </td>
            <td style="vertical-align:middle; text-align:left;">
                <b>2019-PSMO-PAP002</b>
                <br />
                <i>INSTITUTIONAL ACCREDITATION PREPARATION</i>
                <br />
                PSMO
            </td>
            <td style="vertical-align:middle; text-align:center;">General Fund</td>
            <td style="vertical-align:middle; text-align:right;">27,500.00</td>
            <td style="vertical-align:middle; text-align:center;">
                @Html.EnumDropDownListFor(m => m.ProcurementMode, new { @class = "form-control", style = "font-size: 100%;" })
            </td>
            <td style="vertical-align:middle; text-align:left;">
                @Html.EditorFor(m => m.ContractPrice, new { htmlAttributes = new { @class = "form-control", style = "font-size: 100%" } })
            </td>
        </tr>
    </tbody>
</table>