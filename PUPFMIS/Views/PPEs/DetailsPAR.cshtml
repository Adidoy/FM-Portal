            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(model => model.PARHeader.ReceivedFrom, htmlAttributes: new { @class = "control-label" })
            <div class="input-group mb-3">
