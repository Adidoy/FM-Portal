                </div>
                @Html.EditorFor(model => model.PARHeader.ReceivedFrom, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", style = "font-size: 100%;" } })
            </div>
        </div>
    </div>
</div>
<br />
<h3 class="card-title"> Property List</h3>
<br />
<hr />
<div class="row">
    <div class="col-sm-12">
        @Html.Partial("DetailsPARItems", Model.PARDetails)
    </div>
