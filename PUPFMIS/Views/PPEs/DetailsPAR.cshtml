                </div>
                @Html.EditorFor(m => m.PARHeader.FKRequestHeader.RISNo, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", style = "font-size: 100%;" } })
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(model => model.PARHeader.PARNo, htmlAttributes: new { @class = "control-label" })
            <div class="input-group mb-3">
