@model PUPFMIS.Models.PPETransferLocation

<div class="row">
    <div class="col-sm-6">
        <div class="form-group-sm">
            @Html.LabelFor(model => model.CurrentLocation, "Current Location", htmlAttributes: new { @class = "control-label" })
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-home"></i></span>
                </div>
                @Html.EditorFor(m => m.CurrentLocation, new { htmlAttributes = new { @class = "form-control", style = "font-size: 100%;", type = "text" } })
            </div>
            @Html.ValidationMessageFor(model => model.CurrentLocation, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group-sm">
            @Html.LabelFor(model => model.TransferLocation, "New Location", htmlAttributes: new { @class = "control-label" })
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-share"></i></span>
                </div>
                @Html.DropDownList("TransferLocation", null, htmlAttributes: new { @class = "form-control", style = "font-size: 100%;" })
            </div>
            @Html.ValidationMessageFor(model => model.TransferLocation, "", new { @class = "text-danger" })
        </div>
    </div>
</div>