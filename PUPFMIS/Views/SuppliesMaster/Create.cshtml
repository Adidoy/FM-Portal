@model PUPFMIS.Models.SuppliesMaster

@{
    ViewBag.Title = "Supplies";
    ViewBag.Description = "Master";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Supplies Master", "index")</li>
        <li class="breadcrumb-item">Create</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-right">
        <h2 class="card-title">ADD NEW SUPPLY</h2>
    </div>
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="card card-info card-outline">
        <div class="card-header">
            <h3 class="card-title">Supply Details</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.StockNo, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                            </div>
                            @Html.EditorFor(model => model.StockNo, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.StockNo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6"></div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ItemID, "ItemID", htmlAttributes: new { @class = "control-label" })
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-pencil-ruler"></i></span>
                            </div>
                            @Html.DropDownList("ItemID", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.ItemID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.Label("Date Created")
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-calendar-alt"></i></span>
                            </div>
                            @Html.Editor("DateCreated", new { htmlAttributes = new { @class = "form-control", disabled = "disabled", Value = DateTime.Now.ToString("dd MMMM yyyy hh:mmtt") } })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.UOMDelivery, "UOMDelivery", htmlAttributes: new { @class = "control-label" })
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-truck"></i></span>
                            </div>
                            @Html.DropDownList("UOMDelivery", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.UOMDelivery, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.UOMDistribution, "UOMDistribution", htmlAttributes: new { @class = "control-label" })
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-ruler"></i></span>
                            </div>
                            @Html.DropDownList("UOMDistribution", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.UOMDistribution, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section FormFooter {
        <div class="form-group float-right">
            <button type="submit" style="width:140px" class="btn btn-primary" onclick="window.location = '@Url.Action("index", "SuppliesMaster")'">Save Changes</button>
            <button type="button" style="width:140px" class="btn btn-danger" onclick="window.location = '@Url.Action("index", "SuppliesMaster")'">Back</button>
        </div>
    }
}
