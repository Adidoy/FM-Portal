                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                            </div>
                            @Html.EditorFor(model => model.FKSupply.ReOrderPoint, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled", Value = "200" } })
