                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-id-badge"></i></span>
                            </div>
                            @Html.EditorFor(model => model.FKSupply.StockNo, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled", Value = "01-001" } })
