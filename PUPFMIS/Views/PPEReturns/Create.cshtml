@model PUPFMIS.Models.PPEReturnDetails

@{
    ViewBag.Title = "Assigned PPEs";
    ViewBag.Description = "Return";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Assigned PPEs", "assignedpropertyindex", "PPEs")</li>
        <li class="breadcrumb-item">Return</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-right">
        <h1 class="card-title"><i class="fa fa-bookmark"></i> Return PPE</h1>
    </div>
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PPE Return Details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group-sm">
                    @Html.LabelFor(m => m.FKPARReference.FKPPEInstanceReference.PropertyNo, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button class="btn btn-primary btn-sm" type="button"><i class="fa fa-search"></i></button>
                        </div>
                        @Html.EditorFor(m => m.FKPARReference.PropertyNo, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%;", type = "text" } })
                    </div>
                </div>
                <div class="form-group-sm">
                    @Html.LabelFor(m => m.FKPARReference.FKPPEInstanceReference.FKPPEReference.FKItem.ItemName, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-id-badge"></i></span>
                        </div>
                        @Html.EditorFor(m => m.FKPARReference.FKPPEInstanceReference.FKPPEReference.FKItem.ItemName, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%;", type = "text" } })
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group-sm">
                    @Html.LabelFor(m => m.FKPARReference.FKPPEInstanceReference.Identifier, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                        </div>
                        @Html.EditorFor(m => m.FKPARReference.FKPPEInstanceReference.Identifier, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%;", type = "text" } })
                    </div>
                </div>
                <div class="form-group-sm">
                    @Html.LabelFor(m => m.FKPARReference.FKPPEInstanceReference.Condition, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-asterisk"></i></span>
                        </div>
                        @Html.EditorFor(m => m.FKPARReference.FKPPEInstanceReference.Condition, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%;", type = "text" } })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group-sm">
                    @Html.LabelFor(m => m.FKPARReference.FKPPEInstanceReference.FKPPEReference.FKItem.ItemSpecifications, htmlAttributes: new { @class = "control-lable" })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-list-ul"></i></span>
                        </div>
                        @Html.EditorFor(m => m.FKPARReference.FKPPEInstanceReference.FKPPEReference.FKItem.ItemSpecifications, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%;", type = "text" } })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-right">
                    <button type="button" class="btn btn-primary"><i class="fa fa-plus"></i> Add to Return Items</button>
                </div>
            </div>
        </div>
        <br />
        <h3 class="card-title">Items to be Returned</h3>
        <br />
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Property Information</th>
                            <th>@Html.DisplayNameFor(m => m.FKPARReference.FKPPEInstanceReference.Location)</th>
                            <th>@Html.DisplayNameFor(m => m.FKPARReference.FKPPEInstanceReference.Condition)</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        @section FormFooter {
            <div class="form-group float-right">
                <button type="button" class="btn btn-primary" onclick="window.location = '@Url.Action("assignedpropertyindex", "PPEs")'"><i class="fa fa-save"></i> Save Changes</button>
                <button type="button" class="btn btn-danger" onclick="window.location = '@Url.Action("assignedpropertyindex","PPEs")'"><i class="fa fa-arrow-circle-left"></i> Back</button>
            </div>
        }
    </div>
}
