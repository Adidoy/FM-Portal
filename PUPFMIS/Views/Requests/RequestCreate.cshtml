@model PUPFMIS.Models.RequestHeader

@{
    ViewBag.Title = "My Supplies Requests";
    ViewBag.Description = "Create";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("My Supplies Requests", "index")</li>
        <li class="breadcrumb-item">Create</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-right">
        <h3 class="card-title">NEW SUPPLIES REQUEST</h3>
    </div>
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-8">
            @Html.Partial("RequestDetails")
        </div>
        <div class="col-md-4">
            @Html.Partial("RequestBasketSide")
        </div>
    </div>
}
