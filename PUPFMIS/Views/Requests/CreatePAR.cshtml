@model PUPFMIS.Models.PARHeader

@{
    ViewBag.Title = "Property Acknowledgement Receipt";
    ViewBag.Description = "Create";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("New Requests", "index")</li>
        <li class="breadcrumb-item">Create</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-right">
        <h3 class="card-title">NEW PROPERTY ACKNOWLEDGEMENT RECEIPT</h3>
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="card card-info card-outline">
        <div class="card-header">
            <h3 class="card-title">PAR Header</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.Label("RIS Reference", htmlAttributes: new { @class = "control-label" })
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-file-invoice"></i></span>
                            </div>
                            @Html.Editor("RISReference", new { htmlAttributes = new { @class = "form-control", disabled = "disabled", Value = "2019-11-0023" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.PARNo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.PARNo, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-asterisk"></i></span>
                            </div>
                            @Html.EditorFor(model => model.PARNo, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", Value = "2019-11-001" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.PARNo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.FKOffice.OfficeName, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-home"></i></span>
                            </div>
                            @Html.EditorFor(model => model.FKOffice.OfficeName, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", Value = "Procurement Management Office" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.FKOffice.OfficeName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.AccountableOfficer, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user"></i></span>
                            </div>
                            @Html.EditorFor(model => model.AccountableOfficer, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", Value = "PMO Director" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.AccountableOfficer, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card card-info card-outline">
        <div class="card-header">
            <h3 class="card-title">PAR Details</h3>
        </div>
        <div class="card-body">
            @Html.Partial("CreatePARDetails")
        </div>
    </div>

    @section FormFooter {
        <div class="form-group float-right">
            <button type="button" class="btn btn-primary" onclick="window.location = '@Url.Action("index", "Requests", new { type = "custodian" })'"><i class="fa fa-save"></i> Save Changes</button>
            <button type="button" class="btn btn-danger" onclick="window.location = '@Url.Action("index","Requests", new { type = "custodian" })'"><i class="fa fa-arrow-circle-left"></i> Back</button>
        </div>
    }
}
