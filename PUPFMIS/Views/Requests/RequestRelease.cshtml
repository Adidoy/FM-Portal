@model PUPFMIS.Models.RequestVM

@{
    ViewBag.Title = "Request";
    ViewBag.Description = "Release";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("New Requests", "index")</li>
        <li class="breadcrumb-item">Review</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-right">
        <h3 class="card-title">RIS 2019-11-0192: Procurement Management Office</h3>
    </div>
}

<div class="card card-info card-outline">
    <div class="card-header">
        <h3 class="card-title">Request Header</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.RequestHeader.Office, new { htmlAttributes = new { @class = "control-label" } })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                        </div>
                        @Html.EditorFor(m => m.RequestHeader.Office, new { htmlAttributes = new { @class = "form-control", type = "text", disabled = "disabled", Value = "Procurement Management Office" } })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.RequestHeader.RequestDate, new { htmlAttributes = new { @class = "control-label" } })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                        </div>
                        @Html.EditorFor(m => m.RequestHeader.RequestDate, new { htmlAttributes = new { @class = "form-control", type = "text", disabled = "disabled", Value = DateTime.Now.ToString("dd MMMM yyyy hh:mm tt") } })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Staff", new { htmlAttributes = new { @class = "control-label" } })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        @Html.EditorFor(m => m.RequestHeader.Office, new { htmlAttributes = new { @class = "form-control", type = "text", disabled = "disabled", Value = "PMO Staff" } })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.RequestHeader.RequestStatus, new { htmlAttributes = new { @class = "control-label" } })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-asterisk"></i></span>
                        </div>
                        @Html.EditorFor(m => m.RequestHeader.RequestStatus, new { htmlAttributes = new { @class = "form-control", @style = "font-style:italic", type = "text", disabled = "disabled", Value = "Approved" } })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.Label("Purpose", new { htmlAttributes = new { @class = "control-label" } })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-paragraph"></i></span>
                        </div>
                        @Html.EditorFor(m => m.RequestHeader.Office, new { htmlAttributes = new { @class = "form-control", type = "text", disabled = "disabled", Value = "For daily transactions of the Office." } })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card card-info card-outline">
    <div class="card-header">
        <h3 class="card-title">Request Items</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th width="35%">Supply Information</th>
                    <th width="10%">Issued Qty</th>
                    <th width="20%">Remarks</th>
                </tr>
            </thead>
            <tbody>
                <tr style="color:green">
                    <td>
                        <b>ACETATE</b>
                        <br />
                        UNIT: <i>Meters</i>
                        <br />
                        SPECIFICATIONS:
                        <br />
                        <i>Specifications go here...</i>
                    </td>
                    <td align="center">
                        70
                    </td>
                    <td>
                        @Html.Editor("Remarks", new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
                @*@foreach(var item in Model.RequestDetail)
                    {

                    }*@
            </tbody>
        </table>
    </div>
</div>

@section FormFooter {
    <div class="form-group float-right">
        <button type="button" class="btn btn-success" onclick="window.location = '@Url.Action("index", "Requests", new { type = "release" })'"><i class="fa fa-thumbs-up"></i> Release Items</button>
        <button type="button" class="btn btn-warning" onclick="window.location = '@Url.Action("index", "ItemPullOuts")'"><i class="fa fa-warehouse"></i> Request for Dispatch</button>
        <button type="button" class="btn btn-danger" onclick="window.location = '@Url.Action("index","Requests", new { type = "release" })'"><i class="fa fa-arrow-circle-left"></i> Back</button>
    </div>
}