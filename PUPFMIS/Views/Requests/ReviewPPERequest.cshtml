@model PUPFMIS.Models.RequestVM

@{
    ViewBag.Title = "New Requests";
    ViewBag.Description = "Review";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("New Requests", "index")</li>
        <li class="breadcrumb-item">Review</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-right">
        <h3 class="card-title">NEW PPE REQUEST - Procurement Management Office</h3>
    </div>
}

<div class="card card-info card-outline">
    <div class="card-header">
        <h3 class="card-title">Request Header</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.RequestHeader.Office, new { htmlAttributes = new { @class = "control-label" } })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                        </div>
                        @Html.EditorFor(m => m.RequestHeader.Office, new { htmlAttributes = new { @class = "form-control", type = "text", disabled = "disabled", Value = "Procurement Management Office" } })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.RequestHeader.RequestDate, new { htmlAttributes = new { @class = "control-label" } })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                        </div>
                        @Html.EditorFor(m => m.RequestHeader.RequestDate, new { htmlAttributes = new { @class = "form-control", type = "text", disabled = "disabled", Value = DateTime.Now.ToString("dd MMMM yyyy hh:mm tt") } })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Staff", new { htmlAttributes = new { @class = "control-label" } })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        @Html.EditorFor(m => m.RequestHeader.Office, new { htmlAttributes = new { @class = "form-control", type = "text", disabled = "disabled", Value = "PMO Staff" } })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.RequestHeader.RequestStatus, new { htmlAttributes = new { @class = "control-label" } })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-asterisk"></i></span>
                        </div>
                        @Html.EditorFor(m => m.RequestHeader.RequestStatus, new { htmlAttributes = new { @class = "form-control", @style = "font-style:italic", type = "text", disabled = "disabled", Value = "New Request" } })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.Label("Purpose", new { htmlAttributes = new { @class = "control-label" } })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-paragraph"></i></span>
                        </div>
                        @Html.EditorFor(m => m.RequestHeader.Office, new { htmlAttributes = new { @class = "form-control", type = "text", disabled = "disabled", Value = "Replacement of unserviceable printer in the Office." } })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card card-info card-outline">
        <div class="card-header">
            <h3 class="card-title">Request Items</h3>
        </div>
        <div class="card-body">
            <table class="table display table-hover">
                <thead>
                    <tr>
                        <th rowspan="2" style="vertical-align:middle; text-align:center" width="35%">PPE Information</th>
                        <th colspan="3" style="vertical-align:middle; text-align:center">Quantity</th>
                        <th rowspan="2" style="vertical-align:middle; text-align:center" width="20%">Remarks</th>
                    </tr>
                    <tr>
                        <th style="vertical-align:middle; text-align:center" width="5%">Requested</th>
                        <th style="vertical-align:middle; text-align:center" width="5%">Available</th>
                        <th style="vertical-align:middle; text-align:center" width="10%">Issue</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <b>CHAIR, Clerical</b>
                            <br />
                            <i>UNIT: Unit</i>
                            <br />
                            <i>SPECIFICATIONS:</i>
                            <br />
                            <i>Specifications go here...</i>
                        </td>
                        <td style="vertical-align:middle; text-align:center">
                            1
                        </td>
                        <td style="vertical-align:middle; text-align:center">
                            5
                        </td>
                        <td style="vertical-align:middle; text-align:center">
                            @Html.Editor("IssuedQty", new { htmlAttributes = new { @class = "form-control", style = "font-size: 100%; text-align: center;" } })
                        </td>
                        <td style="vertical-align:middle; text-align:center">
                            @Html.Editor("Remarks", new { htmlAttributes = new { @class = "form-control", style = "font-size: 100%;" } })
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    @section FormFooter {
        <div class="form-group float-right">
            <button type="button" class="btn btn-success" onclick="window.location = '@Url.Action("createpar", "Requests", new { requestID = 0 })'"><i class="fa fa-thumbs-up"></i> Grant Request</button>
            <button type="button" class="btn btn-warning" onclick="window.location = '@Url.Action("index", "Requests", new { type = "custodian" })'"><i class="fa fa-thumbs-down"></i> Deny Request</button>
            <button type="button" class="btn btn-danger" onclick="window.location = '@Url.Action("index","Requests", new { type = "custodian" })'"><i class="fa fa-arrow-circle-left"></i> Back</button>
        </div>
    }
}
