@{
    ViewBag.Title = "Suppliers";
    ViewBag.Description = "Directory";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Suppliers Directory", "list", new { Area = "" }, null)</li>
        <li class="breadcrumb-item">Details</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Supplier Details</h3>
}

@Html.Partial("_Details")

@section FormFooter {
    <div class="float-right">
        <button type="button" class="btn btn-danger" onclick="window.location = '@Url.Action("list","SuppliersDirectory", new { Area = "" })'"><i class="fa fa-arrow-circle-left"></i> Back to List</button>
    </div>
}