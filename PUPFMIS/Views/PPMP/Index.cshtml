@model IEnumerable<PUPFMIS.Models.PPMPHeaderViewModel>

@{
    ViewBag.Title = "PPMP";
    ViewBag.Description = "Home";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("PPMP", "index")</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> PPMP List</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <button style="text-align:left;" class="btn btn-secondary btn-md"><i class="fa fa-filter"></i> Filter</button>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align:center; vertical-align:middle" width="20%">
                            @Html.DisplayNameFor(model => model.ReferenceNo)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="15%">
                            @Html.DisplayNameFor(model => model.FiscalYear)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="30%">
                            @Html.DisplayNameFor(model => model.PPMPType)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="15%">
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="20%">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td align="justify">
                                <b>@Html.DisplayFor(modelItem => item.ReferenceNo)</b>
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.FiscalYear)
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.PPMPType)
                            </td>
                            <td>
                                @if (item.Status == "New")
                                {
                                    <span class="badge bg-secondary" style="font-size:100%;">@Html.DisplayFor(modelItem => item.Status)</span>
                                }
                                else if (item.Status == "Submitted")
                                {
                                    <span class="badge bg-warning" style="font-size:100%;">@Html.DisplayFor(modelItem => item.Status)</span>
                                }
                                else if (item.Status == "Submission Accepted")
                                {
                                    <span class="badge bg-success" style="font-size:100%;">@Html.DisplayFor(modelItem => item.Status)</span>
                                }
                            </td>
                            <td style="vertical-align:middle; text-align:center;">
                                <button type="button" class="btn btn-sm btn-primary" style="width: 100px;" onclick="window.location = '@Url.Action("details", "PPMP", new { ReferenceNo = item.ReferenceNo })'"><i class="fa fa-eye"></i> View</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
