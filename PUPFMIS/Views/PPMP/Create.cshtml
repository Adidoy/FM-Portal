@model PUPFMIS.Models.PPMPViewModel

@{
    ViewBag.Title = "PPMP-CSE";
    ViewBag.Description = "New";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("PPMP-CSE", "index")</li>
        <li class="breadcrumb-item">Add</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-right">
        <h1 class="card-title"><i class="fa fa-bookmark"></i> New PPMP-CSE</h1>
    </div>
}

@using (Html.BeginForm("save", "PPMP", FormMethod.Post, htmlAttributes: new { id = "ppmp" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                @Html.LabelFor(model => model.PPMPHeader.ReferenceNo, htmlAttributes: new { @class = "control-label" })
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                    </div>
                    @Html.HiddenFor(model => model.PPMPHeader.ReferenceNo)
                    @Html.EditorFor(model => model.PPMPHeader.ReferenceNo, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled" } })
                </div>
                @Html.ValidationMessageFor(model => model.PPMPHeader.ReferenceNo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                @Html.LabelFor(model => model.PPMPHeader.FiscalYear, htmlAttributes: new { @class = "control-label" })
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                    </div>
                    @Html.DropDownListFor(model => model.PPMPHeader.FiscalYear, new SelectList(ViewBag.FiscalYear, "FiscalYear", "FiscalYear"), htmlAttributes: new { @class = "form-control form-control-sm" })
                </div>
                @Html.ValidationMessageFor(model => model.PPMPHeader.FiscalYear, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <h5>A. DBM-PS Line Items</h5>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-body table-responsive p-sm-0">
                        <table class="table table-striped table-hover" id="example2">
                            <thead>
                                <tr>
                                    <th rowspan="2" style="text-align:center; vertical-align: middle;" width="40%">
                                        Item Specifications
                                    </th>
                                    <th rowspan="2" style="text-align:center; vertical-align: middle;" width="10%">
                                        Unit of Measure
                                    </th>
                                    <th colspan="4" style="text-align:center; vertical-align: middle;">
                                        Quantity Requirement
                                    </th>
                                    <th rowspan="2" style="text-align:center; vertical-align: middle;" width="10%">
                                        Total<br />Quantity
                                    </th>
                                </tr>
                                <tr>
                                    <th style="text-align:center; vertical-align: middle;" width="10%">Qtr 1</th>
                                    <th style="text-align:center; vertical-align: middle;" width="10%">Qtr 2</th>
                                    <th style="text-align:center; vertical-align: middle;" width="10%">Qtr 3</th>
                                    <th style="text-align:center; vertical-align: middle;" width="10%">Qtr 4</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.DBMItems.Count > 0)
                                {
                                    for (int i = 0; i < Model.DBMItems.Count; i++)
                                    {
                                        <tr>
                                            @Html.HiddenFor(m => m.DBMItems[i].ItemID)
                                            @Html.HiddenFor(m => m.DBMItems[i].ItemName)
                                            @Html.HiddenFor(m => m.DBMItems[i].ItemCode)
                                            @Html.HiddenFor(m => m.DBMItems[i].ItemShortSpecifications)
                                            @Html.HiddenFor(m => m.DBMItems[i].ItemSpecifications)
                                            @Html.HiddenFor(m => m.DBMItems[i].ItemImage)
                                            @Html.HiddenFor(m => m.DBMItems[i].ItemCategory)
                                            @Html.HiddenFor(m => m.DBMItems[i].ProcurementSource)
                                            @Html.HiddenFor(m => m.DBMItems[i].IndividualUOMReference)
                                            @Html.HiddenFor(m => m.DBMItems[i].MinimumIssuanceQty)
                                            @Html.HiddenFor(m => m.DBMItems[i].Qtr1Qty)
                                            @Html.HiddenFor(m => m.DBMItems[i].Qtr2Qty)
                                            @Html.HiddenFor(m => m.DBMItems[i].Qtr3Qty)
                                            @Html.HiddenFor(m => m.DBMItems[i].Qtr4Qty)
                                            @Html.HiddenFor(m => m.DBMItems[i].TotalQty)
                                            <td style="text-align: justify; vertical-align: middle;">
                                                <span style="font-size: 12pt;"><b>@Html.DisplayFor(model => model.DBMItems[i].ItemName) @( (String.IsNullOrEmpty(Model.DBMItems[i].ItemShortSpecifications)) ? "" : Model.DBMItems[i].ItemShortSpecifications  )</b> <small>(@Model.DBMItems[i].ItemCode)</small></span>
                                                <br />
                                                @Model.DBMItems[i].ItemSpecifications
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Model.DBMItems[i].IndividualUOMReference
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Model.DBMItems[i].Qtr1Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Model.DBMItems[i].Qtr2Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Model.DBMItems[i].Qtr3Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Model.DBMItems[i].Qtr4Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Model.DBMItems[i].TotalQty
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" align="center">
                                            <h5>*** No items ***</h5>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <h5>B. Non DBM-PS Line Items</h5>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-body table-responsive p-sm-0">
                        <table class="table table-striped table-hover" id="example2">
                            <thead>
                                <tr>
                                    <th rowspan="2" style="text-align:center; vertical-align: middle;" width="40%">
                                        Item Specifications
                                    </th>
                                    <th rowspan="2" style="text-align:center; vertical-align: middle;" width="10%">
                                        Unit of Measure
                                    </th>
                                    <th colspan="4" style="text-align:center; vertical-align: middle;">
                                        Quantity Requirement
                                    </th>
                                    <th rowspan="2" style="text-align:center; vertical-align: middle;" width="10%">
                                        Total<br />Quantity
                                    </th>
                                </tr>
                                <tr>
                                    <th style="text-align:center; vertical-align: middle;" width="10%">Qtr 1</th>
                                    <th style="text-align:center; vertical-align: middle;" width="10%">Qtr 2</th>
                                    <th style="text-align:center; vertical-align: middle;" width="10%">Qtr 3</th>
                                    <th style="text-align:center; vertical-align: middle;" width="10%">Qtr 4</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.NonDBMItems.Count > 0)
                                {
                                    for (int i = 0; i < Model.NonDBMItems.Count; i++)
                                    {

                                        <tr>
                                            @Html.HiddenFor(m => m.NonDBMItems[i].ItemID)
                                            @Html.HiddenFor(m => m.NonDBMItems[i].ItemName)
                                            @Html.HiddenFor(m => m.NonDBMItems[i].ItemCode)
                                            @Html.HiddenFor(m => m.NonDBMItems[i].ItemShortSpecifications)
                                            @Html.HiddenFor(m => m.NonDBMItems[i].ItemSpecifications)
                                            @Html.HiddenFor(m => m.NonDBMItems[i].ItemImage)
                                            @Html.HiddenFor(m => m.NonDBMItems[i].ItemCategory)
                                            @Html.HiddenFor(m => m.NonDBMItems[i].ProcurementSource)
                                            @Html.HiddenFor(m => m.NonDBMItems[i].IndividualUOMReference)
                                            @Html.HiddenFor(m => m.NonDBMItems[i].MinimumIssuanceQty)
                                            @Html.HiddenFor(m => m.NonDBMItems[i].Qtr1Qty)
                                            @Html.HiddenFor(m => m.NonDBMItems[i].Qtr2Qty)
                                            @Html.HiddenFor(m => m.NonDBMItems[i].Qtr3Qty)
                                            @Html.HiddenFor(m => m.NonDBMItems[i].Qtr4Qty)
                                            @Html.HiddenFor(m => m.NonDBMItems[i].TotalQty)
                                            <td style="text-align: justify; vertical-align: middle;">
                                                <span style="font-size: 12pt;"><b>@Html.DisplayFor(model => model.NonDBMItems[i].ItemName) @( (String.IsNullOrEmpty(Model.NonDBMItems[i].ItemShortSpecifications)) ? "" : Model.NonDBMItems[i].ItemShortSpecifications  )</b> <small>(@Model.NonDBMItems[i].ItemCode)</small></span>
                                                <br />
                                                @Model.NonDBMItems[i].ItemSpecifications
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Model.NonDBMItems[i].IndividualUOMReference
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Model.NonDBMItems[i].Qtr1Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Model.NonDBMItems[i].Qtr2Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Model.NonDBMItems[i].Qtr3Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Model.NonDBMItems[i].Qtr4Qty
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                @Model.NonDBMItems[i].TotalQty
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" align="center">
                                            <h5>*** No items ***</h5>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<br />
<div class="row">
    <div class="col-sm-12">
        <div class="form-group float-right">
            <button type="button" class="btn btn-primary" id="save-btn"><i class="fa fa-save"></i> Save PPMP</button>
            <button type="button" class="btn btn-danger" onclick="window.location = '@Url.Action("catalogue", "PPMP")'"><i class="fa fa-times-circle"></i> Discard PPMP</button>
        </div>
    </div>
</div>


<script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $("#save-btn").on('click', function (e) {
        e.preventDefault();
        swal.fire({
            title: "Save record?",
            text: "You are about to save this record, continue?",
            type: "warning",
            showCancelButton: true,
        }).then((result) => {
            if (result.value) {
                $("#ppmp").submit();
            }
        })
    });
</script>