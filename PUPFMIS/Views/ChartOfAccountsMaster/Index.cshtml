@model IEnumerable<PUPFMIS.Models.ChartOfAccountsMaster>

@{
    ViewBag.Title = "Chart of Accounts";
    ViewBag.Description = "Master";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FMIS Portal", "dashboardv1", "Dashboard")</a></li>
        <li>@Html.ActionLink("Chart of Accounts Master", "Index")</li>
    </ol>
}

@section Header {
    <br />
    <br />
    <h1 class="box-title"><a href="#" onclick="loadModal('/chart-accounts-master/create')">Add New Record</a></h1>
}
<table class="table table-bordered table-hover" id="example1">
    <thead>
        <tr>
            <th width="10%">
                @Html.DisplayNameFor(model => model.UACS)
            </th>
            <th width="18%">
                @Html.DisplayNameFor(model => model.FKClass)
            </th>
            <th width="18%">
                @Html.DisplayNameFor(model => model.FKGenAcct)
            </th>
            <th width="18%">
                @Html.DisplayNameFor(model => model.FKSubAcct)
            </th>
            <th width="18">
                @Html.DisplayNameFor(model => model.AccountTitle)
            </th>
            <th width="18%">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UACS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FKClass.AccountTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FKGenAcct.AccountTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FKSubAcct.AccountTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountTitle)
                </td>
                <td align="center">
                    <button type="button" class="btn btn-sm btn-primary" data-toggle="tooltip" title="View Details" onclick='loadModal("/chart-accounts-master/details?id=" + @item.ID)'><i class="fa fa-eye"></i></button>
                    <button type="button" class="btn btn-sm btn-warning" data-toggle="tooltip" title="Edit Record" onclick='loadModal("/chart-accounts-master/edit?id=" + @item.ID)'><i class="fa fa-edit"></i></button>
                    <button type="button" class="btn btn-sm btn-danger" data-toggle="tooltip" title="Purge Record" onclick='loadModal("/chart-accounts-master/delete?id=" + @item.ID)'><i class="fa fa-times"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="modal-default">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="modal-container">
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">
    var options = { "backdrop": "static", keyboard: true };
    function loadModal(url) {
        $.ajax({
            type: "GET",
            url: url,
            contentType: "application/json; charset=utf-8",
            datatype: "json",
            success: function (data) {
                $('#modal-container').html(data);
                $('#modal-default').modal(options);
                $('#modal-default').modal('show');
            }
        });
    }
</script>
