<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <title>@ViewBag.Title - PUP FM Portal</title>
        @Styles.Render("~/bundles/styles")
        @Scripts.Render("~/bundles/preScripts")
        @if (ViewBag.Title == "Dashboard")
        {
            @Scripts.Render("~/bundles/dashboardScripts")
        }
        <link href="~/Scripts/adminlte/components/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <link href="~/Scripts/adminlte/components/ionicons/css/ionicons.min.css" rel="stylesheet" />
    </head>
    <body class="sidebar-mini layout-fixed" style="height:auto; min-height:100%; font-size:11pt; font-family:Arial;">
        <div class="wrapper">
            @Html.Partial("_Header")
            @Html.Partial("_Sidebar")      
            @RenderBody()
            @Html.Partial("_Footer")
            @Html.Partial("_Aside")
            <div id="sidebar-overlay"></div>
        </div>

        @Scripts.Render("~/bundles/postScripts")
        @RenderSection("scripts", false)
        <script type="text/javascript">
            $(function () {
                //Initialize Select2 Elements
                $('.select2').select2({
                    theme: 'bootstrap4'
                })

                //Initialize Select2 Elements
                $('.select2bs4').select2({
                    theme: 'bootstrap4'
                })
            })
        </script>
    </body>
</html>
