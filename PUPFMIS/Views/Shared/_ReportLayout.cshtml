<!DOCTYPE html>
<html>
<head>
    <link href="~/Scripts/adminlte/components/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
    <body>
        <div class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <table>
                        <tr>
                            <td class="m-0 p-0" width="7%" align="center" valign="middle">
                                <img class="m-0 p-0" src="@Server.MapPath("~/Content/imgs/PUPLogo.png")" height="50" width="50" />
                            </td>
                            <td class="m-0 p-0" style="font-size:8pt; font-weight:normal; width:73%; text-align:left; vertical-align:middle;">
                                Republic of the Philippines
                                <br />
                                <p style="font-size:12pt; font-weight:bold; margin:0px; padding:0px;">
                                    POLYTECHNIC UNIVERSITY OF THE PHILIPPINES
                                    <br />
                                    <span style="font-size:8pt; font-weight:normal;">Sta. Mesa, Manila</span>
                                </p>
                            </td>
                            <td class="m-0 p-0" style="font-size:8pt; font-weight:normal; width:73%; text-align:left; vertical-align:middle;">
                                @ViewBag.FormName
                                <br />
                                Reference No.: <b>@ViewBag.ReferenceNo</b>
                                <br />
                                <b>Date Printed: @DateTime.Now.ToString("dd MMMM yyyy hh:mm tt")</b>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <br />
            @RenderBody()
        </div>
    </body>
</html>