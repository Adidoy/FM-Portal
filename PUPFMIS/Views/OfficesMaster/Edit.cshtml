@model PUPFMIS.Models.OfficesMaster

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h2 class="modal-title">Edit Office Record [ <small><i>@Model.OfficeName</i></small> ]</h2>
</div>

@using (Ajax.BeginForm("Edit", "OfficesMaster", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "modal-container", OnSuccess = "CloseModal" }))
{
    <div class="modal-body" id="form-body">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Sector, "Sector", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("Sector", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Sector, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HeadOffice, "HeadOffice", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("HeadOffice", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.HeadOffice, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OfficeCode, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.OfficeCode, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", placeholder = Html.DisplayNameFor(d => d.OfficeCode) } })
            @Html.ValidationMessageFor(model => model.OfficeCode, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OfficeName, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.OfficeName, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", placeholder = Html.DisplayNameFor(d => d.OfficeName) } })
            @Html.ValidationMessageFor(model => model.OfficeName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OfficeHead, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.OfficeHead, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", placeholder = Html.DisplayNameFor(d => d.OfficeHead) } })
            @Html.ValidationMessageFor(model => model.OfficeHead, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Designation, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="modal-footer">
        <div class="form-group">
            <button type="submit" class="btn btn-primary" id="save-btn">Save changes</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
    </div>
}


<script src="~/Scripts/jquery.validate.js"></script>
<script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script type="text/javascript">
    function CloseModal(data) {
        if (data.status === "success") {
            $('#modal-default').modal('hide');
            window.location.href = "/offices-master/index";
        }
    };
    $('#Sector').on('change', function () {
        var val = $('#Sector').val();
        var url = "/offices-master/GetOfficesFromSector";
        $('#HeadOffice').empty();
        $.ajax({
            url: url,
            data: { sectorID: val },
            type: "GET",
            dataType: "json",
            success: function (data) {
                $.each(data, function (i, data) {
                    $("#HeadOffice").append('<option value="' + data.Value + '">' + data.Text + '</option>');
                });
            }
        });
    })
</script>