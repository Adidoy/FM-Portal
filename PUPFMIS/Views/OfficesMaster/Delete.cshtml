@model PUPFMIS.Models.OfficesMaster

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h2 class="modal-title">Purge Sector Record [ <small><i>@Model.OfficeName</i></small> ]</h2>
</div>

<div class="modal-body" id="form-body">
    <h2>Are you sure you want to delete this?</h2>
    <table class="table">
        <tr>
            <td><strong>@Html.DisplayNameFor(model => model.FKSectors)</strong></td>
            <td>@Html.DisplayFor(model => model.FKSectors.SectorName)</td>
        </tr>
        <tr>
            <td><strong>@Html.DisplayNameFor(model => model.FKHigherOffice)</strong></td>
            <td>@( Model.FKHigherOffice == null ? "Not Applicable" : Model.FKHigherOffice.OfficeName )</td>
        </tr>
        <tr>
            <td><strong>@Html.DisplayNameFor(model => model.OfficeCode)</strong></td>
            <td>@Html.DisplayFor(model => model.OfficeCode)</td>
        </tr>
        <tr>
            <td><strong>@Html.DisplayNameFor(model => model.OfficeName)</strong></td>
            <td>@Html.DisplayFor(model => model.OfficeName)</td>
        </tr>
        <tr>
            <td><strong>@Html.DisplayNameFor(model => model.OfficeHead)</strong></td>
            <td>@Html.DisplayFor(model => model.OfficeHead)</td>
        </tr>
        <tr>
            <td><strong>@Html.DisplayNameFor(model => model.Designation)</strong></td>
            <td>@Html.DisplayFor(model => model.Designation)</td>
        </tr>
    </table>
</div>

<div class="modal-footer">
    <div class="form-group">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <button type="submit" class="btn btn-danger" id="save-btn">Delete</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        }
    </div>
</div>