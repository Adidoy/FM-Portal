@model IEnumerable<PUPFMIS.Models.Services>

@{
    ViewBag.Title = "Services";
    ViewBag.Description = "Master";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Services Master", "list", new { Area = "" }, null)</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Services List</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <button style="text-align:left;" class="btn btn-info btn-md" onclick="window.location = '@Url.Action("add-service","Services", new { Area = "" })'"><i class="fa fa-plus"></i> Add New Service</button>
            <button style="text-align:left;" class="btn btn-secondary btn-md" onclick="window.location = '@Url.Action("view-deleted-services", "Services", new { Area = "" })'"><i class="fa fa-trash-restore"></i> Restore Deleted Services</button>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ServiceName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ItemShortSpecifications)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FKCategoryReference.ItemCategoryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FKInventoryTypeReference.InventoryTypeName)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServiceName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemShortSpecifications)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FKCategoryReference.ItemCategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FKInventoryTypeReference.InventoryTypeName)
                            </td>
                            <td align="center">
                                <button type="button" class="btn btn-sm btn-primary" data-toggle="tooltip" title="View Details" onclick="window.location = '@Url.Action("view-service-details", "Services", new { Area = "", ServiceCode = item.ServiceCode })'"><i class="fa fa-eye"></i></button>
                                <button type="button" class="btn btn-sm btn-warning" data-toggle="tooltip" title="Edit Record" onclick="window.location = '@Url.Action("update-service", "Services", new { Area = "", ServiceCode = item.ServiceCode })'"><i class="fa fa-edit"></i></button>
                                <button type="button" class="btn btn-sm btn-danger" data-toggle="tooltip" title="Purge Record" onclick="window.location = '@Url.Action("purge-service", "Services", new { Area = "", ServiceCode = item.ServiceCode })'"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>