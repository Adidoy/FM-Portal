</div>
    @section FormFooter {
        <div class="form-group float-right">
            <button type="button" class="btn btn-warning" onclick="window.location = '@Url.Action("index", "PurchaseRequest")'"><i class="fa fa-print"></i> Print Purchase Request</button>
            <button type="button" class="btn btn-danger" onclick="window.location = '@Url.Action("index","PurchaseRequest")'"><i class="fa fa-arrow-circle-left"></i> Back</button>
        </div>
    }
