@model PUPFMIS.Models.PurchaseRequest

@{
    ViewBag.Title = "My Purchase Requests";
    ViewBag.Description = "View Details";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("My Purchase Requests", "index")</li>
        <li class="breadcrumb-item">View</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-left">
        <h1 class="card-title"><i class="fa fa-bookmark"></i> Purchase Request [ 2019-01-015 ]</h1>
    </div>
}

<div class="card card-info card-outline">
    <div class="card-header d-flex p-0">
        <ul class="nav nav-pills p-2">
            <li class="nav-item"><a class="nav-link active" href="#pr_details" data-toggle="tab"><i class="fa fa-list"></i>&nbsp; Purchase Request Details</a></li>
            <li class="nav-item"><a class="nav-link" href="#workflow" data-toggle="tab"><i class="fa fa-briefcase"></i>&nbsp; Workflow</a></li>
        </ul>
    </div>
    <div class="tab-content">
        <div class="tab-pane active" id="pr_details">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.PurchaseRequestNo, htmlAttributes: new { @class = "control-label" })
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-id-badge"></i></span>
                                </div>
                                @Html.EditorFor(m => m.PurchaseRequestNo, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%", Value = "19-01-016", disabled = "disabled" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("Date Prepared", htmlAttributes: new { @class = "control-label" })
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                </div>
                                @Html.Editor("DatePrepared", new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%", Value = DateTime.Now.ToString("dd MMMM yyyy hh:mmtt"), disabled = "disabled" } })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("Status", htmlAttributes: new { @class = "control-label" })
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-asterisk"></i></span>
                                </div>
                                @Html.Editor("Status", new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%", Value = "Purchase Request Submission received and acknowledged.", disabled = "disabled" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("Staff", htmlAttributes: new { @class = "control-label" })
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                                </div>
                                @Html.Editor("Staff", new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%", Value = "PSMO Staff", disabled = "disabled" } })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("Fund Cluster", htmlAttributes: new { @class = "control-label" })
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-coins"></i></span>
                                </div>
                                @Html.Editor("FundCluster", new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%", Value = "General Fund", disabled = "disabled" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Purpose, htmlAttributes: new { @class = "control-label" })
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-book"></i></span>
                                </div>
                                @Html.EditorFor(m => m.Purpose, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%", Value = "Replenishment of Common-use Supplies", disabled = "disabled" } })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="workflow">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th width="25%">
                            Date
                        </th>
                        <th width="50%">
                            Description
                        </th>
                        <th width="25%">
                            Staff
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            06 January 2019 10:45AM
                        </td>
                        <td>
                            Purchase Request submitted to Procurement Management Office.
                        </td>
                        <td>
                            PSMO Staff
                        </td>
                    </tr>
                    <tr>
                        <td>
                            07 January 2019 9:45AM
                        </td>
                        <td>
                            Purchase Request Submission received and acknowledged.
                        </td>
                        <td>
                            PMO Staff
                        </td>
                    </tr>
                    <tr>
                        <td>
                            07 January 2019 09:40AM
                        </td>
                        <td>
                            No revisions needed for the submitted Purchase Request, thank you.
                        </td>
                        <td>
                            PMO Staff
                        </td>
                    </tr>
                    <tr>
                        <td>
                            07 January 2019 09:41AM
                        </td>
                        <td>
                            Workflow closed.
                        </td>
                        <td>
                            SYSTEM
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />
