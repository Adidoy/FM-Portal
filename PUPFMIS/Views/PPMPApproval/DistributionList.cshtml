@model IEnumerable<PUPFMIS.Models.PPMPDistributionList>

@{
    ViewBag.Title = "PPMP";
    ViewBag.Description = "Approval";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("PPMP", "index")</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Distribution List for @ViewBag.Item.ItemName <small>(@ViewBag.Item.ItemCode)</small></h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            @*<button style="text-align:left;" class="btn btn-info btn-md" onclick='window.location = "@Url.Action("create", "PPMP")"'><i class="fa fa-plus"></i> Create PPMP</button>
                <button style="text-align:left;" class="btn btn-secondary btn-md"><i class="fa fa-filter"></i> Filter</button>*@
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align: center; vertical-align: middle" width="50%">
                            PPMP Details
                        </th>
                        <th style="text-align: right; vertical-align: middle" width="10%">
                            @Html.DisplayNameFor(model => model.Qtr1)
                        </th>
                        <th style="text-align: right; vertical-align: middle" width="10%">
                            @Html.DisplayNameFor(model => model.Qtr2)
                        </th>
                        <th style="text-align: right; vertical-align: middle" width="10%">
                            @Html.DisplayNameFor(model => model.Qtr3)
                        </th>
                        <th style="text-align: right; vertical-align: middle" width="10%">
                            @Html.DisplayNameFor(model => model.Qtr4)
                        </th>
                        <th style="text-align: right; vertical-align: middle" width="10%">
                            @Html.DisplayNameFor(model => model.TotalQty)
                        </th>
                        @*<th style="text-align: center; vertical-align: middle" width="20%">Action</th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <b>@Html.DisplayFor(modelItem => item.ReferenceNo)</b>
                                <br />
                                @Html.DisplayFor(modelItem => item.Office)
                            </td>
                            <td style="text-align:right; vertical-align:middle;">
                                @Html.DisplayFor(model => item.Qtr1)
                            </td>
                            <td style="text-align:right; vertical-align:middle;">
                                @Html.DisplayFor(model => item.Qtr2)
                            </td>
                            <td style="text-align:right; vertical-align:middle;">
                                @Html.DisplayFor(model => item.Qtr3)
                            </td>
                            <td style="text-align:right; vertical-align:middle;">
                                @Html.DisplayFor(model => item.Qtr4)
                            </td>
                            <td style="text-align:right; vertical-align:middle;">
                                @Html.DisplayFor(model => item.TotalQty)
                            </td>
                            @*<td style="text-align: center; vertical-align: middle">
                                <button style="text-align:center; width: 150px;" class="btn btn-success btn-sm mb-1"><i class="fa fa-plus"></i> Add to APP</button>
                                <br />
                                <button style="text-align:center; width: 150px;" class="btn btn-primary btn-sm mb-1"><i class="fa fa-eye"></i> View Distribution</button>
                                <br />
                            </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>