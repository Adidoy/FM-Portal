@model IEnumerable<PUPFMIS.Models.PPMPHeaderViewModel>

@{
    ViewBag.Title = "PPMP";
    ViewBag.Description = "Approval";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("PPMP", "index")</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Submitted PPMPs</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            @*<button style="text-align:left;" class="btn btn-info btn-md" onclick='window.location = "@Url.Action("create", "PPMP")"'><i class="fa fa-plus"></i> Create PPMP</button>*@
            <button style="text-align:left;" class="btn btn-secondary btn-md"><i class="fa fa-filter"></i> Filter</button>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align: center; vertical-align: middle" width="25%">
                            @Html.DisplayNameFor(model => model.ReferenceNo)
                        </th>
                        <th style="text-align: center; vertical-align: middle" width="25%">
                            @Html.DisplayNameFor(model => model.OfficeName)
                        </th>
                        <th style="text-align: center; vertical-align: middle" width="20%">
                            @Html.DisplayNameFor(model => model.SubmittedAt)
                        </th>
                        <th style="text-align: center; vertical-align: middle" width="30%">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReferenceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OfficeName)
                            </td>
                            <td>
                                @(((DateTime)item.SubmittedAt).ToString("dd MMMM yyyy hh:mm tt"))
                            </td>
                            <td style="vertical-align:middle; text-align:center;">
                                <button type="button" class="btn btn-sm btn-primary" style="width: 100px;" onclick="window.location = '@Url.Action("submission-details", "PPMPApproval", new { ReferenceNo = item.ReferenceNo })'"><i class="fa fa-eye"></i> View</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

