@model IEnumerable<PUPFMIS.Models.PPMPSubmittedItems>

@{
    ViewBag.Title = "PPMP";
    ViewBag.Description = "Approval";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("PPMP", "index")</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> PPMP Items List</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            @*<button style="text-align:left;" class="btn btn-info btn-md" onclick='window.location = "@Url.Action("create", "PPMP")"'><i class="fa fa-plus"></i> Create PPMP</button>
                <button style="text-align:left;" class="btn btn-secondary btn-md"><i class="fa fa-filter"></i> Filter</button>*@
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align: center; vertical-align: middle" width="40%">
                            Item Name and Specifications
                        </th>
                        <th style="text-align: center; vertical-align: middle" width="12%">
                            Quantity Distribution
                        </th>
                        <th style="text-align: center; vertical-align: middle" width="12%">
                            Bulk Quantity
                        </th>
                        <th style="text-align: center; vertical-align: middle" width="12%">
                            Unit Cost
                        </th>
                        <th style="text-align: center; vertical-align: middle" width="12%">
                            Estimated Budget
                        </th>
                        <th style="text-align: center; vertical-align: middle" width="15%">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="@( (item.BulkQty != 0) ? "" : "color: red;" )">
                            <td>
                                <b style="font-size: 12pt;">@Html.DisplayFor(modelItem => item.ItemName).ToString().ToUpper() @(String.IsNullOrEmpty(item.ItemShortSpecifications) ? "" : ", " + item.ItemShortSpecifications) <small>(@Html.DisplayFor(modelItem => item.ItemCode))</small></b>
                                <br />
                                <p style="font-size: 8pt; text-align: justify">
                                    @Html.DisplayFor(modelItem => item.ItemSpecifications)
                                </p>
                                <p>
                                    @Html.LabelFor(modelItem => item.ProcurementSource) : @((item.ProcurementSource == PUPFMIS.Models.ProcurementSources.PS_DBM) ? "DBM Procurement Service" : "Private Suppliers")
                                    <br />
                                    @Html.LabelFor(modelItem => item.IndividualUnit) : @Html.DisplayFor(modelItem => item.IndividualUnit)
                                    <br />
                                    @Html.LabelFor(modelItem => item.QtyPerPackage) : @Html.DisplayFor(modelItem => item.QtyPerPackage) @Html.DisplayFor(modelItem => item.IndividualUnit)/@Html.DisplayFor(modelItem => item.BulkUnit)
                                </p>
                            </td>
                            <td style="vertical-align:top;">
                                @Html.LabelFor(modelItem => item.Qtr1) : @Html.DisplayFor(modelItem => item.Qtr1)
                                <br />
                                @Html.LabelFor(modelItem => item.Qtr2) : @Html.DisplayFor(modelItem => item.Qtr2)
                                <br />
                                @Html.LabelFor(modelItem => item.Qtr3) : @Html.DisplayFor(modelItem => item.Qtr3)
                                <br />
                                @Html.LabelFor(modelItem => item.Qtr4) : @Html.DisplayFor(modelItem => item.Qtr4)
                                <br />
                                @Html.LabelFor(modelItem => item.TotalQty) : @Html.DisplayFor(modelItem => item.TotalQty)
                            </td>
                            <td style="text-align: center; vertical-align: top">
                                <b>@Html.DisplayFor(modelItem => item.BulkQty) @Html.DisplayFor(modelItem => item.BulkUnit)</b>
                            </td>
                            <td style="text-align: center; vertical-align: top">
                                <b>@( String.Format("{0:C2}", item.UnitCost))</b>
                            </td>
                            <td style="text-align: right; vertical-align: top">
                                <b>@( String.Format("{0:C2}", (item.BulkQty * item.UnitCost)) )</b>
                            </td>
                            <td style="text-align: center; vertical-align: top">
                                <button style="text-align:center; width: 150px;" class="btn btn-success btn-sm mb-1" onclick='Add("@item.ItemCode")'><i class="fa fa-plus"></i> Add to PPMP</button>
                                <br />
                                <button style="text-align:center; width: 150px;" class="btn btn-primary btn-sm mb-1" onclick = 'window.location = "@Url.Action("distributionlist", "PPMPApproval", new { ItemCode = item.ItemCode })"'><i class="fa fa-eye"></i> View Distribution</button>
                                <br />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    function Add(itemCode) {
        swal.fire({
            title: "Add to PPMP?",
            text: "This will add the item selected to PPMP-CSE, continue?",
            type: "warning",
            showCancelButton: true,
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: "@Url.Action("AddToPPMP", "PPMPApproval")",
                    data: { ItemCode: itemCode }
                })
            }
        })
    }
</script>