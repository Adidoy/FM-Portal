@model PUPFMIS.Models.PPMPCSEViewModel

@{
    ViewBag.Title = "PPMP";
    ViewBag.Description = "Approval";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("PPMP", "index")</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-right">
        <h1 class="card-title"><i class="fa fa-bookmark"></i> PPMP Reference No.: @Model.PPMPHeader.ReferenceNo</h1>
    </div>
}

<div class="card card-primary card-outline">
    <div class="card-header d-flex p-0">
        <ul class="nav nav-pills p-2">
            <li class="nav-item" style="font-size:12pt;"><a class="nav-link active" href="#ppmpDetails" data-toggle="tab"><i class="fa fa-bookmark"></i>&nbsp; PPMP Information</a></li>
            <li class="nav-item" style="font-size:12pt;"><a class="nav-link" href="#ppmpLineItems" data-toggle="tab"><i class="fa fa-list"></i>&nbsp; PPMP Line Items</a></li>
        </ul>
    </div>
    <div class="tab-content">
        <div class="tab-pane active" id="ppmpDetails">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <h4>PPMP Information</h4>
                        <hr />
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <dl>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.PPMPHeader.ReferenceNo)
                                    </dt>
                                    <dd>
                                        <i class="fa fa-id-card"></i> @Html.DisplayFor(model => model.PPMPHeader.ReferenceNo)
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <dl>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.PPMPHeader.FiscalYear)
                                    </dt>
                                    <dd>
                                        <i class="fa fa-calendar"></i> @Html.DisplayFor(model => model.PPMPHeader.FiscalYear)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <dl>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.PPMPHeader.OfficeName)
                                    </dt>
                                    <dd>
                                        <i class="fa fa-building"></i>  @Html.DisplayFor(model => model.PPMPHeader.OfficeName)
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <dl>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.PPMPHeader.PreparedBy)
                                    </dt>
                                    <dd>
                                        <i class="fa fa-user"></i> @Html.DisplayFor(model => model.PPMPHeader.PreparedBy)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <dl>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.PPMPHeader.CreatedAt)
                                    </dt>
                                    <dd>
                                        <i class="fa fa-calendar"></i> @Model.PPMPHeader.CreatedAt.Value.ToString("dd MMMM yyyy hh:mm tt")
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <dl>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.PPMPHeader.SubmittedAt)
                                    </dt>
                                    <dd>
                                        <i class="fa fa-calendar-check"></i> @Model.PPMPHeader.SubmittedAt.Value.ToString("dd MMMM yyyy hh:mm tt")
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="ppmpLineItems">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <h4>PPMP Line Items</h4>
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-body table-responsive p-sm-0">
                            <table class="table table-striped table-hover" id="ppmpItems">
                                <thead>
                                    <tr>
                                        <th rowspan="2" style="text-align: center; vertical-align: middle;" width="50%">
                                            Item and Specifications
                                        </th>
                                        <th colspan="2" style="text-align: center; vertical-align: middle;">
                                            Quantity Requirement
                                        </th>
                                        <th rowspan="2" style="text-align: center; vertical-align: middle;" width="25%">
                                            Remarks/Action
                                        </th>
                                    </tr>
                                    <tr>
                                        <th style="text-align: center; vertical-align: middle;" width="15%">Distribution</th>
                                        <th style="text-align: center; vertical-align: middle;" width="10%">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.PPMPItems)
                                    {
                                        <tr style="@(item.Remarks == "Acceptable"? "background-color:#BCFFE0;" : "")">
                                            <td style="text-align:justify; vertical-align:top;">
                                                <b>@Html.DisplayFor(modelItem => item.FKItem.ItemName).ToString().ToUpper()@((string.IsNullOrEmpty(item.FKItem.ItemShortSpecifications)) ? "" : ", " + item.FKItem.ItemShortSpecifications )</b>
                                                <br />
                                                <p>@Html.DisplayFor(modelItem => item.FKItem.ItemSpecifications)</p>
                                                <p>
                                                    <b>Purpose/Project : </b>@Html.DisplayFor(modelItem => item.FKPPPItemsReference.FKProjectReference.ProjectName)
                                                    <br />
                                                    <b>@Html.DisplayNameFor(modelItem => item.FKItem.FKIndividualUnitReference) : </b>@Html.DisplayFor(modelItem => item.FKItem.FKIndividualUnitReference.UnitName)
                                                    <br />
                                                    <b>@Html.DisplayNameFor(modelItem => item.FKItem.ProcurementSource) : </b>@( item.FKItem.ProcurementSource == PUPFMIS.Models.ProcurementSources.PS_DBM ? "DBM Procurement Store" : "Private Suppliers" )
                                                </p>
                                            </td>
                                            <td style="text-align:left; vertical-align:top;">
                                                <div class="row">
                                                    <div class="col-sm-5">
                                                        @Html.LabelFor(modelItem => item.Qtr1, htmlAttributes: new { @class = "control-label" }):
                                                    </div>
                                                    <div class="col-sm-7 text-right">
                                                        @Html.DisplayFor(modelItem => item.Qtr1)
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-5">
                                                        @Html.LabelFor(modelItem => item.Qtr2, htmlAttributes: new { @class = "control-label" }):
                                                    </div>
                                                    <div class="col-sm-7 text-right">
                                                        @Html.DisplayFor(modelItem => item.Qtr2)
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-5">
                                                        @Html.LabelFor(modelItem => item.Qtr3, htmlAttributes: new { @class = "control-label" }):
                                                    </div>
                                                    <div class="col-sm-7 text-right">
                                                        @Html.DisplayFor(modelItem => item.Qtr3)
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-5">
                                                        @Html.LabelFor(modelItem => item.Qtr4, htmlAttributes: new { @class = "control-label" }):
                                                    </div>
                                                    <div class="col-sm-7 text-right">
                                                        @Html.DisplayFor(modelItem => item.Qtr4)
                                                    </div>
                                                </div>
                                            </td>
                                            <td style="text-align:center; vertical-align:top;">
                                                @Html.DisplayFor(modelItem => item.TotalQty)
                                            </td>
                                            <td style="text-align:center; vertical-align:top;">
                                                @if(item.Remarks == "Acceptable")
                                                {
                                                    <b>Accepted</b>
                                                }
                                                else
                                                {
                                                    <b class="text-danger"><i>@item.Remarks</i></b>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <button style="text-align:left;" class="btn btn-warning btn-md" onclick='window.location = "@Url.Action("AcceptSubmission", "PPMPApproval", new { id = Model.PPMPHeader.PPMPId })"'><i class="fa fa-thumbs-up"></i> Accept this submission</button>
        </div>
    </div>
</div>

<script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $('#ppmpItems').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
    $("#submitPPMP").on('click', function (e) {
        e.preventDefault();
        swal.fire({
            title: "Submit PPMP?",
            text: "Submitting your PPMP shall be mean that it is final and is subject for approval, continue?",
            type: "warning",
            showCancelButton: true,
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: "@Url.Action("submitPPMP", "PPMP")",
                    data: { id: @Model.PPMPHeader.PPMPId },
                    success: window.location.href = "@Url.Action("index","PPMP")"
                })
            }
        })
    });
</script>