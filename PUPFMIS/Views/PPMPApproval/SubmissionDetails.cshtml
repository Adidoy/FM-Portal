@model PUPFMIS.Models.PPMPCSEViewModel

@{
    ViewBag.Title = "PPMP";
    ViewBag.Description = "Approval";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("PPMP", "index")</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-right">
        <h1 class="card-title"><i class="fa fa-bookmark"></i> PPMP Reference No.: @Model.PPMPHeader.ReferenceNo</h1>
    </div>
}
<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <button style="text-align:left;" class="btn btn-warning btn-md" onclick='window.location = "@Url.Action("AcceptSubmission", "PPMPApproval", new { id = Model.PPMPHeader.PPMPId })"'><i class="fa fa-thumbs-up"></i> Accept this submission</button>
            @*<button style="text-align:left;" class="btn btn-success btn-md" id="submitPPMP"><i class="fa fa-share"></i> Submit this PPMP</button>*@
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-12">
        <h4>PPMP Information</h4>
        <hr />
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.PPMPHeader.ReferenceNo, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                        </div>
                        @Html.EditorFor(model => model.PPMPHeader.ReferenceNo, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled", style = "font-size: 100%;" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.PPMPHeader.ReferenceNo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.PPMPHeader.FiscalYear, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                        </div>
                        @Html.EditorFor(model => model.PPMPHeader.FiscalYear, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled", style = "font-size: 100%;" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.PPMPHeader.FiscalYear, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.PPMPHeader.OfficeName, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        @Html.EditorFor(model => model.PPMPHeader.OfficeName, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled", style = "font-size: 100%;" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.PPMPHeader.CreatedAt, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.PPMPHeader.PreparedBy, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        @Html.EditorFor(model => model.PPMPHeader.PreparedBy, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled", style = "font-size: 100%;" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.PPMPHeader.PreparedBy, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.PPMPHeader.CreatedAt, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-calendar-check"></i></span>
                        </div>
                        @Html.EditorFor(model => model.PPMPHeader.CreatedAt, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled", style = "font-size: 100%;", Value = ((DateTime)Model.PPMPHeader.CreatedAt).ToString("dd MMMM yyyy hh:mm tt") } })
                    </div>
                    @Html.ValidationMessageFor(model => model.PPMPHeader.CreatedAt, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.PPMPHeader.SubmittedAt, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                        </div>
                        @Html.EditorFor(model => model.PPMPHeader.SubmittedAt, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled", style = "font-size: 100%;", Value = ((DateTime)Model.PPMPHeader.SubmittedAt).ToString("dd MMMM yyyy hh:mm tt") } })
                    </div>
                    @Html.ValidationMessageFor(model => model.PPMPHeader.SubmittedAt, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-outline card-info">
                    <div class="card-header">
                        <h3 class="card-title">DBM-PS Items</h3>
                    </div>
                    <div class="card-body">
                        <div class="card-body table-responsive p-sm-0">
                            <table class="table table-striped table-hover" id="dbmItems">
                                <thead>
                                    <tr>
                                        <th style="text-align: center;" width="40%">Item Specifications</th>
                                        <th style="text-align: center;" width="15%">Unit</th>
                                        <th style="text-align: center;" width="15%">Total<br />Quantity</th>
                                        <th style="text-align: center;" width="20%">Action</th>
                                    </tr>
                                    @*<tr>
                                        <th style="text-align: center;">Qtr 1</th>
                                        <th style="text-align: center;">Qtr 2</th>
                                        <th style="text-align: center;">Qtr 3</th>
                                        <th style="text-align: center;">Qtr 4</th>
                                    </tr>*@
                                </thead>
                                <tbody>
                                    @if (Model.DBMItems.Count != 0)
                                    {
                                        foreach (var item in Model.DBMItems)
                                        {
                                            <tr>
                                                <td style="text-align: justify; vertical-align: middle;">
                                                    <b>@item.FKItem.ItemName @( (string.IsNullOrEmpty(item.FKItem.ItemShortSpecifications) ? "" : item.FKItem.ItemShortSpecifications) )</b> <small>(@item.FKItem.ItemCode)</small>
                                                    <br />
                                                    <i>@item.FKItem.ItemSpecifications</i>
                                                </td>
                                                @*<td style="text-align: center; vertical-align: middle;" width="10%">@item.Qtr1</td>
                                                <td style="text-align: center; vertical-align: middle;" width="10%">@item.Qtr2</td>
                                                <td style="text-align: center; vertical-align: middle;" width="10%">@item.Qtr3</td>*@
                                                <td style="text-align: center; vertical-align: middle;">@item.FKItem.FKIndividualUnitReference.UnitName</td>
                                                <td style="text-align: center; vertical-align: middle;">@item.TotalQty</td>
                                                <td style="text-align: center; vertical-align: middle;" width="10%">@Html.EnumDropDownListFor(modelItem => item.AcceptanceCode, htmlAttributes: new { @class = "form-control form-control-sm" })</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7" align="center">*** No items ***</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-outline card-info">
                    <div class="card-header">
                        <h3 class="card-title">Non DBM-PS Items</h3>
                    </div>
                    <div class="card-body">
                        <div class="card-body table-responsive p-sm-0">
                            <div class="card-body table-responsive p-sm-0">
                                <table class="table table-striped table-hover" id="nonDBMItems">
                                    <thead>
                                        <tr>
                                            <th rowspan="2" style="text-align: center; vertical-align: middle;">Item Specifications</th>
                                            <th colspan="4" style="text-align: center;">Quarterly Requirement</th>
                                            <th rowspan="2" style="text-align: center; vertical-align: middle;">Total<br />Quantity</th>
                                        </tr>
                                        <tr>
                                            <th style="text-align: center;">Qtr 1</th>
                                            <th style="text-align: center;">Qtr 2</th>
                                            <th style="text-align: center;">Qtr 3</th>
                                            <th style="text-align: center;">Qtr 4</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.NonDBMItems.Count != 0)
                                        {
                                            foreach (var item in Model.NonDBMItems)
                                            {
                                                <tr>
                                                    <td style="text-align: justify; vertical-align: middle;" width="40%">
                                                        <b>@item.FKItem.ItemName @( (string.IsNullOrEmpty(item.FKItem.ItemShortSpecifications) ? "" : item.FKItem.ItemShortSpecifications) )</b> <small>(@item.FKItem.ItemCode)</small>
                                                        @*<br />
                                    <i>@item.FKItem.ItemSpecifications</i>*@
                                                        <br />
                                                        <b>Unit</b> : @item.FKItem.FKIndividualUnitReference.UnitName
                                                    </td>
                                                    <td style="text-align: center; vertical-align: middle;" width="10%">@item.Qtr1</td>
                                                    <td style="text-align: center; vertical-align: middle;" width="10%">@item.Qtr2</td>
                                                    <td style="text-align: center; vertical-align: middle;" width="10%">@item.Qtr3</td>
                                                    <td style="text-align: center; vertical-align: middle;" width="10%">@item.Qtr4</td>
                                                    <td style="text-align: center; vertical-align: middle;" width="20%">@item.TotalQty</td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="7" align="center">*** No items ***</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $('#dbmItems').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
    $(function () {
        $('#nonDBMItems').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
    $("#submitPPMP").on('click', function (e) {
        e.preventDefault();
        swal.fire({
            title: "Submit PPMP?",
            text: "Submitting your PPMP shall be mean that it is final and is subject for approval, continue?",
            type: "warning",
            showCancelButton: true,
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: "@Url.Action("submitPPMP", "PPMP")",
                    data: { id: @Model.PPMPHeader.PPMPId },
                    success: window.location.href = "@Url.Action("index","PPMP")"
                })
            }
        })
    });
</script>