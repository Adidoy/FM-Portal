@model PUPFMIS.Models.PPMPCSEViewModel

@{
    ViewBag.Title = "PPMP";
    ViewBag.Description = "Approval";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("PPMP", "index")</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-right">
        <h1 class="card-title"><i class="fa fa-bookmark"></i> PPMP Reference No.: @Model.PPMPHeader.ReferenceNo</h1>
    </div>
}
<div class="row">
    <div class="col-sm-12">
        <h4>PPMP Information</h4>
        <hr />
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <dl>
                    <dt>
                       @Html.DisplayNameFor(model => model.PPMPHeader.ReferenceNo)
                    </dt>
                    <dd>
                        <i class="fa fa-id-card"></i> @Html.DisplayFor(model => model.PPMPHeader.ReferenceNo)
                    </dd>
                </dl>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.PPMPHeader.FiscalYear)
                    </dt>
                    <dd>
                        <i class="fa fa-calendar"></i> @Html.DisplayFor(model => model.PPMPHeader.FiscalYear)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.PPMPHeader.OfficeName)
                    </dt>
                    <dd>
                        <i class="fa fa-building"></i>  @Html.DisplayFor(model => model.PPMPHeader.OfficeName)
                    </dd>
                </dl>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.PPMPHeader.PreparedBy)
                    </dt>
                    <dd>
                        <i class="fa fa-user"></i> @Html.DisplayFor(model => model.PPMPHeader.PreparedBy)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.PPMPHeader.CreatedAt)
                    </dt>
                    <dd>
                        <i class="fa fa-calendar"></i> @Model.PPMPHeader.CreatedAt.Value.ToString("dd MMMM yyyy hh:mm tt")
                    </dd>
                </dl>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.PPMPHeader.SubmittedAt)
                    </dt>
                    <dd>
                       <i class="fa fa-calendar-check"></i> @Model.PPMPHeader.SubmittedAt.Value.ToString("dd MMMM yyyy hh:mm tt")
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-12">
        <h4>PPMP Line Items</h4>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="dbmItems">
                <thead>
                    <tr>
                        <th style="text-align: center;" width="40%">Project</th>
                        <th style="text-align: center;" width="40%">Item</th>
                        <th style="text-align: center;" width="20%">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.PPMPItems.Count != 0)
                    {
                        foreach (var item in Model.PPMPItems)
                        {
                            <tr>
                                <td style="text-align: justify; vertical-align: middle;">
                                    <p>
                                        <b>@item.FKPPPItemsReference.FKProjectReference.ProjectCode</b>
                                        <br />
                                        @item.FKPPPItemsReference.FKProjectReference.ProjectName
                                    </p>
                                </td>
                                <td style="text-align: justify; vertical-align: middle;">
                                    <p>
                                        <b>@item.FKItem.ItemName.ToUpper() @( (string.IsNullOrEmpty(item.FKItem.ItemShortSpecifications) ? "" : item.FKItem.ItemShortSpecifications) )</b> <small>(@item.FKItem.ItemCode)</small>
                                    </p>
                                </td>
                                <td style="text-align: center; vertical-align: middle;">
                                    <button type="button" class="btn btn-primary btn-sm"><i class="fa fa-search"></i> Evaluate Item</button>
                                    @*@Html.EnumDropDownListFor(modelItem => item.AcceptanceCode, "Select Action", htmlAttributes: new { @class = "form-control form-control-sm" })*@
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" align="center">*** No items ***</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <button style="text-align:left;" class="btn btn-warning btn-md" onclick='window.location = "@Url.Action("AcceptSubmission", "PPMPApproval", new { id = Model.PPMPHeader.PPMPId })"'><i class="fa fa-thumbs-up"></i> Accept this submission</button>
        </div>
    </div>
</div>

<script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $('#dbmItems').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
    $(function () {
        $('#nonDBMItems').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
    $("#submitPPMP").on('click', function (e) {
        e.preventDefault();
        swal.fire({
            title: "Submit PPMP?",
            text: "Submitting your PPMP shall be mean that it is final and is subject for approval, continue?",
            type: "warning",
            showCancelButton: true,
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: "@Url.Action("submitPPMP", "PPMP")",
                    data: { id: @Model.PPMPHeader.PPMPId },
                    success: window.location.href = "@Url.Action("index","PPMP")"
                })
            }
        })
    });
</script>