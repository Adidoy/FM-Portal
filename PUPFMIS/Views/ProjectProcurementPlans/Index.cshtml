@model IEnumerable<PUPFMIS.Models.ProjectsProcurementHeaderViewModel>

@{
    ViewBag.Title = "End User Projects";
    ViewBag.Description = "Home";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("PPMP", "index")</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Project List</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <button style="text-align:left;" class="btn btn-secondary btn-md"><i class="fa fa-filter"></i> Filter</button>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align: center; vertical-align: middle;" width="25%">
                            @Html.DisplayNameFor(model => model.ProjectCode)
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="40%">
                            @Html.DisplayNameFor(model => model.ProjectName)
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="15%">
                            @Html.DisplayNameFor(model => model.ProjectStatus)
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="20%">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center; vertical-align:middle;">
                                <b>@Html.DisplayFor(modelItem => item.ProjectCode)</b>
                            </td>
                            <td style="text-align:justify; vertical-align:middle;">
                                @Html.DisplayFor(modelItem => item.ProjectName)
                            </td>
                            <td style="text-align:left; vertical-align:middle;">
                                @Html.DisplayFor(modelItem => item.ProjectStatus)
                            </td>
                            <td style="text-align:center; vertical-align:middle;">
                                @Html.ActionLink("Edit", "Edit", new { ProjectCode = item.ProjectCode }) |
                                @Html.ActionLink("Details", "Details", new { ProjectCode = item.ProjectCode }) |
                                @Html.ActionLink("Delete", "Delete", new { ProjectCode = item.ProjectCode })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
