@model IEnumerable<PUPFMIS.Models.ItemTypeVM>

@{
    ViewBag.Title = "Item Types";
    ViewBag.Description = "List";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Item Types", "list")</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Item Types List</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <button style="text-align:left;" class="btn btn-info btn-md" onclick="window.location = '@Url.Action("create","ItemTypes")'"><i class="fa fa-plus"></i> Add New Item Type</button>
            <button style="text-align:left;" class="btn btn-secondary btn-md" onclick="window.location = '@Url.Action("restore-list","ItemTypes")'"><i class="fa fa-trash-restore"></i> Restore Deleted Item Type</button>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>

                        <th style="text-align:center; vertical-align:middle" width="30%">
                            @Html.DisplayNameFor(model => model.ItemTypeName)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="55%">
                            Details
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="15%">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:left; vertical-align:middle;">
                                (@Html.DisplayFor(modelItem => item.ItemTypeCode))<br /><b>@Html.DisplayFor(modelItem => item.ItemTypeName)</b>
                            </td>
                            <td style="text-align:left; vertical-align:middle;">
                                <div class="row">
                                    <div class="col-sm-3">
                                        @Html.DisplayName("Type")
                                    </div>
                                    <div class="col-sm-9">
                                        : @( item.IsTangible == "Yes" ? "Item" : "Service" )
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        @Html.DisplayNameFor(modelItem => modelItem.InventoryTypeName)
                                    </div>
                                    <div class="col-sm-9">
                                        : @Html.DisplayFor(modelItem => item.InventoryTypeName)
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        @Html.DisplayNameFor(modelItem => modelItem.AccountClass)
                                    </div>
                                    <div class="col-sm-9">
                                        : @Html.DisplayFor(modelItem => item.AccountClass)
                                    </div>
                                </div>
                            </td>
                            <td  style="text-align:center; vertical-align:middle;">
                                <button type="button" class="btn btn-sm btn-primary" data-toggle="tooltip" title="View Details" onclick="window.location = '@Url.Action("details", "ItemTypes", new { Area = "administration", ItemTypeCode = item.ItemTypeCode })'"><i class="fa fa-eye"></i></button>
                                <button type="button" class="btn btn-sm btn-warning" data-toggle="tooltip" title="Edit Record" onclick="window.location = '@Url.Action("edit", "ItemTypes", new { Area = "administration", ItemTypeCode = item.ItemTypeCode })'"><i class="fa fa-edit"></i></button>
                                <button type="button" class="btn btn-sm btn-danger" data-toggle="tooltip" title="Purge Record"  onclick="window.location = '@Url.Action("delete", "ItemTypes", new { Area = "administration", ItemTypeCode = item.ItemTypeCode })'"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>