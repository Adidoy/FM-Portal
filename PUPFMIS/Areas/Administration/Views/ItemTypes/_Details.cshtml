@model PUPFMIS.Models.ItemTypes

<div class="row">
    <div class="col-sm-12">
        <div class="card card-primary card-outline">
            <div class="card-header"><h3 class="card-title text-primary" style="font-weight:bold;">@Model.ItemType.ToUpper()&nbsp;<small>(@Model.ItemTypeCode)</small></h3></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-10">
                        <h6>Other Details:</h6>
                        <table class="table">
                            <tr>
                                <td><strong>@Html.DisplayNameFor(model => model.FKItemClassificationReference.Classification)</strong></td>
                                <td>: @Html.DisplayFor(model => model.FKItemClassificationReference.Classification) </td>
                            </tr>
                            <tr>
                                <td><strong>@Html.DisplayNameFor(model => model.ResponsibilityCenter)</strong></td>
                                <td>: @Html.DisplayFor(model => model.ResponsibilityCenter) </td>
                            </tr>
                            <tr>
                                <td><strong>@Html.DisplayNameFor(model => model.PurchaseRequestCenter)</strong></td>
                                <td>: @Html.DisplayFor(model => model.PurchaseRequestCenter) </td>
                            </tr>
                            <tr>
                                <td><strong>@Html.DisplayNameFor(model => model.PurgeFlag)</strong></td>
                                <td>: @( Model.PurgeFlag == true ? "Yes" : "No" )</td>
                            </tr>
                            <tr>
                                <td><strong>@Html.DisplayNameFor(model => model.CreatedAt)</strong></td>
                                <td>: @( Model.CreatedAt.ToString("dd MMMM yyyy hh:mm tt") )</td>
                            </tr>
                            <tr>
                                <td><strong>@Html.DisplayNameFor(model => model.UpdatedAt)</strong></td>
                                <td>: @( Model.UpdatedAt == null ? "Not Applicable Yet" : ((DateTime)Model.UpdatedAt).ToString("dd MMMM yyyy hh:mm tt") )</td>
                            </tr>
                            <tr>
                                <td><strong>@Html.DisplayNameFor(model => model.DeletedAt)</strong></td>
                                <td>: @( Model.DeletedAt == null ? "Not Applicable Yet" : ((DateTime)Model.DeletedAt).ToString("dd MMMM yyyy hh:mm tt") )</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-sm-1"></div>
                </div>
            </div>
        </div>
    </div>
</div>