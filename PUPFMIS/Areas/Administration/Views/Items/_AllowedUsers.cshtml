@model IEnumerable<PUPFMIS.Models.HRIS.HRISDepartment>

<div class="row">
    <div class="col-sm-12">
        <div class="bg-info">
            <h5 class="p-2">Allowed Departments</h5>
        </div>
    </div>
</div>
<br />
<table class="table table-striped table-hover" id="itemList">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.DepartmentCode)</th>
            <th>@Html.DisplayNameFor(model => model.Department)</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

<script type="text/javascript">
    $(function () {
        $('#itemList').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false
        });
    });
</script>