@model PUPFMIS.Models.SupplierVM

<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="bg-info">
                    <h5 class="p-2">@Model.SupplierName</h5>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-1 col-md-1 col-sm-12"></div>
            <div class="col-lg-10 col-md-10 col-sm-12">
                <h6>Other Details:</h6>
                <table class="table">
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.ContactPerson)</strong></td>
                        <td>@( Model.ContactPerson + " / " + Model.ContactPersonDesignation )</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.AuthorizedAgent)</strong></td>
                        <td>@( Model.AuthorizedAgent + " / " + Model.AuthorizedAgent )</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Address)</strong></td>
                        <td>@( Model.Address + (Model.City == null ? "" : ", " + Model.City) + (Model.State == null ? "" : ", " + Model.State) + (Model.PostalCode == null ? "" : ", " + Model.PostalCode) )</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.ContactNumber)</strong></td>
                        <td>@Html.DisplayFor(model => model.ContactNumber)</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.AlternateContactNumber)</strong></td>
                        <td>@(Model.AlternateContactNumber == null ? "No data provided" : Model.AlternateContactNumber)</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.TaxIdNumber)</strong></td>
                        <td>@(Model.TaxIdNumber == null ? "No data provided" : Model.TaxIdNumber )</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.EmailAddress)</strong></td>
                        <td>@(Model.EmailAddress == null ? "No data provided" : Model.EmailAddress )</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Website)</strong></td>
                        <td>@(Model.Website == null ? "No data provided" : Model.Website )</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.CreatedAt)</strong></td>
                        <td>@Model.CreatedAt.ToString("dd MMMM yyyy hh:mm tt")</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.UpdatedAt)</strong></td>
                        <td>@( Model.UpdatedAt == null ? "Not Applicable Yet" : Model.UpdatedAt.Value.ToString("dd MMMM yyyy hh:mm tt") )</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.DeletedAt)</strong></td>
                        <td>@( Model.DeletedAt == null ? "Not Applicable Yet" : Model.DeletedAt.Value.ToString("dd MMMM yyyy hh:mm tt") )</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.CategoryList)</strong></td>
                        <td>
                            @foreach (var category in Model.CategoryList)
                            {
                                if (category.IsSelected == true)
                                {
                                    <div class="row">
                                        <div class="col-sm-12">
                                            @category.Category
                                        </div>
                                    </div>
                                }
                            }
                        </td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.ItemTypesList)</strong></td>
                        <td>
                            @foreach (var itemType in Model.ItemTypesList)
                            {
                                if (itemType.IsSelected == true)
                                {
                                    <div class="row">
                                        <div class="col-sm-12">
                                            @itemType.ItemType
                                        </div>
                                    </div>
                                }
                            }
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-lg-1 col-md-1 col-sm-12"></div>
        </div>
    </div>
</div>