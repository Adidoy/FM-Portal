@model PUPFMIS.Models.ItemArticles

<div class="row">
    <div class="col-sm-12">
        <div class="card card-primary card-outline">
            <div class="card-header"><h3 class="card-title text-primary" style="font-weight:bold;">Item Article Details</h3></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-1 col-md-1 col-sm-12"></div>
                    <div class="col-lg-10 col-md-10 col-sm-12">
                        <div class="form-horizontal">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @if (ViewBag.Description == "Edit Record")
                            {
                                @Html.HiddenFor(model => model.ID)
                            }
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ArticleName, htmlAttributes: new { @class = "control-label" })
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa-id-badge"></i></span>
                                            </div>
                                            @Html.EditorFor(model => model.ArticleName, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size:100%; text-transform:uppercase;", autocomplete = "off", placeholder = Html.DisplayNameFor(d => d.ArticleName) } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.ArticleName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ItemTypeReference, htmlAttributes: new { @class = "control-label" })
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa-bookmark"></i></span>
                                            </div>
                                            @Html.DropDownList("ItemTypeReference", null, "---- SELECT ITEM TYPE ----", htmlAttributes: new { @class = "form-control form-control-sm select2", style = "font-size:100%;" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.ItemTypeReference, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.UACSObjectClass, htmlAttributes: new { @class = "control-label" })
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa-book"></i></span>
                                            </div>
                                            @Html.DropDownList("UACSObjectClass", null, "---- SELECT OBJECT CLASS ----", htmlAttributes: new { @class = "form-control form-control-sm select2", style = "font-size:100%;", onchange = "GetGeneralLedger()" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.UACSObjectClass, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.GLAccount, htmlAttributes: new { @class = "control-label" })
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa-file"></i></span>
                                            </div>
                                            @Html.EditorFor(model => model.GLAccount, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size:100%; text-transform:uppercase;", autocomplete = "off", placeholder = Html.DisplayNameFor(d => d.GLAccount), @readonly = "readonly" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.GLAccount, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-1 col-md-1 col-sm-12"></div>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    function GetGeneralLedger()
    {
        var url = '@Url.Action("get-gl-account", "ItemArticles", new { UACS = "xxxx" })';
        var uacs = $("#UACSObjectClass").val();
        url = url.replace("xxxx", uacs)
        $.ajax({
            url: url,
            type: "GET",
            success: function (data) {
                $("#GLAccount").val(data.GLAccount);
            }
        });
    }
</script>