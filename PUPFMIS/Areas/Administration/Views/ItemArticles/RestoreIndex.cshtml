@model IEnumerable<PUPFMIS.Models.ItemArticles>

@{
    ViewBag.Title = "Item Articles";
    ViewBag.Description = "Restore Purged Records";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Item Articles", "list")</li>
        <li class="breadcrumb-item">Restore Purged Records</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Purged Item Articles List</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align:center; vertical-align:middle" width="15%">
                            @Html.DisplayNameFor(model => model.ArticleCode)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="70%">
                            @Html.DisplayNameFor(model => model.ArticleName)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="15%">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center; vertical-align:middle;">
                                <b>@Html.DisplayFor(modelItem => item.ArticleCode)</b>
                            </td>
                            <td style="text-align:left; vertical-align:middle;">
                                @Html.DisplayFor(modelItem => item.ArticleName)
                            </td>
                            <td style="text-align:center; vertical-align:middle;">
                                <button type="button" class="btn btn-sm btn-primary" data-toggle="tooltip" title="View Details" onclick="window.location = '@Url.Action("restore", "ItemArticles", new { Area = "administration", ArticleCode = item.ArticleCode })'"><i class="fa fa-eye"></i> View</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <button style="text-align:left;" class="btn btn-danger btn-md" onclick="window.location = '@Url.Action("list","ItemArticles")'"><i class="fa fa-arrow-circle-left"></i> Back to List</button>
        </div>
    </div>
</div>