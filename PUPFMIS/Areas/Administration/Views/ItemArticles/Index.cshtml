@model IEnumerable<PUPFMIS.Models.ItemArticles>

@{
    ViewBag.Title = "Item Articles";
    ViewBag.Description = "List";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Item Articles", "list")</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Item Articles List</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <button style="text-align:left;" class="btn btn-info btn-md" onclick="window.location = '@Url.Action("create","ItemArticles")'"><i class="fa fa-plus"></i> Add New Article</button>
            <button style="text-align:left;" class="btn btn-secondary btn-md" onclick="window.location = '@Url.Action("restore-list","ItemArticles")'"><i class="fa fa-trash-restore"></i> Restore Deleted Articles</button>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="article-list">
                <thead>
                    <tr>
                        <th style="text-align:center; vertical-align:middle" width="20%">
                            @Html.DisplayNameFor(model => model.ArticleCode)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="55%">
                            @Html.DisplayNameFor(model => model.ArticleName)
                        </th>
                        <th style="display:none; text-align:center; vertical-align:middle" width="0%">
                            @Html.DisplayNameFor(model => model.FKItemTypeReference.ItemType)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="25%">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center; vertical-align:middle;">
                                <b>@Html.DisplayFor(modelItem => item.ArticleCode)</b>
                            </td>
                            <td style="text-align:left; vertical-align:middle;">
                                @Html.DisplayFor(modelItem => item.ArticleName)
                            </td>
                            <td style="text-align:left; display:none; vertical-align:middle;">
                                @Html.DisplayFor(modelItem => item.FKItemTypeReference.ItemType)
                            </td>
                            <td style="text-align:center; vertical-align:top;">
                                <button type="button" class="btn btn-sm btn-primary" data-toggle="tooltip" title="View Details" onclick="window.location = '@Url.Action("details", "ItemArticles", new { Area = "administration", ArticleCode = item.ArticleCode })'"><i class="fa fa-eye"></i></button>
                                <button type="button" class="btn btn-sm btn-warning" data-toggle="tooltip" title="Edit Record" onclick="window.location = '@Url.Action("edit", "ItemArticles", new { Area = "administration", ArticleCode = item.ArticleCode })'"><i class="fa fa-edit"></i></button>
                                <button type="button" class="btn btn-sm btn-danger" data-toggle="tooltip" title="Purge Record" onclick="window.location = '@Url.Action("delete", "ItemArticles", new { Area = "administration", ArticleCode = item.ArticleCode })'"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#article-list').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "drawCallback": function (settings) {
                var api = this.api();
                var rows = api.rows({ page: 'current' }).nodes();
                var last = null;
                api.column(2, { page: 'current' }).data().each(function (group, i) {
                    if (last !== group) {
                        $(rows).eq(i).before(
                            '<tr class="table-primary"><td colspan="3"><b>' + group + '</b></td></tr>'
                        );
                        last = group;
                    }
                });
            }
        });
    });
</script>