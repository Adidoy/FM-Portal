@{
    ViewBag.Title = "Item Articles";
    ViewBag.Description = "Details";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Item Articles", "list", "ItemArticles", new { Area = "administration" }, null)</li>
        <li class="breadcrumb-item">Details</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-right">
        <h1 class="card-title"><i class="fa fa-bookmark"></i> Item Article Details</h1>
    </div>
}

@Html.Partial("_Details")

@section FormFooter {
    <div class="form-group float-right">
        <button type="button" class="btn btn-danger" onclick="window.location = '@Url.Action("list","ItemArticles", new { Area = "administration" })'"><i class="fa fa-arrow-circle-left"></i> Back to List</button>
    </div>
}