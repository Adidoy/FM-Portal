@model PUPFMIS.Models.ProcurementProjectSetupVM

@{
    ViewBag.Title = "Contract Projects";
    ViewBag.Description = "Setup";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Contract Projects", "dashboard", "Contracts", new { Area = "procurement" }, null)</li>
        <li class="breadcrumb-item">Setup</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-bookmark"></i> New Alternative Mode of Procurement Contract Project</h3>
}

@using (Html.BeginForm("setup-alternative-mode-project", "Contracts", FormMethod.Post, new { Area = "procurement", id = "biddingProjectSetup" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => Model.ProcurementProjectType)

    <div id="form-container">
        <div class="card card-info">
            <div class="card-header"><h3 class="card-title">Contract Setup</h3></div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger p-1" })
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            @Html.LabelFor(model => Model.PAPCode, htmlAttributes: new { @class = "control-label" })
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-file"></i></span>
                                </div>
                                @Html.DropDownList("PAPCode", null, htmlAttributes: new { @class = "form-control form-control-sm select2", style = "font-size:100%; width:95%", onchange = "FillModesOfProcurement()" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            @Html.LabelFor(model => Model.ModeOfProcurement, htmlAttributes: new { @class = "control-label" })
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-file-invoice"></i></span>
                                </div>
                                @Html.DropDownList("ModeOfProcurement", null, htmlAttributes: new { @class = "form-control form-control-sm" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            @Html.LabelFor(model => Model.ContractStrategy, htmlAttributes: new { @class = "control-label" })
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-asterisk"></i></span>
                                </div>
                                @Html.DropDownList("ContractStrategy", null, htmlAttributes: new { @class = "form-control form-control-sm" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section FormFooter {
    <div class="row">
        <div class="col-sm-12 text-right">
            <div class="form-group">
                <button type="button" class="btn btn-primary" onclick="CreateProject()"><i class="fa fa-plus"></i>&nbsp; Setup Alternative Mode Project</button>
                <button type="button" class="btn btn-danger" onclick="window.location = '@Url.Action("dashboard", "Contracts", new { Area = "procurement" })'"><i class="fa fa-arrow-alt-circle-left"></i>&nbsp; Back to Dashboard</button>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    function FillProgram() {
        var mode = $('#ModeOfProcurement').val();
        $.ajax({
            url: '@Url.Action("GetPrograms", "Contracts", new { Area = "procurement" })',
            type: "GET",
            dataType: "JSON",
            data: { ModeOfProcurement: mode },
            success: function (programs) {
                $('#PAPCode').html("");
                $.each(programs, function(i, program) {
                    $('#PAPCode').append($('<option></option>').val(program.PAPCode).html(program.ProgramName));
                });
            }
        });
    }
    function FillModesOfProcurement() {
        var papCode = $('#PAPCode').val();
        $.ajax({
            url: '@Url.Action("GetModesOfProcurement", "Contracts", new { Area = "procurement" })',
            type: "GET",
            dataType: "JSON",
            data: { PAPCode: papCode },
            success: function (programs) {
                $('#ModeOfProcurement').html("");
                $.each(programs, function (i, program) {
                    $('#ModeOfProcurement').append($('<option></option>').val(program.ID).html(program.ModeOfProcurementName));
                });
            }
        });
    }
    function CreateProject() {
        $("#biddingProjectSetup").submit();
    }
</script>