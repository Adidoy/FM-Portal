@model PUPFMIS.Models.ProcurementProjectsVM

@{
    ViewBag.Title = "Procurement";
    ViewBag.Description = "Contract Projects";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-tachometer-alt"></i>&nbsp;@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">Contract Projects</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Procurement Projects</h3>
}

<h6><i class="fa fa-edit"></i> Procurement Activities</h6>
<div class="row">
    <div class="col-sm-2">
        <div class="nav flex-column nav-tabs h-100" id="vert-tabs-tab" role="tablist" aria-orientation="vertical">
            <a class="nav-link active" id="vert-tabs-open-contracts-tab" data-toggle="pill" href="#vert-tabs-open-contracts" role="tab" aria-controls="vert-tabs-open-contracts" aria-selected="true">Contract Projects</a>
            <a class="nav-link" id="vert-tabs-home-tab" data-toggle="pill" href="#vert-tabs-home" role="tab" aria-controls="vert-tabs-home" aria-selected="true">Statistics</a>
            <a class="nav-link" id="vert-tabs-profile-tab" data-toggle="pill" href="#vert-tabs-profile" role="tab" aria-controls="vert-tabs-profile" aria-selected="false">Reporting</a>
        </div>
    </div>
    <div class="col-sm-10">
        <div class="tab-content" id="vert-tabs-tabContent">
            <div class="tab-pane text-left fade show active" id="vert-tabs-open-contracts" role="tabpanel" aria-labelledby="vert-tabs-open-contracts-tab">
                <div class="card card-info">
                    <div class="card-header"><h3 class="card-title">Procurement Projects</h3></div>
                    <div class="card-body">
                        <div class="card-body table-responsive p-sm-0">
                            <table class="table table-striped table-hover display">
                                <thead>
                                    <tr>
                                        <th style="text-align: center; vertical-align: middle;" width="30%">
                                            @Html.DisplayNameFor(model => model.NewProjects.FirstOrDefault().ContractName)
                                        </th>
                                        <th style="text-align: center; vertical-align: middle;" width="20%">
                                            @Html.DisplayNameFor(model => model.NewProjects.FirstOrDefault().ProcurementProjectStage)
                                        </th>
                                        <th style="text-align: center; vertical-align: middle;" width="15%">
                                            Progress
                                        </th>
                                        <th style="text-align: center; vertical-align: middle;" width="15%">
                                            @Html.DisplayNameFor(model => model.NewProjects.FirstOrDefault().ApprovedBudgetForContract)
                                        </th>
                                        <th style="text-align: center; vertical-align: middle;" width="20%">
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.NewProjects)
                                    {
                                        <tr>
                                            <td style="text-align:left; vertical-align:middle;">
                                                <div class="row">
                                                    <div class="col-sm-12">
                                                        <b>@Html.DisplayFor(modelItem => item.ContractName)</b>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12">
                                                        <i>(@Html.DisplayFor(modelItem => item.ContractCode))</i>
                                                    </div>
                                                </div>
                                            </td>
                                            <td style="text-align:left; vertical-align:top;">
                                                @( item.ProcurementProjectStage.GetAttribute<System.ComponentModel.DataAnnotations.DisplayAttribute>().Name )
                                            </td>
                                            <td class="project_progress">
                                                <div class="progress progress-sm">
                                                    <div class="progress-bar bg-green" role="progressbar" aria-valuenow="57" aria-valuemin="0" aria-valuemax="100" style="width: 57%">
                                                    </div>
                                                </div>
                                                <small>
                                                    57% Complete
                                                </small>
                                            </td>
                                            <td style="text-align:right; vertical-align:top;">
                                                @( item.ApprovedBudgetForContract.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                                            </td>
                                            <td style="text-align:center; vertical-align:middle;">
                                                @if (item.ContractStrategy == PUPFMIS.Models.ContractStrategies.LotBidding)
                                                {
                                                    <button type="button" class="btn btn-sm btn-primary" onclick="window.location.href = '@Url.Action("details", "ContractLot", new { Area = "procurement", ContractCode = item.ContractCode })'"><i class="fa fa-eye"></i> View Details</button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-sm btn-primary" onclick="window.location.href = '@Url.Action("details", "ContractSingle", new { Area = "procurement", ContractCode = item.ContractCode })'"><i class="fa fa-eye"></i> View Details</button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="3" style="text-align:right; font-size:14pt;"><b>Ongoing Contracts ABC:</b></td>
                                        <td style="text-align:right; font-size:14pt;"><b>@( Model.NewProjects.Sum(d => d.ApprovedBudgetForContract).ToString("C", new System.Globalization.CultureInfo("en-ph")) )</b></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane text-left fade" id="vert-tabs-home" role="tabpanel" aria-labelledby="vert-tabs-home-tab">
                <div class="card card-info">
                    <div class="card-header"><h3 class="card-title">Statistics</h3></div>
                    <div class="card-body">
                        
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="vert-tabs-profile" role="tabpanel" aria-labelledby="vert-tabs-profile-tab">
                <div class="card card-info">
                    <div class="card-header"><h3 class="card-title">Reporting</h3></div>
                    <div class="card-body">
                        <div class="card-body table-responsive p-sm-0">
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>

<script type="text/javascript">
    $(function () {
        $('table.display').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
</script>