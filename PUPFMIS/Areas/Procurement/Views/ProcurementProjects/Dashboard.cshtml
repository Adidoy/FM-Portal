@{
    ViewBag.Title = "Project Assignment";
    ViewBag.Description = "Dashboard";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">Project Assignment</li>
        <li class="breadcrumb-item">Dashboard</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-home"></i> Procurement Projects Dashboard</h3>
}

<div class="row">
    <div class="col-lg-4 col-md-4 col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="bg-info">
                    <h5 class="p-2">Statistics</h5>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="small-box bg-primary">
                    <div class="inner">
                        <h3>0</h3>
                        <p>Unassigned APP Line Items</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-file"></i>
                    </div>
                </div>
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>0</h3>
                        <p>Projects Assigned</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-project-diagram"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-8 col-md-8 col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="bg-info">
                    <h5 class="p-2">Project Assignment Actions</h5>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="info-box">
                    <span class="info-box-icon bg-warning"><i class="fa fa-plus"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text" style="font-size:100%; font-weight:bold;"> @Html.ActionLink("New Competitive Bidding Project", "select-bidding-type", "ProcurementProjects", new { area = "procurement" }, null)</span>
                        <span class="info-box-number" style="font-size:75%;">
                            Add a new Competitive Bidding Project to the pipeline.
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="info-box">
                    <span class="info-box-icon bg-danger"><i class="fa fa-plus"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text" style="font-size:100%; font-weight:bold;"> @Html.ActionLink("New Altenative Procurement Project", "unassigned", "ProjectAssignment", new { area = "procurement" }, null)</span>
                        <span class="info-box-number" style="font-size:75%;">
                            Add a new Alternative Procruement Project to the pipeline.
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>