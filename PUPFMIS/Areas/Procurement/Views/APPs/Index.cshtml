@model IEnumerable<PUPFMIS.Models.AnnualProcurementPlanHeaderVM>

@{
    ViewBag.Title = "Annual Procurement Plan";
    ViewBag.Description = "List";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Annual Procurement Plans", "list", "APPs", new { Area = "procurement" }, null)</li>
        <li class="breadcrumb-item">List</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-bookmark"></i> Annual Procurement Plan List</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <tr>
                    <th style="text-align:center; vertical-align:middle;">
                        @Html.DisplayNameFor(model => model.ReferenceNo)
                    </th>
                    <th style="text-align:center; vertical-align:middle;">
                        @Html.DisplayNameFor(model => model.APPType)
                    </th>
                    <th style="text-align:center; vertical-align:middle;">
                        @Html.DisplayNameFor(model => model.PreparedAt)
                    </th>
                    <th style="text-align:center; vertical-align:middle;">
                        @Html.DisplayNameFor(model => model.RecommendedAt)
                    </th>
                    <th style="text-align:center; vertical-align:middle;">
                        @Html.DisplayNameFor(model => model.ApprovedAt)
                    </th>
                    <th style="text-align:center; vertical-align:middle;">
                        Action
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center; vertical-align:middle;">
                            <b>@Html.DisplayFor(modelItem => item.ReferenceNo)</b>
                        </td>
                        <td style="text-align:center; vertical-align:middle;">
                            @Html.DisplayFor(modelItem => item.APPType)
                        </td>
                        <td style="text-align:center; vertical-align:middle;">
                            @Html.DisplayFor(modelItem => item.PreparedAt)
                        </td>
                        <td style="text-align:center; vertical-align:middle;">
                            @Html.DisplayFor(modelItem => item.RecommendedAt)
                        </td>
                        <td style="text-align:center; vertical-align:middle;">
                            @Html.DisplayFor(modelItem => item.ApprovedAt)
                        </td>
                        <td style="text-align:center; vertical-align:middle;">
                            @if (item.APPType == "CSE")
                            {
                                <a class="btn btn-sm btn-primary mb-1" style="width: 140px;" href="@Url.Action("print-app-cse", "AnnualProcurementPlans", new { Area = "property-and-supplies", ReferenceNo = item.ReferenceNo })" target="_blank"><i class="fa fa-print"></i> Print APP-CSE</a>
                                <br />
                                if (item.ApprovedAt == "Pending")
                                {
                                    <button class="btn btn-sm btn-warning mb-1" style="width: 140px;" onclick="window.location ='@Url.Action("update", "APPs", new { Area = "procurement", ReferenceNo = item.ReferenceNo })'"><i class="fa fa-edit"></i> Update Status</button>
                                    <br />
                                }
                            }
                            else
                            {
                                <a class="btn btn-sm btn-primary mb-1" style="width: 140px;" href="@Url.Action("print-app", "APPs", new { Area = "procurement", ReferenceNo = item.ReferenceNo })" target="_blank"><i class="fa fa-print"></i> Print APP</a>
                                <br />
                                if (item.ApprovedAt == "Pending")
                                {
                                    <button class="btn btn-sm btn-warning mb-1" style="width: 140px;" onclick="window.location ='@Url.Action("update", "APPs", new { Area = "procurement", ReferenceNo = item.ReferenceNo })'"><i class="fa fa-edit"></i> Update Status</button>
                                    <br />
                                }
                                <button class="btn btn-sm btn-success mb-1" style="width: 140px;" onclick="window.location ='@Url.Action("assignment-index", "ProcurementPipelines", new { Area = "procurement", ReferenceNo = item.ReferenceNo })'"><i class="fa fa-users"></i> Assign Projects</button>
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="float-right">
            <button class="btn btn-md btn-danger" onclick="window.location = '@Url.Action("dashboard", "APPs", new { Area = "procurement" })'"><i class="fa fa-arrow-circle-left"></i> Back to Dashboard</button>
        </div>
    </div>
</div>