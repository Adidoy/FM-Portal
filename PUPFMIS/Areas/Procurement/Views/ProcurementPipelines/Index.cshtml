@model IEnumerable<PUPFMIS.Models.APPHeader>

@{
    ViewBag.Title = "Procurement Activities";
    ViewBag.Description = "APP List";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Procurement Activities Home", "dashboard", "ProcurementPipelines", new { Area = "procurement" }, null)</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-bookmark"></i> Annual Procument Plan List</h3>
}
<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align:center; vertical-align:middle;">@Html.DisplayNameFor(d => d.FiscalYear)</th>
                        <th style="text-align:center; vertical-align:middle;">@Html.DisplayNameFor(d => d.ReferenceNo)</th>
                        <th style="text-align:center; vertical-align:middle;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center; vertical-align:middle;">@Html.DisplayFor(d => item.FiscalYear)</td>
                            <td style="text-align:center; vertical-align:middle;">@Html.DisplayFor(d => item.ReferenceNo)</td>
                            <td style="text-align:center; vertical-align:middle;">
                                @if (User.IsInRole(PUPFMIS.Models.SystemRoles.ProcurementAdministrator) || User.IsInRole(PUPFMIS.Models.SystemRoles.ProcurementPlanningChief))
                                {
                                    <button class="btn btn-sm btn-primary" onclick="window.location = '@Url.Action("project-index", "ProcurementPipelines", new { Area = "procurement", ReferenceNo = item.ReferenceNo })'"><i class="fa fa-eye"></i> View Procurement Projects</button>
                                }
                                else if (User.IsInRole(PUPFMIS.Models.SystemRoles.ProcurementStaff))
                                {
                                    <button class="btn btn-sm btn-primary" onclick="window.location = '@Url.Action("my-projects", "ProcurementPipelines", new { Area = "procurement", ReferenceNo = item.ReferenceNo })'"><i class="fa fa-eye"></i> View My Procurement Projects</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

