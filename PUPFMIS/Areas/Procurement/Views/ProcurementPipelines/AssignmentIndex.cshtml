@model IEnumerable<PUPFMIS.Models.ProcurementProgramsVM>

@{
    ViewBag.Title = "Procurement Pipeline";
    ViewBag.Description = "View Accounts";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Procurement Pipeline Home", "dashboard", "ProcurementPipelines", new { Area = "procurement" }, null)</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-bookmark"></i> View Procurement Pipeline Accounts</h3>
}

<div class="col-sm-12">
    <div class="row">
        <div class="col-sm-12">
            <div class="bg-info">
                <h6 class="p-2">Procurement Pipeline Accounts</h6>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-body table-responsive p-sm-0">
                        <table class="table table-striped table-hover" id="example2">
                            <thead>
                                <tr>
                                    <th style="text-align:center; vertical-align:middle;" width="40%">Procurement Program</th>
                                    <th style="text-align:center; vertical-align:middle;" width="30%">Schedule of Procurement Activity</th>
                                    <th style="text-align:center; vertical-align:middle;" width="15%">Source of Fund</th>
                                    <th style="text-align:center; vertical-align:middle;" width="15%">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model.OrderBy(d => d.UACS).ThenBy(d => d.Month).ThenBy(d => d.FundCluster))
                                {
                                    <tr>
                                        <td style="text-align:justify; vertical-align:middle;">
                                            <b>PAP Code: </b>@Html.DisplayFor(d => item.PAPCode)
                                            <br />
                                            <b>@Html.DisplayFor(d => item.ProcurementProgram)</b>
                                            <br />
                                            @Html.DisplayFor(d => item.ObjectClassification) (@Html.DisplayFor(d => item.UACS))
                                        </td>
                                        <td style="text-align:center; vertical-align:middle;">
                                            @Html.DisplayFor(d => item.StartMonth) - @Html.DisplayFor(d => item.EndMonth)
                                        </td>
                                        <td style="text-align:center; vertical-align:middle;">
                                            @Html.DisplayFor(d => item.FundSource) (@Html.DisplayFor(d => item.FundCluster))
                                        </td>
                                        <td style="text-align:center; vertical-align:middle;">
                                            <button class="btn btn-sm btn-primary" onclick="window.location = '@Url.Action("assign-project", "ProcurementPipelines", new { Area = "procurement", PAPCode = item.PAPCode })'">
                                                <i class="fa fa-eye"></i> View Projects
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="float-right">
            <button class="btn btn-md btn-danger" onclick="window.location = '@Url.Action("dashboard", "APPs", new { Area = "procurement" })'"><i class="fa fa-arrow-circle-left"></i> Back to Dashboard</button>
        </div>
    </div>
</div>