@model IEnumerable<PUPFMIS.Models.PurchaseRequestHeaderVM>

@{
    ViewBag.Title = "Purchase Requests";
    ViewBag.Description = "Pending Submissions";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
<ol class="breadcrumb float-sm-right">
    <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
    <li class="breadcrumb-item">@Html.ActionLink("Purchase Requests", "dashboard")</li>
    <li class="breadcrumb-item">Lists</li>
</ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-bookmark"></i> Purchase Requests List</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align:center; vertical-align:middle">
                            @Html.DisplayNameFor(d => d.PRNumber)
                        </th>
                        <th style="text-align:center; vertical-align:middle">
                            Contract Reference
                        </th>
                        <th style="text-align:center; vertical-align:middle">
                            @Html.DisplayNameFor(d => d.SubmittedAt)
                        </th>
                        <th style="text-align:center; vertical-align:middle">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:left; vertical-align:middle">
                                <b>@Html.DisplayFor(d => item.PRNumber)</b>
                                <br />
                                <i>(@Html.DisplayFor(d => item.FundCluster))</i>
                            </td>
                            <td style="text-align:left; vertical-align:middle">
                                <b>@Html.DisplayFor(d => item.ContractName)</b>
                                <br />
                                <i>@Html.DisplayFor(d => item.ContractCode)</i>
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                @if (item.PRStatus >= PUPFMIS.Models.PurchaseRequestStatus.PurchaseRequestSubmitted)
                                {
                                    @( item.SubmittedAt.Value.ToString("dd MMMM yyyy hh:mm tt") )
                                    <br />
                                    <i>@Html.DisplayFor(d => item.SubmittedBy)</i>
                                }
                                else
                                {
                                    <i>For Submission</i>
                                }
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                @if (item.PRStatus == PUPFMIS.Models.PurchaseRequestStatus.PurchaseRequestSubmitted)
                                {
                                    <button type="button" style="width:193px;" class="btn btn-sm btn-success mb-1" onclick="ReceivePurchaseRequest('@item.PRNumber')"><i class="fa fa-download"></i> Receive P/R</button>
                                }
                                <br />
                                <a class="btn btn-sm btn-primary" style="width:193px;" href="@Url.Action("print", "PurchaseRequests", new { Area = "", PRNumber = item.PRNumber })" target="_blank"><i class="fa fa-print"></i> Print Purchase Request</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
