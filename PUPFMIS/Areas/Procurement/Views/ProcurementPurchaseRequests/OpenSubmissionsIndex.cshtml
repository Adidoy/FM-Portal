@model IEnumerable<PUPFMIS.Models.ContractListVM>

@{
    ViewBag.Title = "Purchase Requests";
    ViewBag.Description = "Pending Submissions";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Purchase Requests", "dashboard")</li>
        <li class="breadcrumb-item">Lists</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-bookmark"></i> Contract Projects with Open P/R Submissions</h3>
}

<div class="card card-info">
    <div class="card-header"><h3 class="card-title">Open Purchase Request Submissions</h3></div>
    <div class="card-body">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align: center; vertical-align: middle;" width="50%">
                            @Html.DisplayNameFor(model => model.ContractName)
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="15%">
                            @Html.DisplayNameFor(model => model.ContractStrategy)
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="15%">
                            @Html.DisplayNameFor(model => model.ApprovedBudgetForContract)
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="20%">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:left; vertical-align:middle;">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <b>@Html.DisplayFor(modelItem => item.ContractName)</b>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <i>(@Html.DisplayFor(modelItem => item.ContractCode))</i>
                                    </div>
                                </div>
                            </td>
                            <td style="text-align:left; vertical-align:top;">
                                @( item.ContractStrategy.GetAttribute<System.ComponentModel.DataAnnotations.DisplayAttribute>().Name )
                            </td>
                            <td style="text-align:right; vertical-align:top;">
                                @( item.ApprovedBudgetForContract.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                            </td>
                            <td style="text-align:center; vertical-align:middle;">
                                <button type="button" class="btn btn-sm btn-primary" onclick="window.location.href = '@Url.Action("open-submission-details", "ProcurementPurchaseRequests", new { Area = "procurement", ContractCode = item.ContractCode })'"><i class="fa fa-eye"></i> View Details</button>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2" style="text-align:right; font-size:14pt;"><b>Approved Budget:</b></td>
                        <td style="text-align:right; font-size:14pt;"><b>@( Model.Sum(d => d.ApprovedBudgetForContract).ToString("C", new System.Globalization.CultureInfo("en-ph")) )</b></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <button style="text-align:left;" class="btn btn-danger btn-md" onclick="window.location = '@Url.Action("dashboard", "ProcurementPurchaseRequests")'"><i class="fa fa-arrow-circle-left"></i> Back to Dashboard</button>
        </div>
    </div>
</div>