@model IEnumerable<PUPFMIS.Models.PurchaseRequestVM>

@{
    ViewBag.Title = "Purchase Requests";
    ViewBag.Description = "Pending Submissions";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Procurement Activities Home", "dashboard", "ProcurementPipelines", new { Area = "procurement" }, null)</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-bookmark"></i> Purchase Requests List</h3>
}
<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align:center; vertical-align:middle;">@Html.DisplayNameFor(d => d.PRNumber)</th>
                        <th style="text-align:center; vertical-align:middle;">@Html.DisplayNameFor(d => d.Department)</th>
                        <th style="text-align:center; vertical-align:middle;">@Html.DisplayNameFor(d => d.RequestedBy)</th>
                        <th style="text-align:center; vertical-align:middle;">@Html.DisplayNameFor(d => d.ApprovedBy)</th>
                        <th style="text-align:center; vertical-align:middle;">@Html.DisplayNameFor(d => d.CreatedAt)</th>
                        <th style="text-align:center; vertical-align:middle;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center; vertical-align:middle;">@Html.DisplayFor(d => item.PRNumber)</td>
                            <td style="text-align:left; vertical-align:middle;"><b>@Html.DisplayFor(d => item.Department).ToString().ToUpper()</b></td>
                            <td style="text-align:center; vertical-align:middle;">@Html.DisplayFor(d => item.RequestedBy)<br /><i>@Html.DisplayFor(d => item.RequestedByDesignation)</i></td>
                            <td style="text-align:center; vertical-align:middle;">@Html.DisplayFor(d => item.ApprovedBy)<br /><i>@Html.DisplayFor(d => item.ApprovedByDesignation)</i></td>
                            <td style="text-align:center; vertical-align:middle;">@Html.DisplayFor(d => item.CreatedAt)</td>
                            <td style="text-align:center; vertical-align:middle;">
                                <button class="btn btn-sm btn-primary" onclick="window.location = '@Url.Action("details", "ProcurementPurchaseRequests", new { Area = "procurement", PRNumber = item.PRNumber })'"><i class="fa fa-eye"></i> View Detauls</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

