@{
    ViewBag.Title = "Project Assignment";
    ViewBag.Description = "Dashboard";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">Project Assignment</li>
        <li class="breadcrumb-item">Dashboard</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-home"></i> Project Assignment Dashboard</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-4">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="bg-info">
                            <h5 class="p-2">Project Assignment Actions</h5>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-warning"><i class="fa fa-plus"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text" style="font-size:12pt; font-weight:bold;"> @Html.ActionLink("Assign Projects", "unassigned", "ProjectAssignment", new { area = "procurement" }, null)</span>
                                <span class="info-box-number" style="font-size:8pt;">
                                    Assign APP Line Items to Project Coordinators.
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-12">
                        <div class="bg-info">
                            <h5 class="p-2">Statistics</h5>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="small-box bg-primary">
                            <div class="inner">
                                <h3>0</h3>
                                <p>Unassigned APP Line Items</p>
                            </div>
                            <div class="icon">
                                <i class="fa fa-file"></i>
                            </div>
                        </div>
                        <div class="small-box bg-success">
                            <div class="inner">
                                <h3>0</h3>
                                <p>Projects Assigned</p>
                            </div>
                            <div class="icon">
                                <i class="fa fa-project-diagram"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="bg-info">
                            <h5 class="p-2">View Assigned Projects</h5>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-striped table-hover" id="assignedProjects">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center; vertical-align:middle;" width="50%">Fiscal Year</th>
                                            <th style="text-align:center; vertical-align:middle;" width="50%">Action</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#assignedProjects').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
</script>