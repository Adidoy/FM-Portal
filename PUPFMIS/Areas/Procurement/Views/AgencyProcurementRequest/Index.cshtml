@model IEnumerable<PUPFMIS.Models.AgencyProcurementRequest>

@{
    ViewBag.Title = "Agency Procurement Requests";
    ViewBag.Description = "List";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-tachometer-alt"></i>&nbsp;@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">Agency Procurement Requests</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Agency Procurement Requests</h3>
}

<div class="card-body table-responsive p-sm-0">
    <table class="table table-striped table-hover" id="example2">
        <thead>
            <tr>
                <th style="text-align: center; vertical-align: middle;" width="16%">
                    @Html.DisplayNameFor(model => model.AgencyControlNo)
                </th>
                <th style="text-align: center; vertical-align: middle;" width="16%">
                    Agency Head
                </th>
                <th style="text-align: center; vertical-align: middle;" width="16%">
                    Procurement Head
                </th>
                <th style="text-align: center; vertical-align: middle;" width="16%">
                    Chief Accountant
                </th>
                <th style="text-align: center; vertical-align: middle;" width="16%">
                    Created By
                </th>
                <th style="text-align: center; vertical-align: middle;" width="20%">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:left; vertical-align:middle;">
                        <b>@Html.DisplayFor(modelItem => item.AgencyControlNo)</b>
                    </td>
                    <td style="text-align:left; vertical-align:middle;">
                        <div class="row">
                            <div class="col-sm-12">
                                <b>@Html.DisplayFor(modelItem => item.AgencyHead)</b>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <i>@Html.DisplayFor(modelItem => item.AgencyHeadDesignation)</i>
                            </div>
                        </div>
                    </td>
                    <td style="text-align:left; vertical-align:middle;">
                        <div class="row">
                            <div class="col-sm-12">
                                <b>@Html.DisplayFor(modelItem => item.ProcurementHead)</b>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <i>@Html.DisplayFor(modelItem => item.ProcurementHeadDesignation), @Html.DisplayFor(modelItem => item.ProcurementDepartment)</i>
                            </div>
                        </div>
                    </td>
                    <td style="text-align:left; vertical-align:middle;">
                        <div class="row">
                            <div class="col-sm-12">
                                <b>@Html.DisplayFor(modelItem => item.ChiefAccountant)</b>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <i>@Html.DisplayFor(modelItem => item.ChiefAccountantDesignation), @Html.DisplayFor(modelItem => item.ChiefAccountantDepartment)</i>
                            </div>
                        </div>
                    </td>
                    <td style="text-align:left; vertical-align:middle;">
                        <div class="row">
                            <div class="col-sm-12">
                                <b>@Html.DisplayFor(modelItem => item.CreatedBy)</b>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <i>@( item.CreatedAt.ToString("dd MMMM yyyy hh:mm tt") )</i>
                            </div>
                        </div>
                    </td>
                    <td style="text-align:center; vertical-align:middle;">
                        <a class="btn btn-sm btn-primary" style="width:193px;" href="@Url.Action("print", "AgencyProcurementRequest", new { Area = "procurement", AgencyControlNo = item.AgencyControlNo })" target="_blank"><i class="fa fa-print"></i> Print APR</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<hr />
<div class="row">
    <div class="col-sm-12 text-right">
        <div class="form-group">
            <button type="button" class="btn btn-danger" onclick="window.location = '@Url.Action("dashboard", "AgencyProcurementRequest", new { Area = "procurement" })'"><i class="fa fa-arrow-alt-circle-left"></i>&nbsp; Back to Dashboard</button>
        </div>
    </div>
</div>