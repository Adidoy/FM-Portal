@model IEnumerable<PUPFMIS.Models.AgencyProcurementRequestVM>

@{
    ViewBag.Title = "Agency Procurement Request";
    ViewBag.Description = "List";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Procurement Activities Home", "dashboard", "ProcurementPipelines", new { Area = "procurement" }, null)</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-bookmark"></i> Agency Procurement Request List</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <button style="text-align:left;" class="btn btn-info btn-md" onclick="window.location = '@Url.Action("create","AgemcyProcurementRequest", new { Area = "procurement" })'"><i class="fa fa-plus"></i> Create Agency Procurement Request</button>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align:center; vertical-align:middle;">@Html.DisplayNameFor(d => d.AgencyControlNo)</th>
                        <th style="text-align:center; vertical-align:middle;">@Html.DisplayNameFor(d => d.CreatedAt)</th>
                        <th style="text-align:center; vertical-align:middle;">@Html.DisplayNameFor(d => d.ProcurementHead)</th>
                        <th style="text-align:center; vertical-align:middle;">@Html.DisplayNameFor(d => d.ChiefAccountant)</th>
                        <th style="text-align:center; vertical-align:middle;">@Html.DisplayNameFor(d => d.AgencyHead)</th>
                        <th style="text-align:center; vertical-align:middle;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center; vertical-align:middle;">@Html.DisplayFor(d => item.AgencyControlNo)</td>
                            <td style="text-align:center; vertical-align:middle;">@( item.CreatedAt.ToString("dd MMM yyyy") )</td>
                            <td style="text-align:center; vertical-align:middle;">@Html.DisplayFor(d => item.ProcurementHead)<br /><i>@Html.DisplayFor(d => item.ProcurementHeadDesignation)</i></td>
                            <td style="text-align:center; vertical-align:middle;">@Html.DisplayFor(d => item.ChiefAccountant)<br /><i>@Html.DisplayFor(d => item.ChiefAccountantDesignation)</i></td>
                            <td style="text-align:center; vertical-align:middle;">@Html.DisplayFor(d => item.AgencyHead)<br /><i>@Html.DisplayFor(d => item.AgencyHeadDesignation)</i></td>
                            <td style="text-align:center; vertical-align:middle;">
                                <a class="btn btn-sm btn-primary" href="@Url.Action("print", "AgemcyProcurementRequest", new { Area = "procurement", AgencyControlNo = item.AgencyControlNo })" target="_blank"><i class="fa fa-print"></i> Print Agency Procurement Request</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

