                    @Html.LabelFor(model => Model.ChiefAccountantDepartmentCode, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-building"></i></span>
                        </div>
                        @Html.HiddenFor(model => Model.ChiefAccountantDepartmentCode)
                        @Html.HiddenFor(model => Model.ChiefAccountantDepartment)
                        @Html.EditorFor(model => Model.ChiefAccountantDepartment, null, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled" } })
                    </div>
                </div>
            </div>
