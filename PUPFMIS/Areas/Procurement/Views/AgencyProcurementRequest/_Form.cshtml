                        </div>
                        @Html.HiddenFor(model => Model.ProcurementDepartmentCode)
                        @Html.HiddenFor(model => Model.ProcurementDepartment)
                        @Html.EditorFor(model => Model.ProcurementDepartment, null, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled" } })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
