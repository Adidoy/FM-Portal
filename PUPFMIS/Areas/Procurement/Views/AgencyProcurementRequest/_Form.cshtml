        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => Model.AgencyHead, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        @Html.HiddenFor(model => Model.AgencyHead)
                        @Html.HiddenFor(model => Model.AgencyHeadDesignation)
                        @Html.EditorFor(model => Model.AgencyHead, null, new { htmlAttributes = new { @class = "form-control form-control-sm", Value = Model.AgencyHead + ", " + Model.AgencyHeadDesignation, disabled = "disabled" } })
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => Model.AgencyHeadDepartmentCode, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-building"></i></span>
                        </div>
                        @Html.HiddenFor(model => Model.AgencyHeadDepartmentCode)
