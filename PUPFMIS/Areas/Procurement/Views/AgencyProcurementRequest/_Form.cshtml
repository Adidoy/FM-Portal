    </div>
</div>
<div class="card card-info">
    <div class="card-header"><h3 class="card-title">Line Items</h3></div>
    <div class="card-body">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="items">
                <thead>
                    <tr>
                        <th style="text-align:center; vertical-align:middle" width="5%">Item No.</th>
                        <th style="text-align:center; vertical-align:middle" width="10%">Quantity</th>
                        <th style="text-align:center; vertical-align:middle" width="10%">Unit</th>
                        <th style="text-align:center; vertical-align:middle" width="40%">Item Description</th>
                        <th style="text-align:center; vertical-align:middle" width="15%">Unit Cost</th>
                        <th style="text-align:center; vertical-align:middle" width="20%">Total Cost</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.APRDetails.Count; i++)
                    {
                        <tr>
                            <td style="text-align:center; vertical-align:middle;">@(i + 1)</td>
                            <td style="text-align:center; vertical-align:middle;">
                                @Html.HiddenFor(model => Model.APRDetails[i].Quantity)
                                @Html.DisplayFor(model => Model.APRDetails[i].Quantity)
                            </td>
                            <td style="text-align:center; vertical-align:middle;">
                                @Html.HiddenFor(model => Model.APRDetails[i].UOMReference)
                                @Html.HiddenFor(model => Model.APRDetails[i].UnitOfMeasure)
                                @Html.DisplayFor(model => Model.APRDetails[i].UnitOfMeasure)
                            </td>
                            <td style="text-align:left; vertical-align:middle;">
                                @Html.HiddenFor(model => Model.APRDetails[i].ArticleReference)
                                @Html.HiddenFor(model => Model.APRDetails[i].ItemSequence)
                                @Html.HiddenFor(model => Model.APRDetails[i].ItemFullName)
                                @Html.DisplayFor(model => Model.APRDetails[i].ItemFullName)
                            </td>
                            <td style="text-align:right; vertical-align:middle;">
                                @Html.HiddenFor(model => Model.APRDetails[i].UnitCost)
                                @( Model.APRDetails[i].UnitCost.ToString("N", new System.Globalization.CultureInfo("en-ph")) )
                            </td>
                            <td style="text-align:right; vertical-align:middle;">
                                @Html.HiddenFor(model => Model.APRDetails[i].TotalCost)
                                @( Model.APRDetails[i].TotalCost.ToString("N", new System.Globalization.CultureInfo("en-ph")) )
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5" style="text-align:right; vertical-align:middle;">
                            <h5>TOTAL AMOUNT:</h5>
                        </td>
                        <td style="text-align:right; vertical-align:middle;">
                            <h5>@( Model.APRDetails.Sum(d => d.TotalCost).ToString("C", new System.Globalization.CultureInfo("en-ph")) )</h5>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>