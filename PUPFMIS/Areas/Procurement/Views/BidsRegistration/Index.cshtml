@model IEnumerable<PUPFMIS.Models.BidsListVM>

@{
    ViewBag.Title = "Bids Registration";
    ViewBag.Description = "List";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-tachometer-alt"></i>&nbsp;@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Bids Dashobard", "dashboard", "BidsRegistration", new     { Area = "procurement" }, null)</li>
        <li class="breadcrumb-item">Bids Registration List</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> List of Registered Bids</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <button style="text-align:left;" class="btn btn-info btn-md" onclick="window.location = '@Url.Action("create","BidsRegistration", new { ContractCode = ViewBag.ContractCode })'"><i class="fa fa-plus"></i> Add New Bid Submission</button>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align: center; vertical-align: middle;" width="15%">
                            @Html.DisplayNameFor(model => model.BidReferenceNo)
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="30%">
                            @Html.DisplayNameFor(model => model.SupplierName)
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="20%">
                            @Html.DisplayNameFor(model => model.TotalAmountOfBid)
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="15%">
                            @Html.DisplayNameFor(model => model.BidSubmittedAt)
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="20%">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center; vertical-align:middle">
                                @Html.DisplayFor(model => item.BidReferenceNo)
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                @Html.DisplayFor(model => item.SupplierName)
                            </td>
                            <td style="text-align:right; vertical-align:middle">
                                @( item.TotalAmountOfBid.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                @( item.BidSubmittedAt.ToString("dd MMMM yyyy hh:mm tt") )
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                @Html.DisplayFor(model => item.BidReferenceNo)
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr></tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>