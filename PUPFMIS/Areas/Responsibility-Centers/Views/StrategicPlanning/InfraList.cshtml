@model IEnumerable<PUPFMIS.Models.BasketItems>

@{
    ViewBag.Title = "Institutional Procurement Planning";
    ViewBag.Description = "Home";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-tachometer-alt"></i>&nbsp;@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Institutional Procurement Planning", "list")</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Infrastructure Item List</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align:center;" width="15%">
                            @Html.DisplayNameFor(model => model.ItemCode)
                        </th>
                        <th style="text-align:center;" width="30%">
                            @Html.DisplayNameFor(model => model.ItemSpecifications)
                        </th>
                        <th style="text-align:center;" width="10%">
                            @Html.DisplayNameFor(model => model.TotalQty)
                        </th>
                        <th style="text-align:center;" width="15%">
                            @Html.DisplayNameFor(model => model.UnitCost)
                        </th>
                        <th style="text-align:center;" width="15%">
                            @Html.DisplayNameFor(model => model.EstimatedBudget)
                        </th>
                        <th style="text-align:center;" width="15%">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center; vertical-align:middle;">
                                <b>@Html.DisplayFor(modelItem => item.ItemCode)</b>
                            </td>
                            <td style="text-align:left; vertical-align:middle;">
                                @Html.DisplayFor(modelItem => item.ItemName)
                            </td>
                            <td style="text-align:center; vertical-align:middle;">
                                @Html.DisplayFor(modelItem => item.TotalQty)
                            </td>
                            <td style="text-align:right; vertical-align:middle;">
                                @( item.UnitCost.Value.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                            </td>
                            @if (item.EstimatedBudget == 0.00m)
                            {
                                <td style="text-align:center; vertical-align:middle;">
                                    <b style="color:red;">Detailed Estimates needs to be updated.</b>
                                </td>
                            }
                            else
                            {
                                <td style="text-align:right; vertical-align:middle;">
                                    @( item.EstimatedBudget.Value.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                                </td>
                            }
                            <td style="text-align:center; vertical-align:top;">
                                <button style="text-align:left;" class="btn btn-primary btn-sm" onclick="window.location = '@Url.Action("create-estimates", "InfrastructureProjects", new { ItemCode = item.ItemCode })'"><i class="fa fa-eye"></i> View Details</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div style="text-align: right;">
            <button type="button" class="btn btn-md btn-danger" onclick="window.location = '@Url.Action("office", "StrategicPlanning", new { Area = "responsibility-centers" })'"><i class="fa fa-arrow-circle-left"></i> Back to Office List</button>
        </div>
    </div>
</div>