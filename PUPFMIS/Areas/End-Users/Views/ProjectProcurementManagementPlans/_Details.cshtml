@model PUPFMIS.Models.PPMPViewModel

@{
    ViewBag.Title = "PPMP";
    ViewBag.Description = "Details";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("PPMP", "index")</li>
        <li class="breadcrumb-item">Details</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-right">
        <h1 class="card-title"><i class="fa fa-bookmark"></i> @Model.Header.PPMPType: @Model.Header.ReferenceNo</h1>
    </div>
}

@Html.HiddenFor(d => d.Header.Unit)
<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <a href="@Url.Action("print-ppmp", "ProjectProcurementManagementPlans", new { Area = "end-users", ReferenceNo = Model.Header.ReferenceNo })" target="_blank" class="btn btn-md btn-primary"><i class="fa fa-download"></i>&nbsp; Download</a>
            <button type="button" class="btn btn-danger" onclick="window.location = '@Url.Action("index", "PPMP")'"><i class="fa fa-arrow-circle-left"></i>&nbsp; Back to List</button>
        </div>
    </div>
</div>
<br />
<h4>PPMP Information</h4>
<hr />
<div class="row">
    <div class="col-sm-12 pl-0 pr-0 ml-0 mr-0">
        <div class="card card-primary card-outline">
            <div class="card-header d-flex p-0">
                <ul class="nav nav-pills p-2">
                    <li class="nav-item" style="font-size:12pt;"><a class="nav-link active" href="#ppmpInformation" data-toggle="tab"><i class="fa fa-list"></i>&nbsp; PPMP Details</a></li>
                    <li class="nav-item" style="font-size:12pt;"><a class="nav-link" href="#workFlowInformation" data-toggle="tab"><i class="fa fa-briefcase"></i>&nbsp; Workflow Information</a></li>
                </ul>
            </div>
            <div class="tab-content">
                <div class="tab-pane active" id="ppmpInformation">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card card-info">
                                    <div class="card-header"><h3 class="card-title">PPMP Details</h3></div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Header.ReferenceNo, htmlAttributes: new { @class = "control-label" })
                                                    <div class="input-group mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                                                        </div>
                                                        @Html.EditorFor(model => model.Header.ReferenceNo, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled", style = "font-size: 100%;" } })
                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.Header.ReferenceNo, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Header.FiscalYear, htmlAttributes: new { @class = "control-label" })
                                                    <div class="input-group mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                                        </div>
                                                        @Html.EditorFor(model => model.Header.FiscalYear, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled", style = "font-size: 100%;" } })
                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.Header.FiscalYear, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Header.CreatedAt, htmlAttributes: new { @class = "control-label" })
                                                    <div class="input-group mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fa fa-calendar-check"></i></span>
                                                        </div>
                                                        @Html.EditorFor(model => model.Header.CreatedAt, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled", style = "font-size: 100%;", Value = ((DateTime)Model.Header.CreatedAt).ToString("dd MMMM yyyy hh:mm tt") } })
                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.Header.CreatedAt, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Header.PreparedBy, htmlAttributes: new { @class = "control-label" })
                                                    <div class="input-group mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                                                        </div>
                                                        @Html.EditorFor(model => model.Header.PreparedBy, new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled", style = "font-size: 100%;" } })
                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.Header.PreparedBy, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="workFlowInformation">
                    <div class="card-body">
                        <div class="card card-info">
                            <div class="card-header"><h3 class="card-title">Workflow Information</h3></div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="card-body table-responsive p-sm-0">
                                            <table class="table table-striped table-hover" id="workflowItems">
                                                <thead>
                                                    <tr>
                                                        <th style="text-align: center; vertical-align: middle;" width="20%">Date</th>
                                                        <th style="text-align: center; vertical-align: middle;" width="35%">Details</th>
                                                        <th style="text-align: center; vertical-align: middle;" width="20%">Status</th>
                                                        <th style="text-align: center; vertical-align: middle;" width="25%">Office / Personnel</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.Workflow)
                                                    {
                                                        <tr>
                                                            <td><b>@item.UpdatedAt.ToString("dd MMM yyyy hh:mm tt")</b></td>
                                                            <td align="justify">@item.Remarks</td>
                                                            <td>@item.Status</td>
                                                            <td>@item.Office<br /><i>@item.Personnel</i></td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<h4>PPMP Line Items</h4>
<hr />
<div class="row">
    <div class="col-sm-12 pl-0 pr-0 ml-0 mr-0">
        <div class="card card-primary card-outline">
            <div class="card-header d-flex p-0">
                <ul class="nav nav-pills p-2">
                    <li class="nav-item" style="font-size:12pt;"><a class="nav-link active" href="#dbm" data-toggle="tab"><i class="fa fa-list"></i>&nbsp; PART I. Items Available at DBM-PS</a></li>
                    <li class="nav-item" style="font-size:12pt;"><a class="nav-link" href="#nonDBM" data-toggle="tab"><i class="fa fa-list"></i>&nbsp; PART II. Items Purchased from Other Sources</a></li>
                </ul>
            </div>
            <div class="tab-content">
                <div class="tab-pane active" id="dbm">
