                                                            @foreach (var item in Model.DBMItems)
                                                            {
                                                                <tr>
                                                                    <td style="text-align:justify; vertical-align: middle;">
                                                                        <span style="font-size:12pt"><b>@Html.DisplayFor(modelItem => item.ItemName) (<small><b>@Html.DisplayFor(modelItem => item.ItemCode)</b></small>)</b></span>
                                                                        <br /><br />
                                                                        <span style="font-size:9pt;">
                                                                            <b>@Html.DisplayNameFor(modelItem => item.ItemSpecifications)</b>
                                                                            <br />
                                                                            @Html.DisplayFor(modelItem => item.ItemSpecifications)
                                                                            <br /><br />
                                                                            <b>Unit of Measure : </b>@Html.DisplayFor(model => item.IndividualUOMReference)
                                                                            <br />
                                                                            <b>@Html.DisplayNameFor(modelItem => item.Remarks) : </b>@Html.DisplayFor(model => item.Remarks)
                                                                            <br />
                                                                            <b>@Html.DisplayNameFor(modelItem => item.Project) : </b>(@Html.DisplayFor(model => item.ProjectCode)) @Html.DisplayFor(model => item.Project)
                                                                        </span>
                                                                    </td>
                                                                    <td style="text-align:left; vertical-align:top;" width="7%">
                                                                        @if (item.JanMilestone != null)
                                                                        {
                                                                            @Html.DisplayNameFor(modelItem => item.JanMilestone)<span>:</span>
                                                                            <br />
                                                                        }
                                                                        @if (item.FebMilestone != null)
                                                                        {
                                                                            @Html.DisplayNameFor(modelItem => item.FebMilestone)<span>:</span>
                                                                            <br />
                                                                        }
                                                                        @if (item.MarMilestone != null)
                                                                        {
                                                                            @Html.DisplayNameFor(modelItem => item.MarMilestone)<span>:</span>
                                                                            <br />
                                                                        }
                                                                        @if (item.AprMilestone != null)
                                                                        {
                                                                            @Html.DisplayNameFor(modelItem => item.AprMilestone)<span>:</span>
                                                                            <br />
                                                                        }
                                                                        @if (item.MayMilestone != null)
                                                                        {
                                                                            @Html.DisplayNameFor(modelItem => item.MayMilestone)<span>:</span>
                                                                            <br />
                                                                        }
                                                                        @if (item.JunMilestone != null)
                                                                        {
                                                                            @Html.DisplayNameFor(modelItem => item.JunMilestone)<span>:</span>
                                                                            <br />
                                                                        }
                                                                        @if (item.JulMilestone != null)
                                                                        {
                                                                            @Html.DisplayNameFor(modelItem => item.JulMilestone)<span>:</span>
                                                                            <br />
                                                                        }
                                                                        @if (item.AugMilestone != null)
                                                                        {
                                                                            @Html.DisplayNameFor(modelItem => item.AugMilestone)<span>:</span>
                                                                            <br />
                                                                        }
                                                                        @if (item.SepMilestone != null)
                                                                        {
                                                                            @Html.DisplayNameFor(modelItem => item.SepMilestone)<span>:</span>
                                                                            <br />
                                                                        }
                                                                        @if (item.OctMilestone != null)
                                                                        {
                                                                            @Html.DisplayNameFor(modelItem => item.OctMilestone)<span>:</span>
                                                                            <br />
                                                                        }
                                                                        @if (item.NovMilestone != null)
                                                                        {
                                                                            @Html.DisplayNameFor(modelItem => item.NovMilestone)<span>:</span>
                                                                            <br />
                                                                        }
                                                                        @if (item.DecMilestone != null)
                                                                        {
                                                                            @Html.DisplayNameFor(modelItem => item.DecMilestone)<span>:</span>
                                                                        }
                                                                    </td>
                                                                    <td style="text-align:right; vertical-align:top;" width="7%">
                                                                        @if (item.JanMilestone != null)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => item.JanMilestone)
                                                                            <br />
                                                                        }
                                                                        @if (item.FebMilestone != null)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => item.FebMilestone)
                                                                            <br />
                                                                        }
                                                                        @if (item.MarMilestone != null)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => item.MarMilestone)
                                                                            <br />
                                                                        }
                                                                        @if (item.AprMilestone != null)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => item.AprMilestone)
                                                                            <br />
                                                                        }
                                                                        @if (item.MayMilestone != null)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => item.MayMilestone)
                                                                            <br />
                                                                        }
                                                                        @if (item.JunMilestone != null)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => item.JunMilestone)
                                                                            <br />
                                                                        }
                                                                        @if (item.JulMilestone != null)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => item.JulMilestone)
                                                                            <br />
                                                                        }
                                                                        @if (item.AugMilestone != null)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => item.AugMilestone)
                                                                            <br />
                                                                        }
                                                                        @if (item.SepMilestone != null)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => item.OctMilestone)
                                                                            <br />
                                                                        }
                                                                        @if (item.OctMilestone != null)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => item.OctMilestone)
                                                                            <br />
                                                                        }
                                                                        @if (item.NovMilestone != null)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => item.NovMilestone)
                                                                            <br />
                                                                        }
                                                                        @if (item.DecMilestone != null)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => item.DecMilestone)
                                                                        }
                                                                    </td>
                                                                    <td style="text-align:center; vertical-align:top;">
                                                                        @Html.DisplayFor(modelItem => item.TotalQty)
                                                                    </td>
                                                                    <td style="text-align:right; vertical-align:top;">
                                                                        @( String.Format("{0:C}", item.UnitCost) )
                                                                    </td>
                                                                    <td style="text-align:right; vertical-align:top;">
                                                                        @( String.Format("{0:C}", item.EstimatedBudget) )
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                        <tfoot>
                                                            <tr>
                                                                <td colspan="5" align="right"><h5>Total Estimated Budget (Part I):</h5></td>
                                                                <td align="right"><h5>@( string.Format("{0:C}", Model.DBMItems.Sum(d => d.EstimatedBudget)) )</h5></td>
                                                            </tr>
                                                        </tfoot>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="nonDBM">
                    <div class="card-body">
                        <div class="card card-info">
                            <div class="card-header"><h3 class="card-title">OTHER ITEMS NOT AVALABLE AT PS BUT REGULARLY PURCHASED FROM OTHER SOURCES</h3></div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="card-body table-responsive p-sm-0">
                                            <table class="table table-striped table-hover" id="nonDBMItems">
                                                <thead>
                                                    <tr>
                                                        <th rowspan="2" width="45%" style="text-align:center; vertical-align:middle">Item and Specifications</th>
                                                        <th colspan="3" style="text-align:center; vertical-align:middle">Quantity Requirement</th>
                                                        <th rowspan="2" width="15%" style="text-align:center; vertical-align:middle">Unit Cost</th>
                                                        <th rowspan="2" width="14%" style="text-align:center; vertical-align:middle">Estimated Budget</th>
                                                    </tr>
                                                    <tr>
                                                        <th width="14%" colspan="2" style="text-align:center; vertical-align:middle">Distribution</th>
                                                        <th width="7%" style="text-align:center; vertical-align:middle">Total</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.NonDBMItems)
                                                    {
                                                        <tr>
                                                            <td style="text-align:justify; vertical-align: middle;">
                                                                <span style="font-size:12pt"><b>@Html.DisplayFor(modelItem => item.ItemName) (<small><b>@Html.DisplayFor(modelItem => item.ItemCode)</b></small>)</b></span>
                                                                <br /><br />
                                                                <b>@Html.DisplayNameFor(modelItem => item.ItemSpecifications)</b>
                                                                <br />
                                                                @Html.DisplayFor(modelItem => item.ItemSpecifications)
                                                                <br /><br />
                                                                <b>Unit of Measure : </b>@Html.DisplayFor(model => item.IndividualUOMReference)
                                                                <br />
                                                                <b>@Html.DisplayNameFor(modelItem => item.Remarks) : </b>@Html.DisplayFor(model => item.Remarks)
                                                                <br />
                                                                <b>@Html.DisplayNameFor(modelItem => item.Project) : </b>(@Html.DisplayFor(model => item.ProjectCode)) @Html.DisplayFor(model => item.Project)
                                                            </td>
                                                            <td style="text-align:left; vertical-align:top;" width="7%">
                                                                @Html.DisplayNameFor(modelItem => item.JanMilestone)<span>:</span>
                                                                <br />
                                                                @Html.DisplayNameFor(modelItem => item.FebMilestone)<span>:</span>
                                                                <br />
                                                                @Html.DisplayNameFor(modelItem => item.MarMilestone)<span>:</span>
                                                                <br />
                                                                @Html.DisplayNameFor(modelItem => item.AprMilestone)<span>:</span>
                                                                <br />
                                                                @Html.DisplayNameFor(modelItem => item.MayMilestone)<span>:</span>
                                                                <br />
                                                                @Html.DisplayNameFor(modelItem => item.JunMilestone)<span>:</span>
                                                                <br />
                                                                @Html.DisplayNameFor(modelItem => item.JulMilestone)<span>:</span>
                                                                <br />
                                                                @Html.DisplayNameFor(modelItem => item.AugMilestone)<span>:</span>
                                                                <br />
                                                                @Html.DisplayNameFor(modelItem => item.SepMilestone)<span>:</span>
                                                                <br />
                                                                @Html.DisplayNameFor(modelItem => item.OctMilestone)<span>:</span>
                                                                <br />
                                                                @Html.DisplayNameFor(modelItem => item.NovMilestone)<span>:</span>
                                                                <br />
                                                                @Html.DisplayNameFor(modelItem => item.DecMilestone)<span>:</span>
                                                            </td>
                                                            <td style="text-align:right; vertical-align:top;" width="7%">
                                                                @Html.DisplayFor(modelItem => item.JanMilestone)
                                                                <br />
                                                                @Html.DisplayFor(modelItem => item.FebMilestone)
                                                                <br />
                                                                @Html.DisplayFor(modelItem => item.MarMilestone)
                                                                <br />
                                                                @Html.DisplayFor(modelItem => item.AprMilestone)
                                                                <br />
                                                                @Html.DisplayFor(modelItem => item.MayMilestone)
                                                                <br />
                                                                @Html.DisplayFor(modelItem => item.JunMilestone)
                                                                <br />
                                                                @Html.DisplayFor(modelItem => item.JulMilestone)
                                                                <br />
                                                                @Html.DisplayFor(modelItem => item.AugMilestone)
                                                                <br />
                                                                @Html.DisplayFor(modelItem => item.SepMilestone)
                                                                <br />
                                                                @Html.DisplayFor(modelItem => item.OctMilestone)
                                                                <br />
                                                                @Html.DisplayFor(modelItem => item.NovMilestone)
                                                                <br />
                                                                @Html.DisplayFor(modelItem => item.DecMilestone)
                                                            </td>
                                                            <td style="text-align:center; vertical-align:top;">
                                                                @Html.DisplayFor(modelItem => item.TotalQty)
                                                            </td>
                                                            <td style="text-align:right; vertical-align:top;">
                                                                @( String.Format("{0:C}", item.UnitCost) )
                                                            </td>
                                                            <td style="text-align:right; vertical-align:top;">
                                                                @( String.Format("{0:C}", item.EstimatedBudget) )
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <td colspan="5" align="right"><h5>Total Estimated Budget (Part II):</h5></td>
                                                        <td align="right"><h5>@( string.Format("{0:C}", Model.NonDBMItems.Sum(d => d.EstimatedBudget)) )</h5></td>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="float-right">
                            <h4>Total Estimated Budget: @( String.Format("{0:C}", Model.DBMItems.Sum(d => d.EstimatedBudget) + Model.NonDBMItems.Sum(d => d.EstimatedBudget)) )</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $('#dbmItems').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
    $(function () {
        $('#nonDBMItems').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
    $(function () {
        $('#workflowItems').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
    $("#submitPPMP").on('click', function (e) {
        e.preventDefault();
        swal.fire({
            title: "Submit PPMP?",
            text: "Submitting your PPMP shall be mean that it is final and is subject for approval, continue?",
            icon: "question",
            showCancelButton: true,
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: "@Url.Action("submitPPMP", "PPMPCSE")",
                    data: { ReferenceNo: '@Model.Header.ReferenceNo.ToString()' },
                    success: window.location = "@Url.Action("index","PPMP")"
                })
            }
        })
    });
</script>