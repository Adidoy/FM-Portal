<script type="text/javascript">
    $(function () {
        $('#ppmpListOriginal').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true
        });
    });
    $(function () {
        $('#ppmpListSupplemental').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true
        });
    });
    $(function () {
        $('#ppmpListAmendatory').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true
        });
    });
    $(function () {
        $('#ppmpYearsList').DataTable({
            "paging": false,
            "pageLength": 3,
            "lengthChange": false,
            "searching": false,
            "ordering": false,
            "info": false,
            "autoWidth": false,
        });
    });
    function SubmitPPMP() {
        swal.fire({
            title: "Submit PPMP?",
            text: "You are about submit your PPMP, continue?",
            icon: "question",
            showCancelButton: true,
        }).then((result) => {
            if (result.value) {
                $("#ppmpOriginal").submit();
            }
            else {
                swal.fire({
                    title: "Cancelled!",
                    text: "You have cancelled saving the record.",
                    icon: "error"
                })
            };
        })
    }
    function CreateResult(data) {
        if (data.result == true) {
            swal.fire({
                title: "PPMP Submitted!",
                text: "PPMPs are successfully forwarded to Budget Office.",
                icon: "success"
            }).then((result) => {
                if (result.value) {
                    var url = "@Url.Action("dashboard", "ProjectProcurementManagementPlans", new { Area = "end-users" })";
                    window.location.href = url;
                }
            })
        }
        else {
            swal.fire({
                title: "Record Not Saved!",
                text: "Saving record failed.",
                icon: "error"
            });
        }
    }
</script>