                                    {
                                        if (i == 0)
                                        {
                                            <li class="nav-item" style="font-size:12pt;"><a class="nav-link active" href="#@Model.ProjectPlans[i].ProjectCode" data-toggle="tab"><i class="fa fa-list"></i>&nbsp; @Model.ProjectPlans[i].ProjectCode</a></li>
