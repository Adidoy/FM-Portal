                                                            <div class="col-sm-9"><i>@Html.DisplayFor(modelItem => modelItem.Item.Category)</i></div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-2"><b>Procurement Source</b></div>
                                                            <div class="col-sm-1">:</div>
                                                            @Html.HiddenFor(modelItem => modelItem.Item.ProcurementSource)
                                                            <div class="col-sm-9"><i>@Html.DisplayFor(modelItem => modelItem.Item.ProcurementSource)</i></div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-2"><b>Unit of Measure</b></div>
                                                            <div class="col-sm-1">:</div>
                                                            @Html.HiddenFor(modelItem => modelItem.Item.IndividualUOMReference)
                                                            <div class="col-sm-9"><i>@Html.DisplayFor(modelItem => modelItem.Item.IndividualUOMReference)</i></div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-2"><b>Unit Cost</b></div>
                                                            <div class="col-sm-1">:</div>
                                                            @Html.HiddenFor(modelItem => modelItem.Item.UnitCost)
