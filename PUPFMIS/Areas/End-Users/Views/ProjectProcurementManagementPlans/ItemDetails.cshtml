                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-3 col-md-3 col-sm-12">
                                                        <b>@Html.DisplayNameFor(model => Model.ProjectPlans[i].Program)</b>
                                                    </div>
