@model IEnumerable<PUPFMIS.Models.SwitchBoardBodyVM>

@{
    ViewBag.Title = "Switchboard";
    ViewBag.Description = "Messages";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Dashboard", "dashboard", "Dashboard", new { Area = "end-users" }, null)</li>
        <li class="breadcrumb-item">Switchboard Messages</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Switchboard Messages</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="switchBoardList">
                <thead>
                    <tr>
                        <th style="text-align:center; vertical-align:middle" width="20%">
                            @Html.DisplayNameFor(model => model.Department)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="40%">
                            @Html.DisplayNameFor(model => model.Remarks)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="15%">
                            @Html.DisplayNameFor(model => model.ActionBy)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="25%">
                            @Html.DisplayNameFor(model => model.UpdatedAt)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:left; vertical-align:middle">
                                <b>@Html.DisplayFor(modelItem => item.Department)</b>
                            </td>
                            <td style="text-align:justify; vertical-align:middle">
                                @Html.DisplayFor(modelItem => item.Remarks)
                            </td>
                            <td style="text-align:left; vertical-align:middle">
                                @Html.DisplayFor(modelItem => item.ActionBy)
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                @Html.DisplayFor(modelItem => item.UpdatedAt)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <button style="text-align:left;" class="btn btn-danger btn-md" onclick="window.location = '@Url.Action("dashboard", "Dashboard")'"><i class="fa fa-arrow-circle-left"></i> Back to Dashboard</button>
        </div>
    </div>
</div>

<script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
         $(function () {
            $('#switchBoardList').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": false,
                "info": true,
                "autoWidth": true,
            });
        });
</script>