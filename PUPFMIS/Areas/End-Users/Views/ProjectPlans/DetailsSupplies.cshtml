<script type="text/javascript">
    function PostPPMP() {
        swal.fire({
            title: "Finalize Project Plan?",
            html: "<p>You are about to finalize this Project Plan and post it to PPMP, continue?</p><p style = 'font-size: 10pt;'><b>REMINDER:</b> This means that no changes can be made after this action.</p>",
            type: "warning",
            showCancelButton: true,
        }).then((result) => {
            if (result.value) {
                $("#addItem").submit();
            }
            else {
                swal.fire({
                    title: "Cancelled!",
                    text: "You have cancelled saving the record.",
                    type: "error"
                })
            };
        })
    }
    function CreateResult(data) {
        if (data == true) {
            swal.fire({
                title: "Record Saved!",
                text: "Project Plan is successfully posted to PPMP.",
                type: "success"
            }).then((result) => {
                if (result.value) {
                    window.location.href = "@Url.Action("list", "ProjectPlans", new { Area = "end-users", FiscalYear = Model.FiscalYear })";
                }
            })
        }
        else {
            swal.fire({
                title: "Record Not Saved!",
                text: "Saving record failed.",
                type: "error"
            });
        }
    }
</script>