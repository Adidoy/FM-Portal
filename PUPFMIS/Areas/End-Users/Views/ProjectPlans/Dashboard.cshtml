@{
    ViewBag.Title = "Project Planning";
    ViewBag.Description = "Dashboard";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("PPMP", "index")</li>
        <li class="breadcrumb-item">Dashboard</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-dashboard"></i> Dashboard</h3>
}
<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <h5>Actions</h5>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="info-box">
                    <span class="info-box-icon bg-secondary"><i class="fa fa-file-invoice"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text" style="font-size:14pt; font-weight:bold;"> @Html.ActionLink("My Project Plans", "list", "ProjectPlans", new { Area = "end-users" }, null)</span>
                        <span class="info-box-number" style="font-size:8pt;">
                            View, submit and monitor updates for Project Plans.
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="info-box">
                    <span class="info-box-icon bg-warning"><i class="fa fa-search"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text" style="font-size:14pt; font-weight:bold;"> @Html.ActionLink("My PPMP", "list", "ProjectProcurementManagementPlans", new { Area = "end-users" }, null)</span>
                        <span class="info-box-number" style="font-size:8pt;">
                            View, submit and monitor updates for PPMPs.
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <h5>Statistics</h5>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>150</h3>

                        <p>Projects</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-file"></i>
                    </div>
                    @*<a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>*@
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12">
                
            </div>
        </div>
    </div>
</div>
