@model IEnumerable<PUPFMIS.Models.ProjectPlanListVM>

@{
    ViewBag.Title = "Project Planning";
    ViewBag.Description = "End User Projects";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-tachometer-alt"></i>&nbsp;@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Project Plans Dashboard", "dashboard", "Dashboard", new { Area = "end-users" }, null)</li>
        <li class="breadcrumb-item">Project List</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> End User Projects</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align: center; vertical-align: middle;" width="60%">
                            Project Details
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="10%">
                            @Html.DisplayNameFor(model => model.ProjectStatus)
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="10%">
                            @Html.DisplayNameFor(model => model.EstimatedBudget)
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="20%">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:left; vertical-align:middle;">

                                <div class="row">
                                    <div class="col-sm-2">
                                        <b>@Html.LabelFor(modelItem => item.Program, htmlAttributes: new { @class = "p-0 m-0" })</b>
                                    </div>
                                    <div class="col-sm-10">
                                        <span>:&nbsp;</span>@Html.DisplayFor(modelItem => item.Program, new { @class = "p-0 m-0" }) <small>(@Html.DisplayFor(modelItem => item.PAPCode, new { @class = "p-0 m-0" }))</small>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-2">
                                        <b>@Html.Label("Project", htmlAttributes: new { @class = "p-0 m-0" })</b>
                                    </div>
                                    <div class="col-sm-10">
                                        <span>:&nbsp;</span>@Html.DisplayFor(modelItem => item.ProjectName, new { @class = "p-0 m-0" }) <small>(@Html.DisplayFor(modelItem => item.ProjectCode, new { @class = "p-0 m-0" }))</small>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-2">
                                        <b>@Html.LabelFor(modelItem => item.Office, htmlAttributes: new { @class = "p-0 m-0" })</b>
                                    </div>
                                    <div class="col-sm-10">
                                        <span>:&nbsp;</span>@Html.DisplayFor(modelItem => item.Office, new { @class = "p-0 m-0" })
                                    </div>
                                </div>
                            </td>
                            <td style="text-align:left; vertical-align:middle;">
                                @Html.DisplayFor(modelItem => item.ProjectStatus)
                            </td>
                            <td style="text-align:right; vertical-align:middle;">
                                @( String.Format("{0:C}", item.EstimatedBudget ))
                            </td>
                            <td style="text-align:center; vertical-align:middle;">
                                <button type="button" class="btn btn-sm btn-primary" onclick="window.location = '@Url.Action("project-details", "ProjectPlans", new { Area = "end-users", ProjectCode = item.ProjectCode })'"><i class="fa fa-eye"></i> View Details</button>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2" style="text-align:right; font-size:14pt;"><b>Total Estimated Budget:</b></td>
                        <td style="text-align:right; font-size:14pt;"><b>@( Model.Sum(d => d.EstimatedBudget).ToString("C", new System.Globalization.CultureInfo("en-ph")) )</b></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            @if (Model.Where(d => d.ProjectStatus == PUPFMIS.Models.ProjectStatus.EvaluatedByResponsibilityCenter.GetAttribute<System.ComponentModel.DataAnnotations.DisplayAttribute>().Name).Count() >= 1)
            {
                using (Ajax.BeginForm("post-project-to-ppmp", "ProjectPlans", new { Area = "end-users", FiscalYear = ViewBag.FiscalYear }, new AjaxOptions() { HttpMethod = "POST", OnSuccess = "CreateResult" }, htmlAttributes: new { id = "addItem" }))
                { @Html.AntiForgeryToken() }
                <button style="text-align:left;" class="btn btn-primary btn-md" onclick="PostToPPMP()"><i class="fa fa-save"></i> Post Evaluated Projects to PPMP</button>
            }
            <button style="text-align:left;" class="btn btn-danger btn-md" onclick="window.location = '@Url.Action("dashboard", "Dashboard")'"><i class="fa fa-arrow-circle-left"></i> Back to Dashboard</button>
        </div>
    </div>
</div>

<script type="text/javascript">
    function PostToPPMP() {
        swal.fire({
            title: "Post Projects to PPMP?",
            text: "You are about post your Project Plans to PPMP, continue?",
            icon: "question",
            showCancelButton: true,
        }).then((result) => {
            if (result.value) {
                $("#addItem").submit();
            }
            else {
                swal.fire({
                    title: "Cancelled!",
                    text: "You have cancelled saving the record.",
                    icon: "error"
                })
            };
        })
    }
    function CreateResult(data) {
        if (data.result == true) {
            swal.fire({
                title: "Projects Posted!",
                text: "Project Plans are successfully posted to PPMP.",
                icon: "success"
            }).then((result) => {
                if (result.value) {
                    var url = "@Url.Action("list", "ProjectPlans", new { Area = "end-users", FiscalYear = ViewBag.FiscalYear })";
                    window.location.href = url;
                }
            })
        }
        else {
            swal.fire({
                title: "Record Not Saved!",
                text: "Saving record failed.",
                icon: "error"
            });
        }
        var vsummary = $("#ValidationSummary");
        if (vsummary.val() != null) {
            $("input").blur();
            $(window).scrollTop(0,0);
        }
    }
</script>