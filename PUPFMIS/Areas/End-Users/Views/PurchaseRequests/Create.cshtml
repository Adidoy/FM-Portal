@model IEnumerable<PUPFMIS.Models.ProcurementProgramsVM>

@{
    ViewBag.Title = "Purchase Request";
    ViewBag.Description = "Procurement Programs";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Purchase Requests Dashboard", "dashboard", "PurchaseRequests", new { Area = "end-users" }, null)</li>
        <li class="breadcrumb-item">Create</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-bookmark"></i> Procurement Programs List</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align:center; vertical-align:middle" width="15%">
                            @Html.DisplayNameFor(d => d.PAPCode)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="30%">
                            @Html.DisplayNameFor(d => d.ProcurementProgram)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="20%">
                            @Html.DisplayNameFor(d => d.ProjectCoordinator)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="15%">
                            @Html.DisplayNameFor(d => d.FundSource)
                        </th>
                        <th style="text-align:center; vertical-align:middle" width="20%">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center; vertical-align:middle">
                                @Html.DisplayFor(d => item.PAPCode)
                            </td>
                            <td style="text-align:left; vertical-align:middle">
                                @Html.DisplayFor(d => item.ProcurementProgram)
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                @Html.DisplayFor(d => item.ProjectCoordinator)
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                @Html.DisplayFor(d => item.FundSource)
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                <button class="btn btn-primary btn-sm" onclick="window.location = '@Url.Action("details", "PurchaseRequests", new { Area = "end-users", PAPCode = item.PAPCode })'"><i class="fa fa-eye"></i> View Details</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>