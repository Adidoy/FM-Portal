@model IEnumerable<PUPFMIS.Models.PurchaseRequestHeader>

@{
    ViewBag.Title = "Purchase Requests";
    ViewBag.Description = "Dashboard";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Purchase Requests", "dashboard")</li>
        <li class="breadcrumb-item">Dashboard</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-home"></i> Purchase Request Dashboard</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align:center; vertical-align:middle">
                            @Html.DisplayNameFor(d => d.PRNumber)
                        </th>
                        <th style="text-align:center; vertical-align:middle">
                            @Html.DisplayNameFor(d => d.ProcurementSource)
                        </th>
                        <th style="text-align:center; vertical-align:middle">
                            @Html.DisplayNameFor(d => d.FundCluster)
                        </th>
                        <th style="text-align:center; vertical-align:middle">
                            @Html.DisplayNameFor(d => d.CreatedAt)
                        </th>
                        <th style="text-align:center; vertical-align:middle">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center; vertical-align:middle">
                                @Html.DisplayFor(d => item.PRNumber)
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                @( item.ProcurementSource == PUPFMIS.Models.ProcurementSources.PS_DBM ? "PS-DBM" : "Private Suppliers"  )
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                @Html.DisplayFor(d => item.FundCluster)
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                @( item.CreatedAt.ToString("dd MMM yyyy") )
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                <a class="btn btn-sm btn-primary" href="@Url.Action("print", "PurchaseRequests", new { Area = "end-users", PRNumber = item.PRNumber })" target="_blank"><i class="fa fa-print"></i> Print Purchase Request</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>