@model PUPFMIS.Models.InfrastructureProjectsVM

<div class="row">
    <div class="col-sm-12">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Project Details</h3>
            </div>
            <div class="card-body">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-lg-5 col-md-5 col-sm-12">
                            <div class="form-group">
                                @Html.HiddenFor(model => Model.Project.ID)
                                @Html.HiddenFor(model => Model.Project.RequestReference)
                                @Html.LabelFor(model => Model.Project.ProjectTitle)
                                @Html.EditorFor(model => model.Project.ProjectTitle, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%", autocomplete = "off", disabled = "disabled" } })
                            </div>
                        </div>
                        <div class="col-lg-5 col-md-5 col-sm-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Project.ProjectLocation, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Project.ProjectLocation, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%", autocomplete = "off", disabled = "disabled" } })
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Project.ContractDuration, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Project.ContractDuration, new { htmlAttributes = new { @class = "form-control form-control-sm", style = "font-size: 100%", autocomplete = "off", disabled = "disabled" } })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card card-info">
            <div class="card-header"><h3 class="card-title">Detailed Estimate Items</h3></div>
            <div class="card-body">
                <div class="card-body table-responsive p-sm-0">
                    <table class="table table-striped table-hover" id="example2">
                        <thead>
                            <tr>
                                <th style="text-align: center; vertical-align: middle;" width="29%">
                                    Material/Work Requirement
                                </th>
                                <th style="text-align: center; vertical-align: middle;" width="28%">
                                    Direct Cost
                                </th>
                                <th style="text-align: center; vertical-align: middle;" width="28%">
                                    Indirect Cost
                                </th>
                                <th style="text-align: center; vertical-align: middle;" width="15%">
                                    Total Amount
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DetailedEstimate)
                            {
                                <tr>
                                    <td style="text-align:left; vertical-align:top;">
                                        <b>@Html.DisplayFor(modelItem => item.Classification)</b>
                                        <br />
                                        @if (item.Requirement != string.Empty)
                                        {
                                            @Html.DisplayFor(modelItem => item.Requirement)
                                            <br />
                                        }
                                        @Html.DisplayFor(modelItem => item.Material)
                                        <br />
                                        @if (item.MaterialSpecification != null)
                                        {
                                            @Html.DisplayFor(modelItem => item.MaterialSpecification)
                                            <br />
                                        }
                                        @Html.DisplayNameFor(modelItem => item.Quantity): @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                    <td style="text-align:left; vertical-align:top;">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(d => item.ItemUnitCost, htmlAttributes: new { @class = "m-0 p-0" }) :
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12" style="text-align:right">
                                                @( item.ItemUnitCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(d => item.ItemTotalCost, htmlAttributes: new { @class = "m-0 p-0" }) :
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12" style="text-align:right">
                                                @( item.ItemTotalCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(d => item.LaborUnitCost, htmlAttributes: new { @class = "m-0 p-0" }) :
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12" style="text-align:right">
                                                @( item.LaborUnitCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(d => item.LaborTotalCost, htmlAttributes: new { @class = "m-0 p-0" }) :
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12" style="text-align:right">
                                                @( item.LaborTotalCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(d => item.EstimatedDirectCost, htmlAttributes: new { @class = "m-0 p-0" }) :
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12" style="text-align:right">
                                                @( item.EstimatedDirectCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                                            </div>
                                        </div>
                                    </td>
                                    <td style="text-align:left; vertical-align:top;">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(d => item.MobDemobilizationCost, htmlAttributes: new { @class = "m-0 p-0" }) :
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12" style="text-align:right">
                                                @( item.MobDemobilizationCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(d => item.OCMCost, htmlAttributes: new { @class = "m-0 p-0" }) :
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12" style="text-align:right">
                                                @( item.OCMCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(d => item.ProfitCost, htmlAttributes: new { @class = "m-0 p-0" }) :
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12" style="text-align:right">
                                                @( item.ProfitCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(d => item.VAT, htmlAttributes: new { @class = "m-0 p-0" }) :
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12" style="text-align:right">
                                                @( item.VAT.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @Html.LabelFor(d => item.TotalIndirectCost, htmlAttributes: new { @class = "m-0 p-0" }) :
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12" style="text-align:right">
                                                @( item.TotalIndirectCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                                            </div>
                                        </div>
                                    </td>
                                    <td style="text-align:right; vertical-align:top;">
                                        @( item.TotalAmount.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>