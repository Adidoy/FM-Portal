@model IEnumerable<PUPFMIS.Models.InfrastructureProject>

@{
    ViewBag.Title = "Infrastructure Projects";
    ViewBag.Description = "List";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-tachometer-alt"></i>&nbsp;@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">Infrastructure Projects</li>
        <li class="breadcrumb-item">List</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Infrastructure Projects List</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align: center; vertical-align: middle;" width="35%">
                            @Html.DisplayNameFor(model => model.ProjectTitle)
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="35%">
                            @Html.DisplayNameFor(model => model.ProjectLocation)
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="15%">
                            @Html.DisplayNameFor(model => model.ContractDuration)
                        </th>
                        <th style="text-align: center; vertical-align: middle;" width="15%">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:left; vertical-align:middle;">
                                @Html.DisplayFor(modelItem => item.ProjectTitle)
                            </td>
                            <td style="text-align:left; vertical-align:middle;">
                                @Html.DisplayFor(modelItem => item.ProjectLocation)
                            </td>
                            <td style="text-align:center; vertical-align:middle;">
                                @Html.DisplayFor(modelItem => item.ContractDuration) Calendar Days
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                <button type="button" class="btn btn-md btn-primary" onclick="window.location='@Url.Action("details", "InfrastructureProjects", new { Area = "infrastructure-unit", ID = item.ID })'"><i class="fa fa-eye"></i> View Details</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#acceptedTbl').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
        $('#notAcceptedTbl').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
</script>