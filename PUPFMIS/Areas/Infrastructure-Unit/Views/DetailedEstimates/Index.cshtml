@model IEnumerable<PUPFMIS.Models.InfrastructureProjectVM>

@{
    ViewBag.Title = "Institutional Procurement Planning";
    ViewBag.Description = "Home";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-tachometer-alt"></i>&nbsp;@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Institutional Procurement Planning", "office")</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Infrastructure Request List</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align:center;" width="15%">
                            @Html.DisplayNameFor(model => model.InfraProjectCode)
                        </th>
                        <th style="text-align:center;" width="25%">
                            @Html.DisplayNameFor(model => model.ProjectTitle)
                        </th>
                        <th style="text-align:center;" width="20%">
                            @Html.DisplayNameFor(model => model.InfraProjectType)
                        </th>
                        <th style="text-align:center;" width="15%">
                            @Html.DisplayNameFor(model => model.ProjectLocation)
                        </th>
                        <th style="text-align:center;" width="10%">
                            @Html.DisplayNameFor(model => model.ContractDuration)
                        </th>
                        <th style="text-align:center;" width="15%">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td style="text-align:left; vertical-align:middle;">
                            <b>@Html.DisplayFor(modelItem => item.InfraProjectCode)</b>
                        </td>
                        <td style="text-align:left; vertical-align:middle;">
                            <b>@Html.DisplayFor(modelItem => item.ProjectTitle)</b>
                        </td>
                        <td style="text-align:left; vertical-align:middle;">
                            @(item.InfraProjectType + " (" + item.ItemCode + ")")
                        </td>
                        <td style="text-align:left; vertical-align:middle;">
                            @Html.DisplayFor(modelItem => item.ProjectLocation)
                        </td>
                        <td style="text-align:center; vertical-align:middle;">
                            @Html.DisplayFor(modelItem => item.ContractDuration)
                        </td>
                        <td style="text-align:center; vertical-align:top;">
                            <button style="text-align:left;" class="btn btn-primary btn-sm" onclick="window.location = '@Url.Action("details", "DetailedEstimates", new { InfraProjectCode = item.InfraProjectCode })'"><i class="fa fa-eye"></i> View Details</button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div style="text-align: right;">
            <button type="button" class="btn btn-md btn-danger" onclick="window.location = '@Url.Action("index", "Home", new { Area = "" })'"><i class="fa fa-arrow-circle-left"></i> Back to Dashboard</button>
        </div>
    </div>
</div>