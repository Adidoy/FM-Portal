@model PUPFMIS.Models.InfrastructureProjectVM

@{
    ViewBag.Title = "Infrastructure Detailed Estimates";
    ViewBag.Description = "Details";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-tachometer-alt"></i>&nbsp;@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Detailed Estimates", "list", "DetailedEstimates", new { area = "infrastructure-unit" }, null)</li>
        <li class="breadcrumb-item">Details</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-right">
        <h1 class="card-title"><i class="fa fa-bookmark"></i> Infrastructure Project Detailed Estimates</h1>
    </div>
}

<div class="row">
    <div class="col-sm-12 col-md-7 col-lg-7 order-2 order-md-2">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header"><h5 class="card-title text-primary"><i class="fas fa-file-contract"></i> <b>Infrastructure Project Details</b></h5></div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="info-box">
                                    <span class="info-box-icon bg-info elevation-1"><i class="fa fa-hammer"></i></span>
                                    <div class="info-box-content">
                                        @Html.HiddenFor(model => Model.InfraProjectType)
                                        @Html.HiddenFor(model => Model.ItemCode)
                                        <span class="info-box-text text-muted pb-1" style="font-size:10pt; font-weight:bold;">@Html.DisplayNameFor(model => model.InfraProjectType)</span>
                                        <span class="info-box-number text-primary mb-0" style="font-size:11pt;">@Html.DisplayFor(model => model.InfraProjectType)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="info-box">
                                    <span class="info-box-icon bg-info elevation-1"><i class="fas fa-lightbulb"></i></span>
                                    <div class="info-box-content">
                                        @Html.HiddenFor(model => Model.InfraProjectCode)
                                        @Html.HiddenFor(model => Model.ProjectTitle)
                                        <span class="info-box-text text-muted pb-1" style="font-size:10pt; font-weight:bold;">@Html.DisplayNameFor(model => model.ProjectTitle)</span>
                                        <span class="info-box-number text-primary mb-0" style="font-size:11pt;">@Html.DisplayFor(model => model.ProjectTitle)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="info-box">
                                    <span class="info-box-icon bg-info elevation-1"><i class="fas fa-comment"></i></span>
                                    <div class="info-box-content">
                                        @Html.HiddenFor(model => Model.ProjectLocation)
                                        <span class="info-box-text text-muted pb-1" style="font-size:10pt; font-weight:bold;">@Html.DisplayNameFor(model => model.ProjectLocation)</span>
                                        <span class="info-box-number text-primary mb-0" style="font-size:11pt;">@Html.DisplayFor(model => model.ProjectLocation)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="info-box">
                                    <span class="info-box-icon bg-info elevation-1"><i class="fas fa-calendar"></i></span>
                                    <div class="info-box-content">
                                        @Html.HiddenFor(model => Model.ContractDuration)
                                        <span class="info-box-text text-muted pb-1" style="font-size:10pt; font-weight:bold;">@Html.DisplayNameFor(model => model.ContractDuration)</span>
                                        <span class="info-box-number text-primary mb-0" style="font-size:11pt;">@Html.DisplayFor(model => model.ContractDuration)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-sm-12 col-md-5 col-lg-5 order-1 order-md-1">
        <div class="card">
            <div class="card-header"><h5 class="card-title text-primary"><i class="fas fa-file-contract"></i> <b>End-User Project Details</b></h5></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="text-muted">
                            <p class="text-sm">
                                @Html.HiddenFor(model => model.FiscalYear)
                                @Html.DisplayNameFor(model => model.FiscalYear)
                                <b class="d-block text-primary">@Html.DisplayFor(model => model.FiscalYear)</b>
                            </p>
                            <p class="text-sm">
                                @Html.HiddenFor(model => model.PAPCode)
                                @Html.HiddenFor(model => model.Program)
                                @Html.DisplayNameFor(model => model.Program)
                                <b class="d-block text-primary">@Html.DisplayFor(model => model.Program) <small>(@Html.DisplayFor(model => model.PAPCode))</small></b>
                            </p>
                            <p class="text-sm">
                                @Html.HiddenFor(model => model.ProjectCode)
                                @Html.HiddenFor(model => model.EndUserProjectName)
                                @Html.DisplayNameFor(model => model.EndUserProjectName)
                                <b class="d-block text-primary">@Html.DisplayFor(model => model.EndUserProjectName) <small>(@Html.DisplayFor(model => model.ProjectCode))</small></b>
                            </p>
                            <p class="text-sm">
                                @Html.HiddenFor(model => model.Department)
                                @Html.DisplayNameFor(model => model.Department)
                                <b class="d-block text-primary">@Html.DisplayFor(model => model.Department)</b>
                            </p>
                            <p class="text-sm">
                                @Html.HiddenFor(model => model.Unit)
                                @Html.DisplayNameFor(model => model.Unit)
                                <b class="d-block text-primary">@Html.DisplayFor(model => model.Unit)</b>
                            </p>
                            <p class="text-sm">
                                @Html.HiddenFor(model => model.DeliveryMonth)
                                @Html.DisplayNameFor(model => model.DeliveryMonth)
                                <b class="d-block text-primary">@Html.DisplayFor(model => model.DeliveryMonth)</b>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Material/Labor Estimates</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="float-right">
                            <button type="button" class="btn btn-md btn-warning" onclick="window.location.href = '@Url.Action("view-catalogue", "MaterialsCatalogue", new { Area = "infrastructure-unit", InfraProjectCode = Model.InfraProjectCode })'"><i class="fa fa-plus"></i> Add Material/Labor Estimates</button>
                        </div>
                    </div>
                </div>
                <hr />
                <table class="table table-striped table-hover display">
                    <thead>
                        <tr>
                            <th style="text-align:center; vertical-align:middle" width="40%">Material/Labor</th>
                            <th style="text-align:center; vertical-align:middle" width="15%">Quantity/Unit of Measure</th>
                            <th style="text-align:center; vertical-align:middle" width="25%">Total Unit Cost</th>
                            <th style="text-align:center; vertical-align:middle" width="20%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DetailedEstimates)
                        {
                            <tr>
                                <td style="text-align:left; vertical-align:middle;">
                                    @Html.HiddenFor(modelItem => item.Material)
                                    <b>@Html.DisplayFor(modelItem => item.Material)</b>
                                </td>
                                <td style="text-align:center; vertical-align:middle;">
                                    @Html.HiddenFor(modelItem => item.Quantity)
                                    @Html.HiddenFor(modelItem => item.UOM)
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                    <br />
                                    @Html.DisplayFor(modelItem => item.UOM)
                                </td>
                                <td style="text-align:right; vertical-align:middle;">
                                    @Html.HiddenFor(modelItem => item.TotalAmount)
                                    <b>@(item.TotalAmount.ToString("N", new System.Globalization.CultureInfo("en-ph")))</b>
                                </td>
                                <td style="text-align:center; vertical-align:middle;">
                                    <button type="button" class="btn btn-sm btn-primary" onclick="window.location = '@Url.Action("project-item-details", "ProjectPlans", new { Area = "end-users", InfraProjectCode = Model.ProjectCode, ItemID = item.ID })'"><i class="fa fa-eye"></i> View Details</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td align="right" colspan="2"><h5>TOTAL ESTIMATED BUDGET:</h5></td>
                            <td align="right"><h5>@(Model.DetailedEstimates.Sum(d => d.TotalAmount).ToString("C", new System.Globalization.CultureInfo("en-ph")))</h5></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section FormFooter{
    @using (Ajax.BeginForm("post-to-ppmp", "ProjectPlans", new AjaxOptions() { HttpMethod = "POST", OnSuccess = "CreateResult" }, htmlAttributes: new { id = "addItem", Area = "end-users" }))
    {
        <div class="row">
            <div class="col-sm-12">
                <div style="text-align: right;">
                    @if (Model.DetailedEstimates.Count > 0)
                    {
                        <a class="btn btn-md btn-primary" href="@Url.Action("print-description", "ProjectPlans", new { Area = "end-users", ProjectCode = Model.ProjectCode })" target="_blank"><i class="fa fa-print"></i> Print Detailed Estimates</a>
                        <button type="button" class="btn btn-md btn-primary" onclick='SubmitProject()'><i class="fa fa-plus-circle"></i> Post to End-User's Project Plan</button>
                    }
                    <button type="button" class="btn btn-md btn-danger" onclick='window.location = "@Url.Action("list", "ProjectPlans", new { Area = "end-users", FiscalYear = Model.FiscalYear })"'><i class="fa fa-arrow-circle-left"></i> Back to Projects List</button>
                </div>
            </div>
        </div>
    }
}

<script type="text/javascript">
    $(function () {
        $('#items').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
    $(function () {
        $('#newItems').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
    function SubmitProject() {
        swal.fire({
            title: "Post Detailed Estimates to End-User's Project Plan?",
            text: "You are about to post this Detailed Estimates to the End-User's Project Plan, continue?",
            icon: "question",
            showCancelButton: true,
        }).then((result) => {
            if (result.value) {
                $("#addItem").submit();
            }
            else {
                swal.fire({
                    title: "Cancelled!",
                    text: "You have cancelled saving the record.",
                    icon: "error"
                })
            };
        })
    }
    function CreateResult(data) {
        if (data.result == true) {
            swal.fire({
                title: "Record Saved!",
                text: "Detailed Estimates is posted to End-User's Project Plan.",
                icon: "success"
            }).then((result) => {
                if (result.value) {
                    window.location.href = "@Url.Action("list", "DetailedEstimates", new { Area = "infrastructure-unit" })";
                }
            })
        }
        else {
            swal.fire({
                title: "Record Not Saved!",
                text: "Saving record failed.",
                icon: "error"
            });
        }
    }
    function RemoveItem(itemCode) {
        var ItemCode = itemCode;
        var url = '@Url.Action("remove-item", "ProjectPlans", new { Area = "end-users", ItemCode = "xxxx-xx", ProjectCode = Model.ProjectCode })';
        url = url.replace("xxxx-xx", itemCode);
        swal.fire({
            title: "Remove item from Project?",
            html: '<p style=font-size:12pt;">You are about to <b>permanently remove</b> this item from the Project, continue?</p>',
            icon: "question",
            showCancelButton: true
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    type: "GET",
                    url: url,
                    success: function (data) {
                        if (data.result == true) {
                            swal.fire({
                                title: "Item Removed!",
                                text: "Item is removed from the Project.",
                                icon: "success"
                            }).then((result) => {
                                var url = '@Url.Action("project-details", "ProjectPlans", new { Area = "end-users", ProjectCode = Model.ProjectCode })';
                                window.location = url;
                            })
                        }
                    }
                });
            }
            else {
                swal.fire({
                    title: "Cancelled!",
                    text: "You have cancelled saving the record.",
                    icon: "error"
                })
            };
        })
    }
</script>