@model IEnumerable<PUPFMIS.Models.MaterialsCatalogueVM>

@{
    ViewBag.Title = "Materials/Labor";
    ViewBag.Description = "Catalogue";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-tachometer-alt"></i>&nbsp;@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Detailed Estimates", "list", "DetailedEstimates", new { area = "infrastructure-unit" }, null)</li>
        <li class="breadcrumb-item">Materials/Labor Catalogue</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Materials/Labor Catalogue</h3>
}

<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-hover" id="example2">
            <thead>
                <tr>
                    <th style="text-align:center;">
                        Materials List
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:left; vertical-align:middle;">
                            <h4 style="text-align:left;">@Html.DisplayFor(modelItem => item.ItemName)</h4>
                            <hr />
                            <h6>ITEM SPECIFICATIONS:</h6>
                            <p style="text-align:justify; font-style:italic; font-size:12pt;">@Html.DisplayFor(modelItem => item.ItemSpecifications)</p>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="row">
                                        <div class="col-lg-3 col-md-3 col-sm-12" style="font-size: 10pt;">
                                            <b>Work Classification</b>
                                        </div>
                                        <div class="col-lg-9 col-md-9 col-sm-12" style="font-size: 10pt;">
                                            <span>:</span> &nbsp; @Html.DisplayFor(modelItem => item.WorkClassification)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-3 col-sm-12" style="font-size: 10pt;">
                                            <b>Work Requirement</b>
                                        </div>
                                        <div class="col-lg-9 col-md-9 col-sm-12" style="font-size: 10pt;">
                                            <span>:</span> &nbsp; @Html.DisplayFor(modelItem => item.WorkRequirement)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-3 col-sm-12" style="font-size: 10pt;">
                                            <b>Unit of Measure</b>
                                        </div>
                                        <div class="col-lg-9 col-md-9 col-sm-12" style="font-size: 10pt;">
                                            <span>:</span> &nbsp; @Html.DisplayFor(modelItem => item.UnitOfMeasure)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div style="text-align:right;">
                                <button type="button" class="btn btn-sm btn-success" onclick="window.location = '@Url.Action("add-material", "MaterialsCatalogue", new { Area = "infrastructure-unit", ID = item.ID })'"><i class="fa fa-plus"></i> Add Material/Labor to Estimates</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div style="text-align: right;">
            <button type="button" class="btn btn-md btn-primary" onclick="window.location = '@Url.Action("view-estimates", "MaterialsCatalogue", new { Area = "infrastructure-unit" })'"> <i class="fa fa-shopping-basket"></i> View Estimates</button>
            <button type="button" class="btn btn-md btn-danger" onclick="window.location = '@Url.Action("details", "DetailedEstimates", new { Area = "infrastructure-unit" })'"><i class="fa fa-arrow-alt-circle-left"></i> Back to Detailed Estimates</button>
        </div>
    </div>
</div>