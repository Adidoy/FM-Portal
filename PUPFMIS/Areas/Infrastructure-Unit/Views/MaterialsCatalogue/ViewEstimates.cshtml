@model PUPFMIS.Models.MaterialsBasket

@{
    ViewBag.Title = "Estimates";
    ViewBag.Description = "View";
    Layout = "~/Views/Shared/_BodyLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-tachometer-alt"></i>&nbsp;@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Dashboard", "dashboard", "Dashboard", new { Area = "infrastructure-unit" }, null)</li>
        <li class="breadcrumb-item">Estimates</li>
    </ol>
}

@section Header {
    <div class="col-md-12 text-right">
        <h1 class="card-title"><i class="fa fa-bookmark"></i> Materials/Labor Estimates</h1>
    </div>
}


@using (Ajax.BeginForm("post-to-project", "MaterialsCatalogue", new { Area = "infrastructure-unit", InfraProjectCode = Model.InfraProjectCode }, new AjaxOptions() { HttpMethod = "POST", OnSuccess = "CreateResult", UpdateTargetId = "form-container" }, htmlAttributes: new { id = "addItem" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger", style = "font-size: 12pt;" })
    @Html.HiddenFor(model => model.InfraProjectCode)

    <div class="row">
        <div class="col-sm-12">
            <div class="card-body table-responsive p-sm-0">
                <table class="table table-striped table-hover" id="basket">
                    <thead>
                        <tr>
                            <th width="30%" style="text-align:center; vertical-align:middle">Material/Labor</th>
                            <th width="55%" style="text-align:center; vertical-align:middle">Costing</th>
                            <th width="15%" style="text-align:center; vertical-align:middle">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ItemList)
                        {
                            <tr>
                                <td style="text-align:left; vertical-align: top;">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <span style="font-size:12pt"><b>@Html.DisplayFor(modelItem => item.Material)</b></span>
                                            <div class="row" style="font-size:10pt;">
                                                <div class="col-sm-4">@Html.DisplayNameFor(modelItem => item.Quantity)</div>
                                                <div class="col-sm-1">:</div>
                                                <div class="col-sm-7">@Html.DisplayFor(modelItem => item.Quantity) @Html.DisplayFor(modelItem => item.UOM)</div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td style="text-align: justify; vertical-align: top;">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <h6>DIRECT COST:</h6>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6" style="font-size:9pt;">@Html.DisplayNameFor(modelItem => item.ItemUnitCost)</div>
                                        <div class="col-sm-1" style="font-size:9pt;">:</div>
                                        <div class="col-sm-5" style="text-align: right; font-size: 9pt;">@( item.ItemUnitCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6" style="font-size:9pt;">@Html.DisplayNameFor(modelItem => item.ItemTotalCost)</div>
                                        <div class="col-sm-1" style="font-size:9pt;">:</div>
                                        <div class="col-sm-5" style="text-align: right; font-size: 9pt;">@( item.ItemTotalCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )</div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-6" style="font-size:9pt;">@Html.DisplayNameFor(modelItem => item.LaborUnitCost)</div>
                                        <div class="col-sm-1" style="font-size:9pt;">:</div>
                                        <div class="col-sm-5" style="text-align: right; font-size: 9pt;">@( item.LaborUnitCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6" style="font-size:9pt;">@Html.DisplayNameFor(modelItem => item.LaborTotalCost)</div>
                                        <div class="col-sm-1" style="font-size:9pt;">:</div>
                                        <div class="col-sm-5" style="text-align: right; font-size: 9pt;">@( item.LaborTotalCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )</div>
                                    </div>
                                    <hr class="pb-0 pt-0 mb-1 mt-1" />
                                    <div class="row">
                                        <div class="col-sm-6"><h6>Total Estimated Direct Cost</h6></div>
                                        <div class="col-sm-1">:</div>
                                        <div class="col-sm-5" style="text-align:right"><h6>@( item.EstimatedDirectCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )</h6></div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <h6>INDIRECT COST:</h6>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <b>Mark-ups:</b>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6" style="font-size:9pt;">@Html.DisplayNameFor(modelItem => item.MobDemobilizationCost)</div>
                                        <div class="col-sm-1" style="font-size:9pt;">:</div>
                                        <div class="col-sm-5" style="text-align: right; font-size: 9pt;">@( item.MobDemobilizationCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6" style="font-size:9pt;">@Html.DisplayNameFor(modelItem => item.OCMCost)</div>
                                        <div class="col-sm-1" style="font-size:9pt;">:</div>
                                        <div class="col-sm-5" style="text-align: right; font-size: 9pt;">@( item.OCMCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6" style="font-size:9pt;">@Html.DisplayNameFor(modelItem => item.ProfitCost)</div>
                                        <div class="col-sm-1" style="font-size:9pt;">:</div>
                                        <div class="col-sm-5" style="text-align: right; font-size: 9pt;">@( item.ProfitCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )</div>
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-6" style="font-size:9pt;"><b>Total Mark-up</b></div>
                                        <div class="col-sm-1" style="font-size:9pt;">:</div>
                                        <div class="col-sm-5" style="text-align: right; font-size: 9pt;"><b>@( item.TotalMarkUp.ToString("C", new System.Globalization.CultureInfo("en-ph")) )</b></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6" style="font-size:9pt;"><b>@Html.DisplayNameFor(modelItem => item.VAT)</b></div>
                                        <div class="col-sm-1" style="font-size:9pt;">:</div>
                                        <div class="col-sm-5" style="text-align: right; font-size: 9pt;"><b>@( item.VAT.ToString("C", new System.Globalization.CultureInfo("en-ph")) )</b></div>
                                    </div>
                                    <hr class="pb-0 pt-0 mb-1 mt-1" />
                                    <div class="row">
                                        <div class="col-sm-6"><h6>Total Indirect Cost</h6></div>
                                        <div class="col-sm-1">:</div>
                                        <div class="col-sm-5" style="text-align:right"><h6>@( item.TotalIndirectCost.ToString("C", new System.Globalization.CultureInfo("en-ph")) )</h6></div>
                                    </div>
                                    <hr class="pb-0 pt-0 mb-1 mt-1" />
                                    <hr class="pb-0 pt-0 mb-1 mt-1" />
                                    <div class="row">
                                        <div class="col-sm-6"><h6>TOTAL AMOUNT:</h6></div>
                                        <div class="col-sm-1">:</div>
                                        <div class="col-sm-5" style="text-align:right"><h6>@( item.TotalAmount.ToString("C", new System.Globalization.CultureInfo("en-ph")) )</h6></div>
                                    </div>
                                </td>
                                <td style="text-align: center; vertical-align:top;">
                                    <div class="row mb-1">
                                        <div class="col-sm-12">
                                            <button type="button" style="width: 85px;" class="btn btn-sm btn-warning" onclick="window.location = '@Url.Action("add-material", "MaterialsCatalogue", new { Area = "infrastructure-unit", ID = item.ID, InfraProjectCode = Model.InfraProjectCode })'"><i class="fa fa-edit"></i> Update</button>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <button type="button" style="width: 85px;" class="btn btn-sm btn-danger" id="remove-btn" onclick="window.location.href = '@Url.Action("remove-material", "MaterialsCatalogue", new { Area = "infrastructure-unit", ItemID = item.ID, InfraProjectCode = Model.InfraProjectCode })'"><i class="fa fa-times"></i> Remove</button>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="1" align="right"><h5>Total Estimated Budget:</h5></td>
                            <td align="right"><h5>@( Model.ItemList.Sum(d => d.TotalAmount).ToString("C", new System.Globalization.CultureInfo("en-ph")))</h5></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group float-right">
                @if (Model.ItemList.Count > 0)
                {
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Post Estimates to Infrastructure Project</button>
                    <button type="button" class="btn btn-secondary" onclick='window.location = "@Url.Action("clear-estimates", "MaterialsCatalogue", new { Area = "infrastructure-unit", InfraProjectCode = Model.InfraProjectCode })"'><i class="fa fa-eraser"></i> Clear Estimates</button>
                }
                <button type="button" class="btn btn-danger" onclick='window.location = "@Url.Action("view-catalogue", "MaterialsCatalogue", new { Area = "infrastructure-unit", InfraProjectCode = Model.InfraProjectCode })"'><i class="fa fa-arrow-circle-left"></i> Back to Catalogue</button>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(function () {
        $('#items').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
    $(function () {
        $('#basket').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
        });
    });
    function CreateResult(data) {
        if (data.result == true) {
            swal.fire({
                title: "Estimates Posted!",
                text: "Estimates are successfully posted to Infrastructure Project.",
                icon: "success"
            }).then((result) => {
                if (result.value) {
                    window.location.href = "@Url.Action("details", "DetailedEStimates", new { Area = "infrastructure-unit", InfraProjectCode = Model.InfraProjectCode })";
                }
            })
        }
        else {
            swal.fire({
                title: "Record Not Saved!",
                text: "Saving record failed.",
                icon: "error"
            });
        }
    }
</script>