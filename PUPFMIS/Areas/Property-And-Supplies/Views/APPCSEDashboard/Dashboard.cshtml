<div class="row">
    <div class="col-sm-12">
        <div class="bg-info">
            <h5 class="p-2">Annual Procurement Plans (CSE) Actions</h5>
        </div>
    </div>
    <div class="col-lg-5 col-md-5 col-sm-12">
        <h6>Generate APP-CSE</h6>
        <table class="table table-hover table-striped" id="ppmpFiscalYears">
            <thead>
                <tr>
                    <th width="50%">Fiscal Year</th>
                    <th width="50%">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PPMPFiscalYears)
                {
                    <tr>
                        <td style="text-align:center;">@Html.DisplayFor(modelItem => item)</td>
                        <td style="text-align:center;"><button class="btn btn-primary btn-sm" onclick="window.location = '@Url.Action("create-cse", "APP_CSE", new { Area = "property-and-supplies", FiscalYear = item })'"><i class="fa fa-plus"></i> Generate APP-CSE</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-2 col-md-2 col-sm-12"></div>
    <div class="col-lg-5 col-md-5 col-sm-12">
        <h6>View APP-CSEs</h6>
        <table class="table table-hover table-striped" id="appFiscalYears">
            <thead>
                <tr>
                    <th width="50%">Fiscal Year</th>
                    <th width="50%">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.APPCSEReferences)
                {
                    <tr>
                        <td style="text-align:center;">@Html.DisplayFor(modelItem => item)</td>
                        <td><a href="@Url.Action("print-app-cse", "APP_CSE", new { Area = "property-and-supplies", ReferenceNo = item })" target="_blank" class="btn btn-sm btn-primary"><i class="fa fa-download"></i>&nbsp; Download</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $('#ppmpFiscalYears').DataTable({
            "paging": false,
            "pageLength": 3,
            "lengthChange": false,
            "searching": false,
            "ordering": false,
            "info": false,
            "autoWidth": false,
        });
    });

    $(function () {
        $('#appFiscalYears').DataTable({
            "paging": false,
            "pageLength": 3,
            "lengthChange": false,
            "searching": false,
            "ordering": false,
            "info": false,
            "autoWidth": false,
        });
    });
</script>