@model IEnumerable<PUPFMIS.Models.OfficeProjectsVM>

@{
    ViewBag.Title = "Project Procurement Plan";
    ViewBag.Description = "Approval";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i>@Html.ActionLink("PUP-FM Portal", "index", "Home")</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("PPMP", "index", new { area = "" })</li>
        <li class="breadcrumb-item">Home</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Office Projects Summary</h3>
}
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Office)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FiscalYear)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NoOfProjects)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalEstimatedBudget)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FiscalYear)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Office)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoOfProjects)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalEstimatedBudget)
                            </td>
                            <td>
                                @*<a href="@Url.Action("viewsummary","projectapprovals", new { area = "budget", FiscalYear = item.FiscalYear, Office = item.Office })">
                                    View Summary
                                </a>*@
                                @Html.ActionLink("View Summary", "view-summary", "projectapprovals", new { area = "budget", FiscalYear = item.FiscalYear, Office = item.Office }, null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
