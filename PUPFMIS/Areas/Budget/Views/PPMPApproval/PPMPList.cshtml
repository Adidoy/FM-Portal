@model IEnumerable<PUPFMIS.Models.PPMPListVM>

@{
    ViewBag.Title = "Budget Proposals";
    ViewBag.Description = "Accounts List";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@section BreadCrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-tachometer-alt"></i>&nbsp;@Html.ActionLink("PUP-FM Portal", "index", "Home", new { Area = "" }, null)</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("PPMP Approval", "dashboard", "Dashboard", new { Area = "budget" }, null)</li>
        <li class="breadcrumb-item">Accounts List</li>
    </ol>
}

@section Header {
    <h3 class="card-title"><i class="fa fa-list"></i> Accounts List</h3>
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-body table-responsive p-sm-0">
            <table class="table table-striped table-hover" id="example2">
                <thead>
                    <tr>
                        <th style="text-align:center;" width="20%">
                            @Html.DisplayNameFor(model => model.ReferenceNo)
                        </th>
                        <th style="text-align:center;" width="15%">
                            @Html.DisplayNameFor(model => model.UACS)
                        </th>
                        <th style="text-align:center;" width="35%">
                            @Html.DisplayNameFor(model => model.ObjectClassification)
                        </th>
                        <th style="text-align:center;" width="15%">
                            @Html.DisplayNameFor(model => model.EstimatedBudget)
                        </th>
                        <th style="text-align:center;" width="15%">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:left">
                                <b>@Html.DisplayFor(modelItem => item.ReferenceNo)</b>
                                <br />
                                <i>@Html.DisplayFor(modelItem => item.PPMPType.GetAttribute<System.ComponentModel.DataAnnotations.DisplayAttribute>().Name)</i>
                            </td>
                            <td style="text-align:center">
                                <b>@Html.DisplayFor(modelItem => item.UACS)</b>
                            </td>
                            <td style="text-align:left">
                                @Html.DisplayFor(modelItem => item.ObjectClassification)
                            </td>
                            <td style="text-align:right">
                                @( item.EstimatedBudget.ToString("C", new System.Globalization.CultureInfo("en-ph")) )
                            </td>
                            <td style="text-align:center">
                                <button class="btn btn-sm btn-primary" onclick="window.location = '@Url.Action("evaluate", "PPMPApproval", new { Area = "budget", ReferenceNo = item.ReferenceNo })'"><i class="fa fa-search"></i> View Items</button>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" align="right"><h6><b>Total Estimated Budget:</b></h6></td>
                        <td align="right"><h6><b>@( Model.Sum(d => d.EstimatedBudget).ToString("C", new System.Globalization.CultureInfo("en-ph")) )</b></h6></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div style="text-align: right;">
            <button type="button" class="btn btn-md btn-danger" onclick="window.location = '@Url.Action("offices-list", "PPMPApproval", new { Area = "budget", FiscalYear = ViewBag.FiscalYear })'"><i class="fa fa-arrow-circle-left"></i> Back to Offices List</button>
        </div>
    </div>
</div>